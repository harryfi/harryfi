@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels
@model PagedList.IPagedList<PromptBarangViewModel>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<style>
    #loading_promptbuyer_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_promptbuyer_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_promptbuyer_tab">
    <div id="loading_promptbuyer_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 130px;">Kode Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">Nama Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 50px; max-width: 50px;">Pilih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var buyer in Model)
        {
            <tr>
                <td>@buyer.KODE</td>
                <td>@buyer.NAMA</td>
                <td class="edit-hapus-col">
                    <button class="btn btn-primary" onclick="pilihPrompt('@buyer.KODE')">
                        <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageCount > 1)
{
    <div id="tabelpromptbarangpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("TablePromptBuyerPartial", new
    {
       page,
       search = ViewData["searchParam"]
    }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    </div>
}
<script type="text/javascript">

    $(function () {
        $('#tabelpromptbuyerpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                var link = this.href;
                link += "&search=replaceSearch";
                link = link.replace("replaceSearch", $('#search_promptbuyer').val());

                $.ajax({
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_promptbuyer_tab').show();
                    },
                    success: function (response) {
                        $('#table-prompt-buyer-partial').html(response);
                        $('#table-prompt-buyer-partial').show();
                        $('#loading_promptbuyer_tab').hide();
                    }
                });
            }
            return false;

        });
    });
</script>


