@section scripts
{
    <script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

    <script>
        var promptCust = "";
        var promptBrg = "";
        $(document).ready(function () {
            var d = new Date();

            //change by nurul 6/11/2018
            //$('#DrTanggal').datepicker({
            //    format: 'dd/mm/yyyy',
            //    language: 'id',
            //}).datepicker('setDate', d);

            //$('#SdTanggal').datepicker({
            //    format: 'dd/mm/yyyy',
            //    language: 'id'
            //}).datepicker('setDate', '0');
            $('#DrTanggal').datepicker({
                format: 'dd/mm/yyyy',
                language: 'id',
            }).datepicker('setDate', d).change(function () {
                $('#DrTanggal').val($(this).val());
                $(this).datepicker('hide');
            });

            $('#SdTanggal').datepicker({
                format: 'dd/mm/yyyy',
                language: 'id'
            }).datepicker('setDate', '0').change(function () {
                $('#SdTanggal').val($(this).val());
                $(this).datepicker('hide');
            });
            //end change


            $('#prompt-daricust').click(function () {
                promptCust = "1";
                var $link = '@Url.Action("PromptCustomer", "Report")';
                window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
            });
            $('#prompt-sdcust').click(function () {
                promptCust = "2";
                var $link = '@Url.Action("PromptCustomer", "Report")';
                window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
            });

            $('#preview-report').click(function () {
                $('#loading_spinner').show();
                previewing();
            });
        });

        function formatDateToYYYYmmDD(a) {
            var d;
            if (a == 1) {

                d = $('#DrTanggal').val();
            }
            else if (a == 2) {

               d = $('#SdTanggal').val();
            }

            var month = '' + (d.slice(3, 5));
            var day = '' + (d.slice(0, 2));
            var year = (d.slice(6, 10));
            return [year, month, day].join('/');
        }
        var tanggalcutoff = "";
        function previewing() {
            //if (selisihValid()) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Preview17", "Report")',
                    data: JSON.stringify({
                        UserId: '@(userId)',
                        FromCust: $('#FromCust').val(),
                        ToCust: $('#ToCust').val(),
                        DrTanggal: formatDateToYYYYmmDD(1),
                        SdTanggal: formatDateToYYYYmmDD(2)
                    }),
                    contentType: 'application/json; charset=UTF-8',
                    cache: false,
                    success: function (data) {
                        //console.log(data);
                        $("<iframe id='LoadReportMO'>")// create a new iframe element
                            .hide()//invisible
                            .load(function () {
                                $('#loading_spinner').hide();
                                setTimeout(function () { $("#LoadReportMO").remove(); }, 30000);
                            })
                            .attr("src", data)//load the page
                            .appendTo("body");
                    },
                    error: function (xhr) {
                        console.log(xhr);
                        $('#loading_spinner').hide();
                    }
                });
            //}
        }

        function afterPromptCustomer(cust) {
            if (promptCust == "1") {
                $('#FromCust').val(cust);
            }
            else if (promptCust == "2") {
                $('#ToCust').val(cust);
            }
            promptCust = "";
        }

    </script>
}
