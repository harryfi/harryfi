@section scripts
{
    <script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

    <script>
        var promptBrg = "";
        var promptGudang = "";
        $(document).ready(function () {
            var d = new Date();

            //change by nurul 6/11/2018
            //$('#DateHidden').datepicker({
            //    format: 'yyyy/mm/dd',
            //    language: 'id'
            //}).datepicker('setDate', '0');

            //$('#DrBulan').datepicker({
            //    format: '01 MM',
            //    language: 'id',
