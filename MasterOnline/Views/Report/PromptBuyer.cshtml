@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            refreshTablePromptBuyer();
            $('#search_promptbuyer').keypress(function (e) {
                var key = e.which;
                if (key == 13)// the enter key code
                {
                    searchTablePromptBuyer();
                    return false;
                }
            });
            $('#search_promptbuyer_click').click(function () {
                searchTablePromptBuyer();
            });
        });

        function pilihPrompt($value) {
            self.window.close();
            window.onunload = refreshTextBox;
            function refreshTextBox() {
                window.opener.afterPromptBuyer($value);
            }
        }

        function refreshTablePromptBuyer() {
            var $link = '@Html.Raw(Url.Action("TablePromptBuyerPartial", "Report", new { page = "replaceLastPage", search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_promptbuyer').val());
            $link = $link.replace("replaceLastPage", $('#txt_last_page_1').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-prompt-buyer-partial').hide();
                    $('#loading_promptbuyer_tab').show();
                },
                success: function (response) {
                    $('#table-prompt-buyer-partial').html(response);

                    $('#table-prompt-buyer-partial').show();

                    $('#loading_promptbuyer_tab').hide();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function searchTablePromptBuyer() {
            var $link = '@Html.Raw(Url.Action("TablePromptBuyerPartial", "Report", new { search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_promptbuyer').val());

            $.ajax({
                    url: $link,
                    type: "GET",
                    cache: false,
                    beforeSend: function () {
                        $('#loading_promptbuyer_tab').show();
                    },
                    success: function (response) {

                        $('#table-prompt-buyer-partial').html(response);
                        $('#table-prompt-buyer-partial').show();
                        $('#loading_promptbuyer_tab').hide();
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
            });
        }
    </script>
}