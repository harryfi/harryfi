@using MasterOnline.ViewModels

@{
    ViewBag.Title = "Cetak Rekap Buku Besar";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    var context = new MoDbContext();
    var dataSession = Session["SessionInfo"] as AccountUserViewModel;

    var userId = "";
    if (dataSession?.User != null)
    {
        var accId = context.User.Single(u => u.Username == dataSession.User.Username).AccountId;
        userId = context.Account.Single(a => a.AccountId == accId).DatabasePathErasoft;
        context.Dispose();
    }
    else
    {
        userId = dataSession?.Account?.DatabasePathErasoft;
    }
}

@section styles
{
    <link href="~/Content/build/css/bootstrap-datepicker.min.css" rel="stylesheet" />
}

<h2>Cetak Rekap Buku Besar</h2>

<div class="row">
    <div class="col-md-1">
        @Html.Label("", "Tahun")
        <div class="input-group number">
            @Html.TextBox("Tahun", null, new { @class = "form-control", @MaxLength = "4" })
        </div>
    </div>
    <div class="col-md-11">
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        @Html.Label("", "Dari Bulan")
        <div class="input-group number">
            @Html.TextBox("DrBulan", null, new { @class = "form-control", @ReadOnly = true })
        </div>
    </div>
    <div class="col-md-2">
        @Html.Label("", "S/d Bulan")
        <div class="input-group number">
            @Html.TextBox("SdBulan", null, new { @class = "form-control", @ReadOnly = true })
        </div>
    </div>
    <div class="col-md-8">
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        @Html.Label("", "Dari Kode Rekening")
        <div class="input-group text">
            @Html.TextBox("DrRek", "", new { @class = "form-control", @MaxLength = "10" })
            <span class="input-group-btn">
                <button id="prompt-drkdrek" class="btn btn-default" type="button" style="height: 34px;">
                    <span class="glyphicon glyphicon-option-horizontal"></span>
                </button>
            </span>
        </div>
    </div>
    <div class="col-md-2">
        @Html.Label("", "Sampai Kode Rekening")
        <div class="input-group text">
            @Html.TextBox("SdRek", "ZZZ", new { @class = "form-control", @MaxLength = "10" })
            <span class="input-group-btn">
                <button id="prompt-sdkdrek" class="btn btn-default" type="button" style="height: 34px;">
                    <span class="glyphicon glyphicon-option-horizontal"></span>
                </button>
            </span>
        </div>
    </div>
    <div class="col-md-8">
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Label("", "Tipe Cetak")
        <div class="input-group text">
            <select class="form-control" id="Type" name="Type" required="required">
                @*<option></option>*@
                <option value="0">Bermutasi/Bersaldo</option>
                @*<option value="1">Bermutasi</option>*@
                <option value="1">Semua</option>
            </select>
        </div>
    </div>
    <div class="col-md-9">
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        @Html.Label("", "Nolkan Saldo Awal Rekening Pendapatan/Biaya")
        <div class="input-group text">
            <select class="form-control" id="Nol" name="Nol" required="required">
                @*<option></option>*@
                <option value="0">Ya</option>
                <option value="1">Tidak</option>
            </select>
        </div>
    </div>
    <div class="col-md-5">
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Label("", "Status Posting")
        <div class="input-group text">
            <select class="form-control" id="Posting" name="Posting" required="required">
                @*<option></option>*@
                <option value="0">Sudah Posting</option>
                <option value="1">Semua</option>
            </select>
        </div>
    </div>
    <div class="col-md-9">
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary" id="preview-report">Preview Report</button>
    </div>
</div>
<br />
<br />
<div class="row text-center">
    <object id="pdf_viewer" data="#" type="application/pdf" width="1079" height="600"></object>
</div>

@section scripts
{
    <script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

    <script>
        var promptKdRek = "";
        $(document).ready(function () {
            var d = new Date();

            $('#DrBulan').datepicker({
                format: 'MM',
                language: 'id',
                minViewMode: 1
            }).datepicker('setDate', d);

            $('#SdBulan').datepicker({
                format: 'MM',
                language: 'id',
                minViewMode: 1
            }).datepicker('setDate', d);

            $('#Tahun').val(d.getFullYear());

            $('#prompt-drkdrek').click(function () {
                promptKdRek = "1";
                var $link = '@Url.Action("PromptKodeRekening", "Report")';
                window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
            });

            $('#prompt-sdkdrek').click(function () {
                promptKdRek = "2";
                var $link = '@Url.Action("PromptKodeRekening", "Report")';
                window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
            });

            $('#preview-report').click(function() {
                previewing();
            });
        });

        function FormatMonth(a) {
            var d;
            if (a == 1) {
                d = new Date($('#DrBulan').val() + ' ' + $('#Tahun').val());
                return d.getMonth() + 1;
            }
            else if (a == 2) {
                d = new Date($('#SdBulan').val() + ' ' + $('#Tahun').val());
                return d.getMonth() + 1;
            }

        }

        function FormatPosting(a) {
            var x;

        }
        function previewing() {
            //if (selisihValid()) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Preview12", "Report")',
                    data: JSON.stringify({
                        UserId: '@(userId)',
                        Tahun: $('#Tahun').val(),
                        DrRek: $('#DrRek').val(),
                        SdRek: $('#SdRek').val(),
                        Type: $('#Type').val(),
                        Nol: $('#Nol').val(),
                        Posting: $('#Posting').val(),
                        DrBulan: FormatMonth(1),
                        SdBulan: FormatMonth(2)

                    }),
                    contentType: 'application/json; charset=UTF-8',
                    cache: false,
                    success: function (data) {
                        console.log(data);
                        $("<iframe id='LoadReportMO'>")// create a new iframe element
                            .hide()//invisible
                            .load(function () {
                                setTimeout(function () { $("#LoadReportMO").remove(); }, 30000);
                            })
                            .attr("src", data)//load the page
                            .appendTo("body");

                    },
                    error: function (xhr) {
                        console.log(xhr);
                    }
                });
            //}
        }
        function afterPromptKodeRek(kode) {
            if (promptKdRek == "1") {
                $('#DrRek').val(kode);
            }
            else if (promptKdRek == "2") {
                $('#SdRek').val(kode);
            }
            promptKdRek = "";
        }
    </script>
}
