@using MasterOnline.ViewModels

@{
    ViewBag.Title = "Posting";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    var context = new MoDbContext();
    var dataSession = Session["SessionInfo"] as AccountUserViewModel;

    var userId = "";
    if (dataSession?.User != null)
    {
        var accId = context.User.Single(u => u.Username == dataSession.User.Username).AccountId;
        userId = context.Account.Single(a => a.AccountId == accId).DatabasePathErasoft;
        context.Dispose();
    }
    else
    {
        userId = dataSession?.Account?.DatabasePathErasoft;
    }
}

@section styles
{
    <link href="~/Content/build/css/bootstrap-datepicker.min.css" rel="stylesheet" />
}

<h2>Posting</h2>

<div class="row">
    <div class="col-md-2">
        @Html.Label("", "Tahun")
        <div class="input-group number">
            @Html.TextBox("Tahun", null, new { @class = "form-control", @MaxLength = "4" })
        </div>
    </div>
    <div class="col-md-2">
        @Html.Label("", "Bulan")
        <div class="input-group number">
            @Html.TextBox("Bulan", null, new { @class = "form-control", @ReadOnly = true })
        </div>
    </div>
    <div class="col-md-8">
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        @Html.Label("", "Dari Tanggal")
        <div class="input-group number">
            @Html.TextBox("DrTgl", null, new { @class = "form-control", @ReadOnly = true })
        </div>
    </div>
    <div class="col-md-2">
        @Html.Label("", "Sampai Tanggal")
        <div class="input-group number">
            @Html.TextBox("SdTgl", null, new { @class = "form-control", @ReadOnly = true })
        </div>
    </div>
    <div class="col-md-8">
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary" id="process-posting">Process</button>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <label class="labelPosting">Status : Siap Memulai Posting</label>
        <div class="progress">
            <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar"
                 aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                0% Complete (success)
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        @Html.TextArea("infoPosting", null, new { @class = "form-control", @Rows = 12, @ReadOnly = true })
    </div>
    <div class="col-md-2">
        <ul class="list-group">
            <li id="bannerPembelian" style="text-align:center;margin-bottom:2px" class="list-group-item list-group-item-light">Posting Pembelian</li>
            <li id="bannerPersediaan" style="text-align:center;margin-bottom:2px" class="list-group-item list-group-item-light">Posting Persediaan</li>
            <li id="bannerPenjualan" style="text-align:center;margin-bottom:2px" class="list-group-item list-group-item-light">Posting Penjualan</li>
            <li id="bannerHutang" style="text-align:center;margin-bottom:2px" class="list-group-item list-group-item-light">Posting Hutang</li>
            <li id="bannerPiutang" style="text-align:center;margin-bottom:2px" class="list-group-item list-group-item-light">Posting Piutang</li>
            <li id="bannerJurnal" style="text-align:center" class="list-group-item list-group-item-light">Posting Jurnal</li>

            @*<li class="list-group-item list-group-item-success">Success item</li>
                <li class="list-group-item list-group-item-secondary">Secondary item</li>
                <li class="list-group-item list-group-item-info">Info item</li>
                <li class="list-group-item list-group-item-warning">Warning item</li>
                <li class="list-group-item list-group-item-danger">Danger item</li>
                <li class="list-group-item list-group-item-primary">Primary item</li>
                <li class="list-group-item list-group-item-dark">Dark item</li>
                <li class="list-group-item list-group-item-light">Light item</li>*@
        </ul>
    </div>
    <div class="infoPost"></div>
</div>

@section scripts
{
    <script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

    <script>
        var promptSupp = "";
        var promptBrg = "";
        $(document).ready(function () {
            var d = new Date();

            $('#Tahun').val(d.getFullYear());

            $('#Bulan').datepicker({
                format: 'MM',
                language: 'id',
                minViewMode: 1
            }).datepicker('setDate', d);

            $('#DrTgl').datepicker({
                format: 'dd',
                language: 'id',
                minViewMode: 0
            }).datepicker('setDate', d);

            $('#SdTgl').datepicker({
                format: 'dd',
                language: 'id',
                minViewMode: 0
            }).datepicker('setDate', d);

            $('#process-posting').click(function () {
                $('.labelPosting').html('Status : Proses sedang dimulai..');
                $('#bannerPembelian').attr('class', 'list-group-item list-group-item-light');
                $('#bannerPersediaan').attr('class', 'list-group-item list-group-item-light');
                $('#bannerPenjualan').attr('class', 'list-group-item list-group-item-light');
                $('#bannerHutang').attr('class', 'list-group-item list-group-item-light');
                $('#bannerPiutang').attr('class', 'list-group-item list-group-item-light');
                $('#bannerJurnal').attr('class', 'list-group-item list-group-item-light');
                previewing();
            });
        });

        function FormatMonth() {
            var d;
            d = new Date($('#Bulan').val() + ' ' + 2018);
            return d.getMonth() + 1;
        }

        function formatDateToYYYYmmDD(a) {
            var d;
            if (a == 1) {

                d = $('#DrTanggal').val();
            }
            else if (a == 2) {

                d = $('#SdTanggal').val();
            }

            var month = '' + (d.slice(3, 5));
            var day = '' + (d.slice(0, 2));
            var year = (d.slice(6, 10));
            return [year, month, day].join('/');
        }

        var tanggalcutoff = "";
        function previewing() {
            if ($('#LoadPostingMO').length) {

            }
            else {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("doPosting", "Posting")',
                    data: JSON.stringify({
                        UserId: '@(userId)',
                        Month: FormatMonth(),
                        Year: $('#Tahun').val(),
                        From: $('#DrTgl').val(),
                        To: $('#SdTgl').val()
                    }),
                    contentType: 'application/json; charset=UTF-8',
                    cache: false,
                    success: function (data) {
                        $("<iframe id='LoadPostingMO' width='802px' height='90px' frameBorder='0'>")// create a new iframe element
                            .hide()//invisible
                            .load(function () {

                            })
                            .attr("src", data)
                            .appendTo(".infoPost");
                        //console.log(data);

                    },
                    error: function (xhr) {
                        console.log(xhr);
                    }
                });
            }
        }

        window.addEventListener('message', function (event) {

            //if (~event.origin.indexOf('http://202.67.14.92')) {
            if (~event.origin.indexOf('https://report.masteronline.co.id') || ~event.origin.indexOf('https://devreport.masteronline.co.id')) {
                if (event.data.event_id == 'progressbar') {

                    $('.labelPosting').html('Status : ' + event.data.nama);
                    $('.progress-bar').css('width', event.data.data + '%').attr('aria-valuenow', event.data.data);
                    $('.progress-bar').html(event.data.data + '% Complete');
                }
                else if (event.data.event_id == 'infoPosting') {
                    //$('.labelPosting').html(event.data.nama);
                    $('.progress-bar').css('width', '100%').attr('aria-valuenow', 100);
                    $('.progress-bar').html('100% Complete');
                    $('#infoPosting').val($('#infoPosting').val() + event.data.data.trim() + '\r\n');
                    $('#banner' + event.data.nama).attr('class', 'list-group-item list-group-item-success');
                }
                else if (event.data.event_id == 'infoPostingSelesai') {
                    $('.labelPosting').html('Status : Proses Selesai.');
                    $('.progress-bar').css('width', '100%').attr('aria-valuenow', 100);
                    $('.progress-bar').html('100% Complete');
                    $('#infoPosting').val($('#infoPosting').val() + event.data.data.trim() + '\r\n');
                    $('#bannerJurnal').attr('class', 'list-group-item list-group-item-success');
                    setTimeout(function () { $("#LoadPostingMO").remove(); }, 2000);
                }
            } else {
                return;
            }
        });
    </script>
}
