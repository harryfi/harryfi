@using System.Globalization
@using MasterOnline.Models
@model MasterOnline.ViewModels.DashboardAdminViewModel

<table class="table table-bordered table-striped" id="table-CS">
    @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
    <thead>
        <tr>
            <th class="text-center" style="max-width:10px">No.</th>
            <th class="text-center">Total Daftar</th>
            <th class="text-center">Jumlah Customer</th>
            @*//add by nurul 24/4/2019*@
            <th class="text-center">Akan Expired</th>
            <th class="text-center">Sudah Expired</th>
            @*//end add by nurul 24/4/2019*@
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="text-center" style="max-width:10px">1</td>
            <td>Tidak Aktif</td>
            <td>@Model.ListAccount.Where(a => a.Status == false).Count()</td>

            <td>@Model.ListAccountCS.Where(a => a.Status == false).Count()</td>
            <td>@Model.ListAccounteX.Where(a => a.Status == false).Count()</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px">2</td>
            <td>Aktif</td>
            <td>@Model.ListAccount.Where(a => a.Status == true).Count()</td>

            <td>@Model.ListAccountCS.Where(a => a.Status == true).Count()</td>
            <td>@Model.ListAccounteX.Where(a => a.Status == true).Count()</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px"></td>
            <td>- Basic</td>
            <td>@Model.ListAccount.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "01").Count()</td>

            <td>@Model.ListAccountCS.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "01").Count()</td>
            <td>@Model.ListAccounteX.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "01").Count()</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px"></td>
            <td>- Silver</td>
            <td>@Model.ListAccount.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "02").Count()</td>

            <td>@Model.ListAccountCS.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "02").Count()</td>
            <td>@Model.ListAccounteX.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "02").Count()</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px"></td>
            <td>- Gold</td>
            <td>@Model.ListAccount.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "03").Count()</td>

            <td>@Model.ListAccountCS.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "03").Count()</td>
            <td>@Model.ListAccounteX.Where(a => a.Status == true && a.KODE_SUBSCRIPTION == "03").Count()</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px">3</td>
            <td>Pembayaran</td>
            <td></td>

            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px"></td>
            <td>- Per 3 Bulan</td>
            <td>@Model.Three</td>

            <td>-</td>
            <td>-</td>
        </tr>
        <tr>
            <td class="text-center" style="max-width:10px"></td>
            <td>- Per 12 Bulan</td>
            <td>@Model.Twelve</td>

            <td>-</td>
            <td>-</td>
        </tr>
    </tbody>
</table>