@using PagedList
@using System.Globalization
@model MasterOnline.ViewModels.PartnerViewModel
@{
    ViewBag.Title = "Partner";
    Layout = "~/Views/Shared/_LayoutAdminCS.cshtml";

    //var editMode = 0;

    //if (ViewData["Editing"] != null)
    //{
    //    editMode = (int)ViewData["Editing"];
    //}
}

@section styles
{
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" />

    <style>
        .user-link {
            text-decoration: underline;
        }

        #akun-section {
            margin-top: 60px;
            background: white;
            padding: 20px;
        }

        /*add by nurul 18/2/2019*/
        .logo_perusahaan_section {
            padding: 0 10px 10px 10px;
        }

            .logo_perusahaan_section > .box_upload {
                width: 200px;
                height: 200px;
                border: dashed 1.5px #bbb;
                border-radius: 10px;
                background-color: #f7f7f7;
                background-image: url('');
                text-align: center;
                display: table;
                cursor: pointer;
            }

        .box_upload > .box_upload_placeholder {
            color: #ccc;
            font-size: 20px;
            display: table-cell;
            vertical-align: middle;
        }

        .btn_hapus_logo {
            position: absolute;
            bottom: 25px;
            left: 20px;
        }
        /*add by nurul 18/2/2019*/
    </style>
}

<div class="row" id="akun-section">
    <div class="col-lg-12 col-md-12">
        <div class="row partner_table_section">
            <div class="row">
                <div class="col-lg-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        foreach (var modelError in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                        {
                            <div class="alert alert-danger">
                                <span class="message-error">@modelError.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="input-group">
                        <input id="search_partner" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_partner_click" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="table-partner-partial" class="col-lg-12">
                </div>
            </div>
        </div>
        <div class="row partner_editor_section" style="display: none;">
            <div class="col-lg-12">
                <div class="page-editor">
                    <h2 class="editor-title">Komisi Partner</h2>
                    <span class="title-accent"></span>
                    <button type="button" class="pull-right page-close">
                        <span class="close-btn thick"></span>
                    </button>
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2 style="font-size: 16px">Detail Komisi Partner</h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li>
                                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                                        {
                                            foreach (var modelError in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                                            {
                                                <div class="alert alert-danger">
                                                    <span class="message-error">@modelError.ErrorMessage</span>
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                            }
                                        }
                                        <br>
                                        @using (Html.BeginForm("SaveKomisiCS", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-partner" }))
                                        {
                                        <div id="form-partial"></div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*end add by nurul 15/2/2019*@
    </div>
</div>

<div class="modal fade" id="konfUbahStatus" tabindex="-1" role="dialog" aria-labelledby="konfUbahStatusLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="konfUbahStatusLabel">Konfirmasi</h4>
            </div>
            <div class="modal-body">
                <div class="row text-center">
                    <h4>Apakah Anda yakin ingin <span id="will-change-to"></span><br /> status partner <b id="partner-name"></b>?</h4>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tidak</button>
                <button type="button" class="btn btn-success" onclick="ubahStatusPartner()">Ya</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="//cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var $partnerId = 0;
        var $status = 0;

        $(document).on('ready',
            function () {
                refreshTablePartner();
                $('#search_partner').keypress(function (e) {
                    var key = e.which;
                    if (key == 13)// the enter key code
                    {
                        searchTablePartner();
                        return false;
                    }
                });
                $('#search_partner_click').click(function () {
                    searchTablePartner();
                });

                //add by nurul 15/2/2019
                $('button>.close-btn').on('click', function () {
                    $('.partner_table_section').show();
                    $('.partner_editor_section').hide();
                    $('#photo_base').hide();
                });

                if ($('.message-error').text() !== '' ) {
                    $('.partner_table_section').hide();
                    $('.partner_editor_section').show();
                    $('#photo_base').hide();
                }

                $('.close-btn').click(function() {
                    location.href = '@Url.Action("PartMenu")';
                });

                $('#partner_komisi_subscribe').change(function () {
                    $(this).val(convertToRupiah($(this).val()));
                });

                $('#partner_komisi_subscribe_gold').change(function () {
                    $(this).val(convertToRupiah($(this).val()));
                });

                $('#partner_komisi_support').change(function () {
                    $(this).val(convertToRupiah($(this).val()));
                });

                var $linkLogo = '@Model.partner.PhotoKtpUrl';

                $.ajax({
                    url: $linkLogo,
                    type: 'GET',
                    success: function () {
                        $('#box_upload_logo').css({
                            'background-image': 'url("' + $linkLogo + '")',
                            'background-size': 'cover'
                        });
                        $('#box_upload_logo span').hide();
                    },
                    error: function () {
                    }
                });

                $('#partner_status').change(function () {
                    ubahStatusPartner();
                });
                //end add by nurul 15/2/2019
            });

        function passId(partnerId, status, partnerName) {
            this.$partnerId = partnerId;
            this.$status = status;

            $('#partner-name').text(partnerName);

            if (this.$status === 1) {
                $('#will-change-to').text("menonaktifkan");
            } else {
                $('#will-change-to').text("mengaktifkan");
            }
        }

        function ubahStatusPartner() {
            var link = '@Url.Action("ChangeStatusPart", "Admin", new { partnerId = "replaceId" })';
            link = link.replace("replaceId", this.$partnerId);

            location.href = link;
        }

        //add by nurul 15/2/2019

        function editKomisi($Id) {
            var link = '@Url.Action("EditKomisiCS", "Admin", new { partnerId = "replaceId" })';
            link = link.replace("replaceId", $Id);

            //location.href = link;
            $.ajax({
                type: "GET",
                url: link,
                beforeSend: function () {
                },
                success: function (response) {

                    $('.partner_table_section').hide();
                    $('.partner_editor_section').show();


                    $('#form-partial').html(response);
                    $('#photo_base').hide();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                    $('#loading_spinner').hide();
                }
            });

        }

        function convertToRupiah(angka) {
            var rupiah = '';
            var angkarev = angka.toString().split('').reverse().join('');
            for (var i = 0; i < angkarev.length; i++) if (i % 3 === 0) rupiah += angkarev.substr(i, 3) + '.';
            return rupiah.split('', rupiah.length - 1).reverse().join('');
        }

        function convertToAngka(rupiah) {
            return parseInt(rupiah.replace(/,.*|[^0-9]/g, ''), 10);
        }

        function simpanKomisi(btnClicked, $ID) {
                var subs = $('#partner_komisi_subscribe').val();
                var supp = $('#partner_komisi_support').val();
                var gold = $('#partner_komisi_subscribe_gold').val();
                if (subs == "") {
                        subs = "0";
                }
                if (supp == "") {
                        supp = "0";
                }
                if (gold == "") {
                        gold = "0";
                }
                $('#partner_komisi_support').val(convertToAngka(supp));
                $('#partner_komisi_subscribe').val(convertToAngka(subs));
                $('#partner_komisi_subscribe_gold').val(convertToAngka(gold));


            var $form = $(btnClicked).parents('form');

            @*var link = '@Url.Action("ChangeStatusPart", "Admin", new { partnerid = "replaceId" })';
            link = link.replace("replaceId", $ID);*@

            $.ajax({
                type: "GET",
                url: '@Url.Action("ChangeStatusPart", "Admin")',
                data: $('#form-partner').serialize(),
                success: function (res) {
                $.ajax({
                type: "POST",
                url: $form.attr('action'),
                    data: $form.serialize(),
                        success: function (response) {
                            alert('Data berhasil tersimpan');

                            $('#form-partial').html(response);
                            $('.subs_table_section').hide();
                            $('.payment_editor_section').show();
                            $('#photo_base').hide();

                            $('#KODESUBS').val($('#Payment_TipeSubs').val());
                            $('#ACCOUNT').val($('#Payment_Email').val());
                            getTanggal();
                            getEmail();
                            $("#ACCOUNT").attr('disabled', 'disabled');
                            if ($('#Payment_TanggalBayar').val() != '') {
                                $('#TGL').val($('#Payment_TanggalBayar').val());
                            }
                            if ($('#Payment_DrTGL').val() != '') {
                                $('#drTGL').val($('#Payment_DrTGL').val());
                            }
                            if ($('#Payment_SdTGL').val() != '') {
                                $('#sdTGL').val($('#Payment_SdTGL').val());
                            }
                            $('#KODESUBS').change(function () {
                                $("#Payment_TipeSubs").val($('#KODESUBS').val())
                            });
                            $("#KODESUBS").change(
                                function () {
                                    if ($("#KODESUBS").val() == "03") {
                                        $("#Payment_jumlahUser").val('5');
                                    } else if ($("#KODESUBS").val() == "02") {
                                        $("#Payment_jumlahUser").val('2');
                                    } else {
                                        $("#Payment_jumlahUser").val('0');
                                    }
                                });
                        },
                        error: function (xhr, status, error) {
                            console.log(error);
                        }
                    });
            },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });

        }
        //end add by nurul 15/2/2019

        function refreshTablePartner() {
            var $link = '@Html.Raw(Url.Action("RefreshTablePart", "Admin", new { page = "replaceLastPage", search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_partner').val());
            $link = $link.replace("replaceLastPage", $('#txt_last_page').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-partner-partial').hide();
                    $('#loading_partner_tab').show();
                },
                success: function (response) {
                    $('#table-partner-partial').html(response);
                    $('#loading_partner_tab').hide();
                    $('#table-partner-partial').show();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
        function searchTablePartner(){
            var $link = '@Html.Raw(Url.Action("RefreshTablePart", "Admin", new { search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_partner').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#search_partner_click')[0].disabled = true;
                    $('#loading_partner_tab').show();
                },
                success: function (response) {
                    $('#search_partner_click')[0].disabled = false;
                    $('#table-partner-partial').html(response);
                    $('#loading_partner_tab').hide();
                },
                error: function (xhr, status, error) {
                    $('#search_partner_click')[0].disabled = false;
                    console.log(error);
                }
            });
        }
    </script>
}