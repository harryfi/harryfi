@if (Model.PageCount > 1)
{
    <div id="tabelakunpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshAccMenu", new
   {
       page,
       search = ViewData["searchParam"]
   }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelakunpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_akun_tab').show();
                    },
                    success: function (response) {
                        $('#table-account').html(response);
                        $('#loading_akun_tab').hide();
                    }
                });
                return false;
            }
        });
    });
</script>