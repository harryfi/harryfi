@using System.Globalization
@model MasterOnline.ViewModels.PromoViewModel
@{
    ViewBag.Title = "Promo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var editMode = 0;

    if (ViewData["Editing"] != null)
    {
        editMode = (int)ViewData["Editing"];
    }
}

@section styles
{
    <style>
        #promo-section {
            margin-top: 60px;
            background: white;
            padding: 20px;
        }
    </style>
}


<div class="row" id="promo-section">
    <div class="col-lg-12 col-md-12">
        <div class="row promo_table_section">
            <div class="col-lg-4 col-sm-6">
                <div class="input-group">
                    <input id="search_promo" type="text" class="form-control" placeholder="Pencarian">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-lg-8 col-sm-6">
                <div class="pull-right">
                    <button type="button" class=" btn btn-default" data-style="expand-right">
                        <span>Refresh</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="row promo_table_section">
            <div class="col-sm-12">
                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @ViewData["SuccessMessage"].ToString()
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    foreach (var modelError in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                    {
                        <div class="alert alert-danger">
                            @modelError.ErrorMessage
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                }
                <table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 30px;">Email Referer</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">HP Referer</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 70px;">Email Target</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 70px;">HP Target</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Tgl. Input</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Tgl. Reply</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Paid</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Block</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var promo in Model.ListPromo)
                            {
                                <tr>
                                    <td class="text-center">@promo.EMAIL_REF</td>
                                    <td class="text-center">@promo.HP_REF</td>
                                    <td class="text-center">@promo.EMAIL</td>
                                    <td class="text-center">@promo.HP</td>
                                    <td class="text-center">@(promo.TGL?.ToString("dd/MM/yyyy"))</td>
                                    <td class="text-center">@promo.TGL_REPLY</td>
                                    <td class="edit-hapus-col">
                                        <button class="btn btn-primary" onclick="paidPromo(@promo.RecNum)">
                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                    <td class="edit-hapus-col">
                                        <button class="btn btn-danger" data-toggle="modal" data-target="#konfBlockPromo" onclick="pass(@promo.RecNum)">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="konfBlockPromo" tabindex="-1" role="dialog" aria-labelledby="konfBlockPromoLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="konfBlockPromoLabel">Konfirmasi</h4>
            </div>
            <div class="modal-body">
                <div class="row text-center">
                    <h4>Apakah Anda yakin ingin memblokir promo ini?</h4>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tidak</button>
                <button type="button" class="btn btn-success" onclick="blockPromo()">Ya</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        var $promoId = 0;

        $(document).on('ready',
            function () {
                var table = $('#datatable').DataTable();

                $('#search_promo').keyup(function () {
                    table.search($(this).val()).draw();
                });

                $('#tambah_promo').on('click', function () {
                    $('.promo_table_section').toggle('display');
                    $('.promo_editor_section').toggle('display');
                });

                $('button>.close-btn').on('click', function () {
                    $('.promo_table_section').toggle('display');
                    $('.promo_editor_section').toggle('display');
                });

                if ($('.message-error').text() !== '' || @editMode === 1) {
                    $('#tambah_promo').click();
                }

                $('.close-btn').click(function() {
                    location.href = '@Url.Action("Promo")';
                });
            });

        function paidPromo(promoId) {
            var link = '@Url.Action("PaidPromo", "Admin", new { idPromo = "replaceId" })';
            link = link.replace("replaceId", promoId);

            location.href = link;
        }

        function pass(promoId) {
            this.$promoId = promoId;
        }

        function blockPromo() {
            var link = '@Url.Action("BlockPromo", "Admin", new { promoId = "replaceId" })';
            link = link.replace("replaceId", this.$promoId);

            location.href = link;
        }
    </script>
}