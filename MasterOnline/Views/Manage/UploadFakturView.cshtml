@model PagedList.IPagedList<ListImportFaktur>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}
<div class="row">
    <div class="col-md-12">
        <label class="control-label">History Upload</label>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <input id="txt_last_page_upload_faktur" type="hidden" class="form-control" value="@ViewData["LastPage"]">
        <table id="table_history_upload" class="table table-bordered" role="grid">
            <thead>
                <tr role="row">
                    <th width="100">Pengupload</th>
                    <th width="150">Tanggal Upload</th>
                    <th width="100">Akun</th>
                    <th width="100">Faktur Terakhir</th>
                    <th width="150">Tanggal Faktur</th>
                    <th width="45">Log Error</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var importLog in Model.ToList())
                {
                    <tr data-log-recnum="log-@importLog.RECNUM">
                        <td class="log-pengupload">
                            @importLog.UPLOADER
                        </td>
                        <td class="log-tanggal">
                            @importLog.UPLOAD_DATETIME
                        </td>
                        <td class="log-akun">
                            @importLog.CUST
                        </td>
                        <td class="log-faktur">
                            @importLog.LAST_FAKTUR_UPLOADED
                        </td>
                        <td class="log-faktur-tanggal">
                            @importLog.LAST_FAKTUR_UPLOADED_DATETIME
                        </td>
                        <td class="log-history" style="text-align:center">
                            <button type="button" class="btn btn-primary" onclick="downloadLogUploadFaktur('@importLog.LOG_FILE')">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @* add by calvin 15 juli 2019, paging *@
        @if (Model.PageCount > 1)
        {
            <div id="tabeluploadfakturpartialpager" class="pager">
                @Html.PagedListPager(Model, page => Url.Action("RefreshTableUploadFaktur", new
                {
                    page,
                    cust = ViewData["searchParam"]
                }),
                new PagedListRenderOptions
                {
                    LinkToFirstPageFormat = "<<",
                    LinkToPreviousPageFormat = "prev",
                    LinkToNextPageFormat = "next",
                    LinkToLastPageFormat = ">>",
                    DisplayEllipsesWhenNotShowingAllPageNumbers = false
                })
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
        }
        <script type="text/javascript">
        $(function () {
            $('#tabeluploadfakturpartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            //$('#table-barang-1-partial').hide();
                            $('#loading_upload_faktur_tokped').show();
                        },
                        success: function (response) {
                            $('#uploadfakturviewdiv').html(response);
                            $('#loading_upload_faktur_tokped').hide();
                            //$('#table-barang-1-partial').show();
                        }
                    });
                    return false;
                }
            });
        });
        </script>
        @* end add by calvin 15 juli 2019, paging *@
    </div>
</div>