@using PagedList.Mvc
@model PagedList.IPagedList<PackingPerMP>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<script type="text/javascript">
    $(document).ready(function () {
        if ($('#PackingListBlibliFound')) {
            if (parseInt($('#PackingListBlibliFound').val()) > 0) {
                $('#li_pesanan_blibli_tab_focus').show().on('click', function () {
                    $('#blibli_packing_cust_tabs li:first').find('a').click();
                });
            }
        }
    });
    function RequestDropoffPackingBlibli(cust) {
        $('#btnProsesDropoffBlibli__' + cust).attr("disabled", true);
        var $link = '@Html.Raw(Url.Action("BlibliCreatePackage", "Manage", new { cust = "replaceCust",bukti = "replaceBuktiPacking" }))';
        $link = $link.replace("replaceCust", encodeURIComponent(cust));
        $link = $link.replace("replaceBuktiPacking", encodeURIComponent($('#packingList_NO_BUKTI').val()));

        $('#modalPrintBlibli__textarea__' + cust).html('');
        $.ajax({
            type: "GET",
            url: $link,
            success: function (response) {
                if (response.mo_error != undefined) {
                    alert(response.mo_error);
                }
                else {
                    var textareaValue = "";

                    var adaUrl = false;
                    var urlValue = "";
                    //var countUrl = 0;
                    //response.listSuccess.forEach(function (item) {
                    //    adaUrl = true;
                    //    countUrl++;
                    //    var buttonHtml = "<a class='btn btn-success' download='MO_Blibli_Shipping_" + item.no_referensi + '_' + item.orderItemId + ".pdf' target='_blank' href='data:application/octet-stream;base64," + item.pdf64 + "'>Download PDF File</a></br>";
                    //    urlValue += buttonHtml;
                    //});
                    //if (adaUrl) {
                    //    textareaValue += "Shipping Label PDF :</br>";
                    //    textareaValue += urlValue;
                    //}

                    var adaError = false;
                    var errorValue = "";
                    response.listErrors.forEach(function (item) {
                        adaError = true;
                        errorValue += item.errorMessage + ". </br>";
                    });
                    if (adaError) {
                        textareaValue += "</br>";
                        textareaValue += "Errors :</br>";
                        textareaValue += errorValue;
                    }
                    else {
                        textareaValue = "All order success packing.";
                    }
                    $('#modalPrintBlibli__textarea__' + cust).html(textareaValue);
                    $('#modalPrintBlibli__' + cust).modal('show');
                }
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }
    function BlibliGetLabelPerPacking(cust) {
        var $link = '@Html.Raw(Url.Action("BlibliLabelPerPacking", "Manage", new { cust = "replaceCust",bukti = "replaceBuktiPacking" }))';
        $link = $link.replace("replaceCust", encodeURIComponent(cust));
        $link = $link.replace("replaceBuktiPacking", encodeURIComponent($('#packingList_NO_BUKTI').val()));

        $('#modalPrintBlibli__textarea__' + cust).html('');
        $.ajax({
            type: "GET",
            url: $link,
            success: function (response) {

                if (response.mo_error != undefined) {
                    alert(response.mo_error);
                }
                else {
                    var textareaValue = "";

                    var adaUrl = false;
                    var urlValue = "";
                    var countUrl = 0;
                    response.listSuccess.forEach(function (item) {
                        adaUrl = true;
                        countUrl++;
                        var buttonHtml = "<a class='btn btn-success' download='MO_Blibli_Shipping_"+ item.no_referensi + '_' + item.orderItemId +".pdf' target='_blank' href='data:application/octet-stream;base64,"+ item.pdf64 +"'>Download PDF File</a></br>";
                        urlValue += buttonHtml;
                    });
                    if (adaUrl) {
                        textareaValue += "Shipping Label PDF :</br>";
                        textareaValue += urlValue;
                    }

                    var adaError = false;
                    var errorValue = "";
                    response.listErrors.forEach(function (item) {
                        adaError = true;
                        errorValue += item.errorMessage + ". </br>";
                    });
                    if (adaError) {
                        textareaValue += "</br>";
                        textareaValue += "Errors :</br>";
                        textareaValue += errorValue;
                    }
                    $('#modalPrintBlibli__textarea__' + cust).html(textareaValue);
                    $('#modalPrintBlibli__' + cust).modal('show');
                }
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }
</script>
@{
    var distinctCust = Model.Select(p => new { p.CUST, p.NAMA_CUST }).Distinct().ToList();
}
<div class="row">
    <div class="col-12">
        <ul id="blibli_packing_cust_tabs" class="nav nav-tabs">
            @foreach (var item in distinctCust)
            {
                <li><a data-toggle="tab" href="#blibli_tab_content__@(item.CUST)">@(item.NAMA_CUST)</a></li>
            }
        </ul>
        <div class="tab-content">
            @{
                var PackingListBlibliFound = distinctCust.Count();
            }
            @Html.TextBox("PackingListBlibliFound", PackingListBlibliFound, new { @class = "form-control", disabled = "disabled", @style = "display:none;" })
