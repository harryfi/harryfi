                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-12" id="modalPrintBlibli__textarea__@(item.CUST)">
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                                    @*<button type="button" class="btn btn-success" onclick="printRekap();">Print</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input id="search_table_packing_pesanan_blibli__@(item.CUST)" type="text" class="form-control" placeholder="Pencarian">
                                <span class="input-group-btn">
                                    <button type="button" id="search_table_packing_pesanan_blibli_button__@(item.CUST)" class="btn btn-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            @*<input id="txtShipment__@(item.CUST)" disabled="disabled" required="required" class="form-control" maxlength="30" data_val_length_max="30">
                                <button id="btnShipment__@(item.CUST)" class="btn btn-default" type="button" style="height: 34px;" onclick="PromptDeliveryProvBlibli('@(item.CUST)')">
                                    <span class="glyphicon glyphicon-option-horizontal"></span>
                                </button>*@
                            @*<div class="form-group">
                                <div id="blibli-resi-pickup-address-@(item.CUST)">
                                    <select id="select-blibli-resi-pickup-address-@(item.CUST)" class="selectBlibliResiPickupAddress" data-kodecust="@(item.CUST)" placeholder="Pickup Address" required="required"></select>
                                </div>
                            </div>*@
                            @*<button id="btnPrintBlibli__@(item.CUST)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPrintBlibli">Print</button>*@
                        </div>
                        <div class="col-md-4" style="text-align:right">
                            @*<button id="btnProsesPickupBlibli__@(item.CUST)" type="button" class="btn btn-primary" onclick="RequestPickupPackingBlibli('@(item.CUST)')">Request Pickup</button>*@
                            <button id="btnProsesDropoffBlibli__@(item.CUST)" type="button" class="btn btn-primary" onclick="RequestDropoffPackingBlibli('@(item.CUST)')">Drop Off</button>
                            <button id="btnPrintBlibli__@(item.CUST)" type="button" class="btn btn-primary" onclick="BlibliGetLabelPerPacking('@(item.CUST)')">Print</button>
                        </div>
                    </div>
                    <div class="hscroll table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20%;">No. Pesanan</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 20%;">No Referensi</th>
