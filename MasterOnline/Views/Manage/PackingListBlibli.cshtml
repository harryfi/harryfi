@using System.Globalization
@*@using MasterOnline.ViewModels*@
@using PagedList.Mvc
@model PagedList.IPagedList<PackingPerMP>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}

<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="modal fade" id="modalPrintBlibli" tabindex="-1" role="dialog" aria-labelledby="modalPrintLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content modalphapusp">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalPrintLabel">Print Pesanan Blibli</h4>
            </div>
            <div class="modal-body">
                <div class="row text-center">
                    <input type="radio" name="printType" value="0" checked />Rekap per Barang<br />
                    <input type="radio" name="printType" value="1" />Detail per Pesanan<br />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                @*<button type="button" class="btn btn-success" onclick="printRekap();">Print</button>*@
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="input-group">
            <input id="search_table_packing_pesanan_blibli" type="text" class="form-control" placeholder="Pencarian">
            <span class="input-group-btn">
                <button type="button" id="search_table_packing_pesanan_blibli_button" class="btn btn-primary">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
    <div class="col-md-8" style="text-align:right" >
        @*<button id="btnProsesBlibli" type="button" class="btn btn-primary" onclick="RequestPickupPackingBlibli()">Request Pickup</button>*@
        <button id="btnPrintBlibli" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPrintBlibli">Print</button>
    </div>
</div>
<div class="hscroll table-responsive tbljurnal">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20%;">No. Pesanan</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 20%;">No Referensi</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 35%;">Nama Pemesan</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 15%;">Kurir</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 10%;">Jumlah</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.no_bukti</td>
                    <td>@order.no_referensi</td>
                    <td>@order.nama_pemesan</td>
                    <td>@order.kurir</td>
                    <td>@order.jumlah_item</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.PageCount > 1)
    {
        <div id="tabelPackingPesananBlibliPager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTablePackingPesananMP", new
       {
           nama_cust = "16",
           bukti = ViewData["tableBukti"],
           page,
           search = ViewData["searchParam"]
           //pagenumber = ViewData["lastPage"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
</div>
<script type="text/javascript">

    $('#search_table_packing_pesanan_blibli').keypress(function (e) {
        var key = e.which;
        if (key == 13)// the enter key code
        {
            RefreshPackingPesananBlibli();
            return false;
        }
    });
    $('#search_table_packing_pesanan_blibli_button').click(function () {
        RefreshPackingPesananBlibli();
    });

    $(function () {
        $('#tabelPackingPesananBlibliPager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                    },
                    success: function (response) {
                        $('#packing_pesanan_blibli_content').html(response);
                    }
                });
            }
            return false;

        });
    });
</script>