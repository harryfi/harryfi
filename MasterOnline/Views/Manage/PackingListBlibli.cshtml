                <div id="blibli_tab_content__@(item.CUST)" class="tab-pane fade in">
                    <input id="txt_last_page__@(item.CUST)" type="hidden" class="form-control" value="@ViewData["LastPage"]">
                    <div class="modal fade" id="modalPrintBlibli__@(item.CUST)" tabindex="-1" role="dialog" aria-labelledby="modalPrintLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
