@using System.Globalization
@*@model MasterOnline.ViewModels.SaHutangViewModel*@
@using PagedList.Mvc
@model PagedList.IPagedList<APT01A>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<style>
    #loading_hutang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_hutang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_hutang_tab">
    <div id="loading_hutang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">

    @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
        <thead>
            <tr role="row">
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">No. Bukti</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Tanggal</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Supplier</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Tgl. Jatuh Tempo</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Nilai</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 60px;">Posting</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Edit</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Hapus</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var hutang in Model.ListHutang)*@
            @foreach (var hutang in Model)
            {
                <tr>
                    <td>@hutang.INV</td>
                    <td>@(hutang.TGL?.ToString("dd/MM/yyyy"))</td>
                    <td>@hutang.NSUPP (@hutang.SUPP)</td>
                    <td>@(hutang.JTGL?.ToString("dd/MM/yyyy"))</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", hutang.TOTAL)</td>
                    @if (Convert.ToString(hutang.POSTING) == "Y")
                    {
                        <td>
                            Sudah
                        </td>
                    }
                    else
                    {
                        <td>
                            Belum
                        </td>
                    }
                    <td class="edit-hapus-col">
                        @if (Convert.ToString(hutang.POSTING) == "Y")
                        {
                            <button class="btn btn-primary" onclick="lihatHutang(@hutang.RECNUM)">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary" onclick="editHutang('@hutang.RECNUM')">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                    <td class="edit-hapus-col">
                        @if (Convert.ToString(hutang.POSTING) == "Y")
                        {
                            <button class="btn btn-danger" onclick="undeleteableHutang()">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-danger" data-toggle="modal" data-target="#konfHapusHutang" onclick="pass('@hutang.RECNUM')">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* add by nurul 15/5/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelhutangpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableHutang", new
       {
           page,
           search = ViewData["searchParam"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
    <script type="text/javascript">
        $(function () {
            $('#tabelhutangpartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            $('#loading_hutang_tab').show();
                        },
                        success: function (response) {
                            $('#table-hutang-partial').html(response);
                            $('#loading_hutang_tab').hide();
                        }
                    });
                }
                return false;
            });
        });
    </script>
    @* end add by nurul 15/5/2019, paging *@
