@section scripts{
    <script src="~/Content/vendors/moment/min/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/selectize.js" type="text/javascript"></script>
    <script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>
    <script src="https://sdk.amazonaws.com/js/aws-sdk-2.283.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            getListBarang();
        });
        function getListBarang() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetListBarangMatrix", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listMerk = [];

                    $.each(data,
                        function (i, item) {
                            listMerk[i] = {
                                id: item.id,
                                text: item.BRG + ' (' + item.NAMA + ')'
                            };
                        });

                    var brgSelect = $('#cmbBarang').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: listMerk,
                        onChange: function (value) {
                            var current = $('#txtListBrg').val();
                            if (current != "") {
                                current += ","
                            }
                            $('#txtListBrg').val(current + value);
                            //$('#Stf02_KET_SORT2').val($("#MERK option:selected").text());
                            SelectProduct();
                        }
                    });

                    //merkSelect[0].selectize.setValue($('#Stf02_Sort2').val());
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }
        function SelectProduct() {
            var $link = '@Html.Raw(Url.Action("RefreshTableMatrixBarang", "Manage", new { search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", encodeURIComponent($('#txtListBrg').val()));

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-matrix-barang-partial').hide();
                    $('#loading_barang_tab').show();
                },
                success: function (response) {
                    $('#table-matrix-barang-partial').html(response);
                    $('#loading_barang_tab').hide();
                    $('#table-matrix-barang-partial').show();

                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
    </script>
}
