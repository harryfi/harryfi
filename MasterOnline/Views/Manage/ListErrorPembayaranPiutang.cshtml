@using System.Globalization
@model MasterOnline.ViewModels.errorBayarPiutang
@if (Model?.detail.Count() > 0)
{
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-3 col-sm-3">No. Bukti Bayar : </label>
            <div class="col-md-6 col-sm-6">
                @Html.Label("no_bukti", Model?.header?.LAST_FAKTUR_UPLOADED, new { @class = "control-label", disabled = "disabled" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-3 col-sm-3">Nama File Excel : </label>
            <div class="col-md-8 col-sm-8">
                @foreach (var file in Model.detail.Select(a => a.VARIABLE_2).Distinct())
                {
                    @Html.Label("nm_file", file, new { @class = "control-label", disabled = "disabled" })
                }
            </div>
        </div>
    </div>
    <div id="div-scroll-list">
        <table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">
            <thead>
                <tr role="row">
                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 115px;">Keterangan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.detail.OrderBy(a => a.RecNum))
                {
                    var sampai = user.TEXT_1.Length - 6;
                    var ket = user.TEXT_1.Substring(0, sampai);
                    <tr>
                        <td>@ket</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-12 col-sm-12">Tidak ada error.</label>
        </div>
    </div>
}

