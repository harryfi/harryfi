    <script type="text/javascript">
        $(document).ready(function () {
            $("#all_checkbox_print").click(function () {
                $(".checkbox_print").prop('checked',
                    $(this).prop('checked'));
                var countCheck = $(".checkbox_print").length;
                if ($("#all_checkbox_print").prop('checked') == true) {
                    $(".hapus-faktur").attr('disabled', 'disabled');
                    $(".lihat_faktur").attr('disabled', 'disabled');
                    $('#text-check-faktur').text(countCheck + ' Faktur Terpilih');
                } else {
                    $(".hapus-faktur").removeAttr('disabled');
                    $(".lihat_faktur").removeAttr('disabled');
                    $('#text-check-faktur').text('');
                }
            });
            $(".checkbox_print").each(function (i, item) {
                $(item).off('click').on('click', function () {
                    var countCheckDetail = 0;
                    if ($(item).prop('checked') == true) {
                        $(".hapus-faktur").attr('disabled', 'disabled');
                        $(".lihat_faktur").attr('disabled', 'disabled');
                        var cekTrue = [];
                        $(".checkbox_print").each(function (z, chk) {
                            if ($(chk).prop('checked') == true) {
                                cekTrue.push($(chk).attr("data-recnum"));
                            }
                        });
                        if (cekTrue.length == 0) {
                            $('#text-check-faktur').text('');
                        } else {
                            countCheckDetail = cekTrue.length;
                            $('#text-check-faktur').text(countCheckDetail + ' Faktur Terpilih');
                        }
                    } else {
                        var cekTrue = [];
                        $(".checkbox_print").each(function (z, chk) {
                            if ($(chk).prop('checked') == true) {
                                cekTrue.push($(chk).attr("data-recnum"));
                            }
                        });
                        if (cekTrue.length == 0) {
                            $(".hapus-faktur").removeAttr('disabled');
                            $(".lihat_faktur").removeAttr('disabled');
                            $('#text-check-faktur').text('');
                        } else {
                            countCheckDetail = cekTrue.length;
                            $('#text-check-faktur').text(countCheckDetail + ' Faktur Terpilih');
                        }
                    }
                });
            });

            $('#tabelfakturpartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    //add by nurul 16/6/2020
                    var filterby = get_faktur_filterby();
                    var filtervalue = get_faktur_filtervalue(filterby);
                    var link = this.href;
                    link += "&filter=replaceFilter&filtervalue=replaceValueFilter";
                    link = link.replace("replaceFilter", encodeURIComponent(filterby));
                    link = link.replace("replaceValueFilter", encodeURIComponent(filtervalue));
                    //end add by nurul 16/6/2020

                    $.ajax({
                        //url: this.href,
                        url: link,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            $('#loading_faktur_tab').show();
                        },
                        success: function (response) {
                            $('#table-faktur-partial').html(response);
                            $('#loading_faktur_tab').hide();
                        }
                    });
                }
                return false;

            });
        });
