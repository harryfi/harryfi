        function refreshTablePickinglist1($savePage) {
            var $tpPage = "";
            if ($savePage == undefined) {
                $tpPage = $('#txt_last_page').val();
            } else {
                if ($('#txt_last_page').val() == undefined) {
                    $tpPage = $savePage;
                } else {
