                }
            }
            var $link = '@Html.Raw(Url.Action("RefreshTablePickinglist", "Manage", new { page = "replaceLastPage", search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_pickinglist').val());
            //$link = $link.replace("replaceLastPage", $('#txt_last_page').val());
            $link = $link.replace("replaceLastPage", $tpPage);

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-pickinglist-partial').hide();
                    $('#loading_pickinglist_tab').show();
                },
                success: function (response) {
                    $('#table-pickinglist-partial').html(response);
                    $('#loading_pickinglist_tab').hide();
                    $('#table-pickinglist-partial').show();

                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

