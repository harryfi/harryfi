@using PagedList.Mvc
@model PagedList.IPagedList<STF02E>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
    if (string.IsNullOrEmpty(currentSort))
    {
        currentSort = "date_desc";
    }
}
<style>
    #loading_merk_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_merk_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_merk_tab">
    <div id="loading_merk_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>

@*<table id="datatable" class="table table-striped table-bordered table-hover">*@
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Kode", "MerkBarang", Request.QueryString.ToRouteValueDictionary("sortOrder", (string)ViewBag.NameSortParam))
                @Html.SortIdentifier(currentSort, "name")
            </th>
            <th>
                @Html.ActionLink("Nama Merk", "MerkBarang", Request.QueryString.ToRouteValueDictionary("sortOrder", (string)ViewBag.AddressSortParam))
                @Html.SortIdentifier(currentSort, "address")
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Edit</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Hapus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KET)
                </td>
                <td class="edit-hapus-col">
                    <button class="btn btn-primary" onclick="editMerk(@item.RecNum)">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>
                <td class="edit-hapus-col">
                    <button class="btn btn-danger" data-toggle="modal" data-target="#hapusMerk" onclick="pass(@item.RecNum, '@item.KET')">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

