    <script type="text/javascript">
        $(document).on('ready',function () {
            refreshMarketplace();

            $('#search_marketplace').keypress(function (e) {
                var key = e.which;
                if (key == 13)// the enter key code
                {
                    searchTableMarketplace();
                    return false;
                }
            });

            $('#search_marketplace_click').click(function () {
                searchTableMarketplace();
            });
        });

        function refreshMarketplace($savePage) {
            var $tpPage = "";
            if ($savePage == undefined) {
                $tpPage = $('#txt_last_page').val();
            } else {
                if ($('#txt_last_page').val() == undefined) {
                    $tpPage = $savePage;
                } else {
                    $tpPage = $('#txt_last_page').val();
                }
            }
            var $link = '@Html.Raw(Url.Action("RefreshTableTransferMarketplace", "Manage", new { page = "replaceLastPage", search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", encodeURIComponent($('#search_marketplace').val()));
            //$link = $link.replace("replaceLastPage", $('#txt_last_page').val());
            $link = $link.replace("replaceLastPage", encodeURIComponent($tpPage));

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-marketplace-partial').hide();
                    $('#loading_marketplace_tab').show();
                },
                success: function (response) {
                    $('#table-marketplace-partial').html(response);
                    $('#loading_marketplace_tab').hide();
                    $('#table-marketplace-partial').show();

                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function searchTableMarketplace(){
            var $link = '@Html.Raw(Url.Action("RefreshTableTransferMarketplace", "Manage", new { search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", encodeURIComponent($('#search_marketplace').val()));

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    //$('#search_marketplace_click')[0].disabled = true;
                    $('#loading_marketplace_tab').show();
                },
                success: function (response) {
                    //$('#search_marketplace_click')[0].disabled = false;
                    $('#table-marketplace-partial').html(response);
                    $('#loading_marketplace_tab').hide();
                },
                error: function (xhr, status, error) {
                    //$('#search_marketplace_click')[0].disabled = false;
                    console.log(error);
                }
            });
        }

        function editKodeSap($kodecust) {

            var $tr = 'tr[data-barang-id="' + $kodecust + '"]';
            var $kodesapInitialSpan = $($tr + ' .kodesap-initial');
            var $kodesapInputBox = $($tr + ' .kodesap-input-box');
            var $btnEdit = $($tr + ' .icon-btn-edit');
            var $kodesapAwal = $kodesapInitialSpan.text();

            if ($btnEdit.hasClass('glyphicon-pencil')) {
                $btnEdit.parent().removeClass('btn-primary').addClass('btn-success');
                $btnEdit.removeClass('glyphicon-pencil').addClass('glyphicon-floppy-disk');
                $kodesapInitialSpan.hide();
                $kodesapInputBox.val($kodesapAwal).show();
            } else {
                var kodesapInitialBeforeValidation = $kodesapInitialSpan.val();
                $kodesapInitialSpan.text($kodesapInputBox.val());
                simpanKodeSap($kodecust, $kodesapInputBox, $btnEdit, $kodesapInitialSpan, kodesapInitialBeforeValidation);
            }
        }

        function simpanKodeSap($kodecust, $kodesapInputBox, $btnEdit, $kodesapInitialSpan, kodesapInitialBeforeValidation) {

            $postdata = {
                kodecust: $kodecust,
                kodesap : $kodesapInputBox.val()
            };

            $.ajax({
                type: "POST",
                contentType: "application/json; charset=UTF-8",
                url: '@Url.Action("SaveKodeFTPMarketplace", "Manage")',
                data: JSON.stringify($postdata),
                cache: false,
                beforeSend: function() {
                    $('#loading_spinner').show();
                },
                success: function (response) {

                    if (response.Errors == null) {
                        $modeEdit = 1; // 0 new, 1 edit
                        $btnEdit.parent().removeClass('btn-success').addClass('btn-primary');
                        $btnEdit.removeClass('glyphicon-floppy-disk').addClass('glyphicon-pencil');
                        $kodesapInitialSpan.show();
                        $kodesapInputBox.hide();
                        $('#loading_spinner').hide();
                    } else {
                        $kodesapInitialSpan.text(kodesapInitialBeforeValidation);
                        console.log(response.Errors);
                        alert(response.Errors);
                        $('#loading_spinner').hide();
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }
    </script>
