<script type="text/javascript">
    $(function () {
        $('#tabelpesananpackingpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                //add by nurul 4/12/2019
                var filterby = get_pesanan_packing_filterby();
                var filtervalue = get_pesanan_packing_filtervalue(filterby);
                var link = this.href;
                link += "&filter=replaceFilter&filtervalue=replaceValueFilter";
                link = link.replace("replaceFilter", encodeURIComponent(filterby));
                link = link.replace("replaceValueFilter", encodeURIComponent(filtervalue));
                //end add by nurul 4/12/2019

                $.ajax({
                    //url: this.href,
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_pesanan_packing_tab').show();
                        $('#text-check-packing').text('');
                    },
                    success: function (response) {
                        $('#table-pesanan-siap-kirim-partial').html(response);
                        $('#loading_pesanan_packing_tab').hide();
                        
                        $("#checkbox_all_gntstatus_packing").click(function () {
                            $(".checkbox_gntstatus_packing").prop('checked',
                                $(this).prop('checked'));
                            var countCheck = $(".checkbox_gntstatus_packing").length;
                            if ($("#checkbox_all_gntstatus_packing").prop('checked') == true) {
                                $(".ubah-packing").attr('disabled', 'disabled');
                                $('#text-check-packing').text(countCheck + ' Pesanan terpilih.');
                            } else {
                                $(".ubah-packing").removeAttr('disabled');
                                $('#text-check-packing').text('');
                            }
                        });
                        $(".checkbox_gntstatus_packing").each(function (i, item) {
                            $(item).on('click', function () {
                                var countCheckDetail = 0;
                                if ($(item).prop('checked') == true) {
                                    $(".ubah-packing").attr('disabled', 'disabled');

                                    var cekTrue = [];
                                    $(".checkbox_gntstatus_packing").each(function (z, chk) {
                                        if ($(chk).prop('checked') == true) {
                                            cekTrue.push($(chk).attr("data-rec"));
                                        }
                                    });
                                    if (cekTrue.length == 0) {
                                        $('#text-check-packing').text('');
                                    } else {
                                        countCheckDetail = cekTrue.length;
                                        $('#text-check-packing').text(countCheckDetail + ' Pesanan terpilih.');
                                    }
                                } else {
                                    var cekTrue = [];
                                    $(".checkbox_gntstatus_packing").each(function (z, chk) {
                                        if ($(chk).prop('checked') == true) {
                                            cekTrue.push($(chk).attr("data-rec"));
                                        }
                                    });
                                    if (cekTrue.length == 0) {
                                        $(".ubah-packing").removeAttr('disabled');
                                        $('#text-check-packing').text('');
                                    } else {
                                        countCheckDetail = cekTrue.length;
                                        $('#text-check-packing').text(countCheckDetail + ' Pesanan terpilih.');
                                    }
                                }
                            });
                        });
                    }
                });
            }
            return false;
        });
    });
</script>
