@using System.Globalization
@using MasterOnline.ViewModels
@using PagedList.Mvc
@model PagedList.IPagedList<FakturBelumLunasPrompt>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
@section styles
{
    <style>
        .top_nav {
            display: none !important;
        }

        .left_col {
            display: none !important;
        }

        .right_col {
            margin-left: 0 !important;
        }

        footer {
            display: none !important;
        }
    </style>
}
<style>
    #loading_faktur_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_faktur_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_faktur_tab">
    <div id="loading_faktur_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">

    <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Kode Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 115px;">Nama Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">Email</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Alamat</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">No. HP</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Pilih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faktur in Model)
        {
            var noref = "";
            if (faktur.norefSO != "" && faktur.norefSO != "-" && faktur.norefSO != null)
            {
                noref = faktur.norefSO;
            }
            if (faktur.norefSI != "" && faktur.norefSI != "-" && faktur.norefSI != null)
            {
                noref = faktur.norefSI;
            }
            var tempPrompt = faktur.nobuk + ";" + noref + ";" + faktur.tglSO?.ToString("dd/MM/yyyy") + ";" + faktur.sisa;
            <tr>
                <td>@faktur.nobuk</td>
                <td>@(faktur.tglSI?.ToString("dd/MM/yyyy"))</td>
                <td>@noref</td>
                <td>@(faktur.tglSO?.ToString("dd/MM/yyyy"))</td>
                <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", faktur.sisa)</td>
                <td class="edit-hapus-col">
                    <button class="btn btn-primary" onclick="pilihPrompt('@tempPrompt')">
                        <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@* add by nurul 30/4/2019, paging *@
@if (Model.PageCount > 1)
{
    <div id="tabelfakturpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshFakturBelumLunasPopUp", new
   {
       page,
       search = ViewData["searchParam"],
       cust = ViewData["custParam"],
   }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelfakturpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                var link = this.href;
                var custId = CUST;
                link += "&cust=replaceCust";
                link = link.replace("replaceCust", encodeURIComponent(custId));

                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_faktur_tab').show();
                    },
                    success: function (response) {
                        $('#table-faktur-popup').html(response);
                        $('#loading_faktur_tab').hide();
                    }
                });
            }
            return false;
        });
    });
</script>
