        <div class="modal-content">
            @Html.Partial("PricingNewPartialView", Model?.ListSubs)
        </div>
    </div>
</div>
@*//add by nurul 01/3/2019*@

@section scripts
{
    <script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        //add by nurul 12/2/2019
        var $page = window.text;
            //end add by nurul 12/2/2019
        $userId = 0;

        $(document).on('ready',
            function () {
                //add by nurul 12/2/2019
                $page = 0;
            //end add by nurul 12/2/2019
                Initialize();
                //add by nurul 12/2/2019
                $('#datatable').on('page.dt', function () {
                    $page = $('#datatable').DataTable().page.info().page;
                });
                $('#datatable').DataTable().page($page).draw(false);
                    //end add by nurul 12/2/2019
            });

        function Initialize() {
            var table = $('#datatable').DataTable();
            //add by nurul 1/3/2019
            cekJumlahUser();
            //end add by nurul 1/3/2019
            $('#search_user').keyup(function () {
                table.search($(this).val()).draw();
            });

            $('#tambah_user').on('click', function () {
                $('.user_table_section').hide();
                $('.user_editor_section').show();
            });

            $('#close-editor').on('click', function () {
                $('.user_table_section').show();
                $('.user_editor_section').hide();
                refreshTableAkun();
                refreshForm();
                //add by nurul 12/2/2019
                $('#datatable').on('page.dt', function () {
                    $page = $('#datatable').DataTable().page.info().page;
                });
                $('#datatable').DataTable().page($page).draw(false);
                    //end add by nurul 12/2/2019
            });

            if ($('.message-error').text() !== '') {
                //change by nurul 1/3/2019
                //$('#tambah_user').click();
                $('.user_table_section').hide();
                $('.user_editor_section').show();
                //end change by nurul 1/3/2019
            }
            //add by nurul 12/2/2019
            $('#datatable').on('page.dt', function () {
                $page = $('#datatable').DataTable().page.info().page;
            });
            $('#datatable').DataTable().page($page).draw(false);
                    //end add by nurul 12/2/2019
        }

        function simpanAkun(btnClicked) {
            if (!validateForm()) return false;

            if ($('#User_Password').val() != $('#User_KonfirmasiPassword').val()) {
                alert('Password konfirmasi tidak sama dengan password!');
                return false;
            }

            var $form = $(btnClicked).parents('form');

            $.ajax({
                type: "POST",
                url: $form.attr('action'),
                data: $form.serialize(),
                success: function (response) {
                    if (response.Errors == null) {
                        alert('Data akun berhasil disimpan');
                        $('#table-akun-partial').html(response);
                        Initialize();
                        $('#close-editor').click();
                        $("html, body").animate({ scrollTop: 0 }, "slow");
                    } else {
                        alert(response.Errors);
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });

            return false;
        }

        function refreshTableAkun() {
            var link = '@Url.Action("RefreshTableAkun", "Manage")';

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    $('#table-akun-partial').html(response);
                    var table = $('#datatable').DataTable();
                    $('#search_user').keyup(function () {
                        table.search($(this).val()).draw();
                    });
                    //add by nurul 26 nov 2018, setelah di close, search lg
                    table.search($('#search_user').val()).draw();
                    //end add by nurul 26 nov 2018, setelah di close, search lg
                    //add by nurul 12/2/2019
                    $('#datatable').on('page.dt', function () {
                        $page = $('#datatable').DataTable().page.info().page;
                    });
                    $('#datatable').DataTable().page($page).draw(false);
                    //end add by nurul 12/2/2019
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function refreshForm() {
            var link = '@Url.Action("RefreshAkunForm", "Manage")';

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    $('#form-partial').html(response);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function editUser(userId) {
            var link = '@Url.Action("EditUser", "Manage", new { userId = "replaceId" })';
            link = link.replace("replaceId", userId);

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    $('#form-partial').html(response);
                    Initialize();
                    //change by nurul 1/3/2019
                    //$('#tambah_user').click();
                    $('.user_table_section').hide();
                    $('.user_editor_section').show();
                    //end change by nurul 1/3/2019
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function pass(userId) {
            this.$userId = userId;
        }

        function deleteUser() {
            var link = '@Url.Action("DeleteUser", "Manage", new { userId = "replaceId" })';
            link = link.replace("replaceId", this.$userId);

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    $('#table-akun-partial').html(response);
                    Initialize();
                    $('#konfHapusUser').modal('hide');
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function cekJumlahUser() {
            var link = '@Url.Action("CekJumlahUser", "Manage", new {accId = "replaceUname"})';
            link = link.replace("replaceUname", '@(accId)');

            $.ajax({
                type: "GET",
                url: link,
                success: function (res) {

                    if (res.JumlahUserLebih) {
                        $('#tambah_user').remove();
                        $('#tambah_baru_tombol_section').append('<button class="btn btn-primary btn_tambah_data" data-toggle="modal" ' +
                            'data-target="#modalPricing" id="tambah_user">Tambah Baru</button>');
                        showSubsMenu(1);
                        //$jumlahPesanan = false;
                    //} else if (res.SudahSampaiBatasTanggal) {
                    //    $('#tambah_baru_tombol_section').append('<button class="btn btn-primary btn_tambah_data" data-toggle="modal" ' +
                    //        'data-target="#modalPricing" id="tambah_user">Tambah Baru</button>');
                    //    showSubsMenu(2);
                    //    //$jumlahPesanan = false;
                    } else {
                        $('#tambah_user').remove();
                        $('#tambah_baru_tombol_section').append('<button class="btn btn-primary btn_tambah_data" id="tambah_user">Tambah Baru</button>');
                        $('#tambah_user').on('click', function () {

                            $('.user_table_section').hide();
                            $('.user_editor_section').show();

                        });
                        //$jumlahPesanan = true;
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function showSubsMenu(type) {
            $('#divSubs').hide();
            if (type == 1) {
                $('#divSubsExpand').show();
                $('#divSubExpired').hide();
            }
            else if (type == 2) {
                $('#divSubsExpand').hide();
                $('#divSubExpired').show();
            }

        }
    </script>
}