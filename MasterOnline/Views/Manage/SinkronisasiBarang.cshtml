                </div>
                <div id="loading_barang_tab" class="text-center" style="display: none">
                    <img src="~/Content/Images/spinner.gif" width="100" />
                </div>
                <div class="col-sm-12 barang_table_section" id="table-sinkro-barang" style="overflow-y:scroll; height:400px;">
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div id="divSearch" style="display:none;">
                <div>
                    Rekomendasi : Master Barang Master Online
                </div>
                <div class="row barang_table_section" style="padding-left:10px;">
                    <div class="input-group col-sm-8 col-md-8">
                        <input id="search_barang" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_barang_click" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div id="form-rekomendasi">

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/selectize.js" type="text/javascript"></script>
    <script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.ajax-progress.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#search_barang').keypress(function (e) {
                var key = e.which;
                if (key == 13)// the enter key code
                {
                    RefreshTableBarangSinkroMaster('');
                    return false;
                }
            });
            $('#search_barang_click').click(function () {
                RefreshTableBarangSinkroMaster('');
            });

            $('#TakeRecord').change(function () {
                //searchTablePesananSudahDibayar();
                refreshTableBarangSinkro("1");
            });
        });
        function PromptCustomer() {
            showPromptCustomerTextBoxWindow();
        }

        function showPromptCustomerTextBoxWindow() {
            var $link = '@Url.Action("PromptCustomer", "Manage")';
            window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
        }
        function afterPromptDelTempCust(val, val2) {
            $('#promptHiddenField').val(val);
            //$('#promptHiddenField2').val(val3);
            $('#txtCustomer').val(val2);

            refreshTableBarangSinkro();
        }
        var currentBrg = "";
        function pilihBrg(recnum, nama) {
            currentBrg = recnum;
            $('#search_barang').val(nama);
            RefreshTableBarangSinkroMaster(recnum);
        }
        function RefreshTableBarangSinkroMaster(recnum) {

            var $link = '@Html.Raw(Url.Action("RefreshTableBarangSinkroMaster", "Manage", new { cust = "replaceCust", page = "replaceLastPage", search = "replaceLastSearch" }))';
            $link = $link.replace("replaceCust", encodeURIComponent($('#promptHiddenField').val()));
            $link = $link.replace("replaceLastPage", encodeURIComponent($('#txt_last_page_master').val()));
            $link = $link.replace("replaceLastSearch", encodeURIComponent($('#search_barang').val()));
            if (recnum != "") {
                $link += "&recnum=" + recnum;
            }
            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#form-rekomendasi').hide();
                    //$('#loading_barang_tab').show();
                    //$('#loading_uploadbarang_tab').show();
                },
                success: function (response) {
                    $('#divSearch').show();
                    $('#form-rekomendasi').html(response);
                    $('#form-rekomendasi').show();
                    //$('#loading_barang_tab').hide();
                    //$('#table-sinkro-barang').show();

                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
        function refreshTableBarangSinkro($pageAwal) {

            var $setPage = "";
            if ($pageAwal != undefined) {
                $setPage = $pageAwal;
            } else {
                $setPage = $('#txt_last_page').val();
            }
            var $link = '@Html.Raw(Url.Action("RefreshTableBarangSinkro", "Manage", new { take = "replaceLastTake", cust = "replaceCust", page = "replaceLastPage" }))';
            $link = $link.replace("replaceCust", encodeURIComponent($('#promptHiddenField').val()));
            $link = $link.replace("replaceLastPage", encodeURIComponent($setPage));
            $link = $link.replace("replaceLastTake", encodeURIComponent($('#TakeRecord').val()));

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-sinkro-barang').hide();
                    $('#loading_barang_tab').show();
                    $('#loading_uploadbarang_tab').show();
                },
                success: function (response) {
                    $('#table-sinkro-barang').html(response);
                    $('#loading_barang_tab').hide();
                    $('#table-sinkro-barang').show();

                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
        function pilihBrgMaster(value) {

            var $link = '@Html.Raw(Url.Action("SetMappingSinkro", "Manage"))';
            $link += "?recnumbrg=" + value + "&currenttemp=" + currentBrg + "&cust=" + encodeURIComponent($('#promptHiddenField').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    //$('#table-sinkro-barang').hide();
                    //$('#loading_barang_tab').show();
                    //$('#loading_uploadbarang_tab').show();
                },
                success: function (response) {
                    //$('#table-sinkro-barang').html(response);
                    //$('#loading_barang_tab').hide();
                    //$('#table-sinkro-barang').show();
                    if (response.error != "") {
                        alert(response.error);
                    }
                    else {
                        if (response.cekOtherTemp != null) {
                            // remove other link
                            response.cekOtherTemp.forEach(function () {
                                            var $value2 = $(this);
                                $('#txtKodeBrgMO_' + $value2).text('');
                                $('#txtGambarBrgMO_' + $value2).html('');
                                $('#txtNamaBrgMO_' + $value2).text('');
                                        });
                        }
                        $('#txtKodeBrgMO_' + currentBrg).text(response.currentBrg);
                        $('#txtGambarBrgMO_' + currentBrg).html('');
                        $('#txtGambarBrgMO_' + currentBrg).append('<img width="50" height="50" src="' + response.image + '" />');
                        $('#txtNamaBrgMO_' + currentBrg).text(response.namaBrg);
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
    </script>
}
