        function closeEditor() {
            $('#modalTutupEditor').modal('hide');
            $modeEdit = 0;
            $('input, select, .btn-danger').each(function () {
                $(this).removeAttr('disabled');
            });
            $('.stok_table_section').show();
            $('.stok_editor_section').hide();
            refreshTableStokOpname();
        }


        function Initialize() {

            $('#search_stok').keypress(function (e) {
                var key = e.which;
                if (key == 13)// the enter key code
                {
                    searchTableStok();
                    return false;
                }
            });
            $('#search_stok_click').click(function () {
                searchTableStok();
            });
            $('#tambah_stok').on('click', function () {
                refresh();
            });

            if ($('.message-error').text() !== '') {
                $('#tambah_stok').click();
            }

            $('#table_tambah_stok > tbody > tr > td.editable-kode').prop('contentEditable', true);

            var $flagPerubahan = 0;

            if ($modeEdit == 1) { // mode edit
                $('#StokOpname_TGL').datepicker({
                    format: 'dd/mm/yyyy',
                    language: 'id'
                }).change(function () {
                    if ($flagPerubahan == 0) {
                        $('#btn-simpan-perubahan-row').show();
                    }
                    $(this).datepicker('hide');

                    $flagPerubahan++;
                });
            }
            else {
                $('#StokOpname_TGL').datepicker({
                    format: 'dd/mm/yyyy',
                    language: 'id'
                }).datepicker('setDate', '0').change(function () {
                    if ($flagPerubahan == 0) {
                        $('#btn-simpan-perubahan-row').show();
                    }
                    $(this).datepicker('hide');

                    $flagPerubahan++;
                    $modeEdit = 1;
                });
            }

            $('#StokOpname_TGL').attr('disabled', 'disabled');

            if ($('#StokOpname_TGL').val() != '') {
                $('#StokOpname_TGL').val($('#StokOpname_TGL').val().split(' ')[0]);
            }

            $("input.num-only").on('keydown',
                function (e) {
                    // Allow: backspace, delete, tab, escape, enter and .
                    if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                        // Allow: Ctrl+A, Command+A
                        (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                        // Allow: home, end, left, right, down, up
                        (e.keyCode >= 35 && e.keyCode <= 40)) {
                        // let it happen, don't do anything
                        return;
                    }
                    // Ensure that it is a number and stop the keypress
                    if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                        e.preventDefault();
                    }
                });

            $('#btn-simpan-perubahan').click(function () {
                var $this = $(this);
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("UpdateStokOpname", "Manage")',
                    data: JSON.stringify({
                        NoBuktiStok: $('#Stok_Nobuk').val(),
                        TglInput: $('#StokOpname_TGL').val()
                    }),
                    contentType: 'application/json; charset=UTF-8',
                    cache: false,
                    success: function () {
                        alert('Data stok berhasil di-update');
                        $('#btn-simpan-perubahan-row').hide();
                    },
                    error: function (xhr) {
                        console.log(xhr);
                    }
                });
            });
        }

        function widthBrg() {
            $(window).on('resize', function () {
                var style = $('.selectivity-dropdown').attr('style');
                if (style !== undefined && style !== null) {
                    $('.selectivity-dropdown').attr('style', style.replace('width: 180px', 'width: 400px; min-width: 400px !important'));
                }
            });

            $(window).scroll(function () {
                var style = $('.selectivity-dropdown').attr('style');
                if (style !== undefined && style !== null) {
                    $('.selectivity-dropdown').attr('style', style.replace('width: 180px', 'width: 400px; min-width: 400px !important'));
                }
            });

            $('#BRG').click(function () {
                var checkExist = setInterval(function () {
                    if (window.pageYOffset == 0) {
                        $('html, body').animate({ scrollTop: '+=1px' }, 500);
                        clearInterval(checkExist);
                    } else {
                        $('html, body').animate({ scrollTop: '-=1px' }, 500);
                        clearInterval(checkExist);
                    }
                }, 100);
            });

            $('body').click(function () {
                $('#BRG').css('max-width', '180px').attr('style', 'width: 180px !important');
            });
        }

        function offTab() {
            $(document).keydown(function (objEvent) {
                if (objEvent.keyCode == 9) {
                    objEvent.preventDefault();
                }
            });
        }

        function onTab() {
            $(document).keydown(function (objEvent) {
                if (objEvent.keyCode == 9) { }
            });
        }

        function modeEditTd() {
            $('#table_tambah_stok > tbody > tr[data-stok-id="0"] > .qty-barang').addClass('editable');
            $('#table_tambah_stok > tbody > tr > td.editable').prop('contentEditable', true);
            $('#table_tambah_stok > tbody > tr > td.editable').on('click', function () {
                var $this = $(this);
                var $class = $this.attr('class');
                var $inputClass = '';
                var $trId = $this.parent().attr('data-stok-id');
                var $angka = convertToAngka($this.text());

                if ($class == 'qty-barang editable') {
                    $inputClass = 'qty-input';
                }

                var $input = $('<input>', {
                    'class': $inputClass,
                    value: convertToAngka($this.text()),
                    type: 'number',
                    blur: function () {
                        var $trElement = 'tr[data-stok-id="' + $trId + '"]';
                        if (this.value == '') {
                            if ($class === 'qty-barang editable') {
                                $this.html(0 + '<input data-val="true" data-val-number="The field Qty must be a number." data-val-required="The Qty field is required." id="BarangStokOpname_Qty" name="BarangStokOpname.Qty" type="hidden" value="">');
                            } 
                            $('#BarangStokOpname_Qty').val($($trElement + ' .qty-barang').text());
                        } else {
                            if ($class === 'qty-barang editable') {
                                $this.html(this.value + '<input data-val="true" data-val-number="The field Qty must be a number." data-val-required="The Qty field is required." id="BarangStokOpname_Qty" name="BarangStokOpname.Qty" type="hidden" value="">');
                            } 
                            $('#BarangStokOpname_Qty').val($($trElement + ' .qty-barang').text());
                        }
                    },
                    focus: function () {
                        if ($angka == 0) {
                            this.value = '';
                        } else {
                            this.value = $angka;
                        }
                    },
                    keyup: function (e) {
                        if (e.which === 13) $input.blur();
                    },
                    keypress: function (e) {
                        if (e.which != 8 && e.which != 0 && e.which < 48 || e.which > 57) e.preventDefault();
                    }
                }).appendTo($this.empty()).focus();
            });
        }

        function getGudang() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetGudang", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listGudang = [];

                    $.each(data,
                        function (i, item) {
                            listGudang[i] = {
                                id: item.Kode_Gudang,
                                text: item.Nama_Gudang
                            };
                        });

                    var gudangSelect = $('#GUDANG').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: listGudang,
                        onChange: function (value) {
                            $('#StokOpname_GUD').val(value);

                            if (value != null) {
                                $('#gudang-kode').text(value);
                            } else {
                                $('#gudang-kode').text('-');
                            }
                        }
                    });
                    if ($modeEdit == 0) {
                        gudangSelect[0].selectize.setValue($('#StokOpname_GUD').val());
                    }
                    
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }
        
        function getDataBarang() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetDataBarang", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listKodeBarang = [];

                    $.each(data,
                        function (i, item) {
                            var nama2 = "";
                            if (item.NAMA2 != null && item.NAMA2 != "null") {
                                nama2 = item.NAMA2;
                            }

                            listKodeBarang[i] = {
                                id: item.BRG,
                                text: item.BRG + ' (' + item.NAMA + ' ' + nama2 + ')'
                            };
                        });

                    $('#BRG').selectivity({
                        allowClear: true,
                        items: listKodeBarang,
                        placeholder: 'Harap pilih'
                    }).change(function () {
                        var val = $(this).selectivity('value');
                        var $trId = $(this).closest('tr').attr('data-stok-id');
                        var $trElement = 'tr[data-stok-id="' + $trId + '"]';

                        if (val != null) {
                            $.each(data,
                                function (i, item) {
                                    if (item.BRG == val) {
                                        if (item.NAMA2 != null) {
                                            $($trElement + ' .nama-barang').text(item.NAMA + " " + item.NAMA2);
                                        } else {
                                            $($trElement + ' .nama-barang').text(item.NAMA + " ");
                                        }
                                        return;
                                    }
                                });

                            $($trElement + ' .btn-primary').removeAttr('disabled');
                            $('#BarangStokOpname_Brg').val(val);
                            offTab();
                            modeEditTd();
                        } else {
                            $($trElement + ' .nama-barang').text('-');
                            $($trElement + ' .qty-barang').html('0' + '<input data-val="true" data-val-number="The field Qty must be a number." data-val-required="The Qty field is required." id="BarangStokOpname_Qty" name="BarangStokOpname.Qty" type="hidden" value="">');
                            $($trElement + ' .btn-primary').attr('disabled', 'disabled');
                            getGudang();
                            onTab();
                            modeEditOff();
                        }
                    });
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }

        function modeEditOff() {
            $('#table_tambah_stok > tbody > tr > td.editable').prop('contentEditable', false);
            $('#table_tambah_stok > tbody > tr > td.editable').prop('onclick', null).off('click');
            $('.qty-barang').removeClass('editable');
