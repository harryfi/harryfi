        function validasiTambahan() {
            var $isValid = true;
            var $Gd = $('#GUDANG');
            var $this = $('tr[data-stok-id="0"] .qty-barang');
            if ($Gd.val() == "-" || $Gd.val() == "") {
                if (!$Gd.closest('div').find('.text-danger').length) {
                    if ($Gd.closest('div').hasClass('input-group')) {
                        $('tr[data-stok-id="0"]').parent().parent().append('<span class="text-danger">Gudang tidak boleh kosong!</span>');
                    } else {
                        $('tr[data-stok-id="0"]').closest('div').append('<span class="text-danger">Gudang tidak boleh kosong!</span>');
                    }
                    $isValid = false;
                }
            } else if ($this.text().trim() == "0" || $this.text().trim() == "") {
                if (!$this.closest('div').find('.text-danger').length) {
                    if ($this.closest('div').hasClass('input-group')) {
                        $this.parent().parent().append('<span class="text-danger">Quantity tidak boleh 0!</span>');
                    } else {
                        $this.closest('div').append('<span class="text-danger">Quantity tidak boleh 0!</span>');
                    }
                    $isValid = false;
                }
            }
            else {
                if ($Gd.closest('div').find('.text-danger').length) {
                    $Gd.closest('div').find('.text-danger').remove();
                } else if ($this.closest('div').find('.text-danger').length) {
                    $this.closest('div').find('.text-danger').remove();
                } 
            }

            return $isValid;

        }

