                                <span class="input-group-btn">
                                    <button type="button" id="search_stok_click" class="btn btn-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-8 col-sm-6">
                            <div class="pull-right">
                                <button class="btn btn-primary btn_excel_stokopname" onclick="$('#excelStokOpname').modal('show');" id="excel_stokopname">Excel Stok Opname</button>
