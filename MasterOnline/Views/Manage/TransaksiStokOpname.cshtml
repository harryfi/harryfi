            link = link.replace("replaceId", encodeURIComponent(nobuk));

            $.ajax({
                type: "GET",
                url: link,
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listKodeBarang = [];

                    $.each(data,
                        function (i, item) {
