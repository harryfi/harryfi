@using System.Globalization
@*@model MasterOnline.ViewModels.PromosiViewModel*@
@using PagedList.Mvc
@model PagedList.IPagedList<mdlPromosiBarng>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}
<style>
    #loading_promosi_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_promosi_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }

    @@media screen and (max-width: 445px) {
        .brgtblpromo {
            width: 66%;
        }
    }

    @@media screen and (max-width: 375px) {
        .brgtblpromo {
            width: 55%;
        }
    }

    @@media screen and (max-width: 325px) {
        .brgtblpromo {
            width: 47%;
        }
    }
</style>
<div id="loading_promosi_tab">
    <div id="loading_promosi_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive brgtblpromo">
    <table class="table table-striped table-bordered table-hover">
        @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
        <thead>
            <tr role="row">
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 80px;">Kode Barang</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 120px;">Nama Barang</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Nama Promosi</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Marketplace</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Tanggal Mulai</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Tanggal Akhir</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Harga Normal</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 90px;">Harga Promosi</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 50px;">% promosi</th>

            </tr>
        </thead>
        <tbody>
            @*@foreach (var promosi in Model.ListPromosi)*@
            @foreach (var promosi in Model)
            {               
            <tr>
                <td>@promosi.BRG</td>
                <td>@promosi.NAMA_BARANG</td>
                <td>@promosi.NAMA_PROMO</td>
                <td>
                    @promosi.NAMAMARKET
                </td>
                <td>@(promosi.TGL_MULAI.ToString("dd/MM/yyyy"))</td>
                <td>@(promosi.TGL_AKHIR.ToString("dd/MM/yyyy"))</td>
                <td style="text-align:right">
                    @String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", promosi.HARGA_NORMAL)
                </td>
                <td style="text-align:right">
                    @String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", promosi.HARGA_PROMO)
                </td>
                <td>
                    @promosi.PERSEN_PROMO
                </td>
            </tr>
            }
        </tbody>
    </table>

    @* add by nurul 13/6/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelbarangpromosipartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableBarangPromosi", new
            {
                page,
                search = ViewData["searchParam"]
            }),
                 new PagedListRenderOptions
                 {
                     LinkToFirstPageFormat = "<<",
                     LinkToPreviousPageFormat = "prev",
                     LinkToNextPageFormat = "next",
                     LinkToLastPageFormat = ">>",
                     DisplayEllipsesWhenNotShowingAllPageNumbers = false
                 })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
</div>
<script type="text/javascript">
        $(function () {
            $('#tabelbarangpromosipartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            $('#loading_promosi_tab').show();
                        },
                        success: function (response) {
                            $('#table-barang-promosi-partial').html(response);
                            $('#loading_promosi_tab').hide();
                        }
                    });
                }
                return false;

            });
        });
</script>
@* end add by nurul 13/6/2019, paging *@

