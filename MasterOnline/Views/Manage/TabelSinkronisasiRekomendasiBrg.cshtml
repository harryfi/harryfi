@using System.Globalization
@using MasterOnline.ViewModels
@using PagedList.Mvc
@model PagedList.IPagedList<mdlSinkroBarang>

<style>
    #loading_uploadbarang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_uploadbarang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }

    .kolom_nama {
        word-wrap: break-word;
        max-width: 90px;
    }

    .kolom_brg {
        word-wrap: break-word;
        max-width: 45px;
    }
</style>
<div id="loading_uploadbarang_tab" style="display:none;">
    <div id="loading_sinkrobarang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover" style="width:300px;">
    <thead>
        <tr role="row">
            <th class="sorting kolom_brg" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 45px; ">Kode Barang</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 30px;">Gambar</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 60px; max-width: 90px;">Nama Barang</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 15px;">Pilih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var barang in Model)
        {
            <tr>
                <td class="kolom_brg">@barang.BRG</td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(barang.GAMBAR_MO))
                    {
                        <img width="50" height="50" src="@barang.GAMBAR_MO" />
                    }
                </td>
                <td>@barang.NAMABRG</td>
                <td class="edit-hapus-col">
                    <button class="btn btn-danger" onclick="pilihBrgMaster('@barang.RECNUM')">
                        <span>V</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PageCount > 1)
{
    <div id="tabelsinkrobarangpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableBarangSinkroMaster", new
   {
       page,
       search = ViewData["searchParam"]
   }),
        new PagedListRenderOptions
        {
        LinkToFirstPageFormat = "<<",
        LinkToPreviousPageFormat = "prev",
        LinkToNextPageFormat = "next",
        LinkToLastPageFormat = ">>",
        DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelsinkrobarangpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                var link = this.href;
                link += "&cust=replaceCust";
                link = link.replace("replaceCust", encodeURIComponent($('#promptHiddenField').val()));

                $.ajax({
                    //url: this.href,
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_uploadbarang_tab').show();
                    },
                    success: function (response) {
                        $('#form-rekomendasi').html(response);
                        $('#loading_uploadbarang_tab').hide();
                    }
                });
            }
            return false;

        });
    });
</script>
