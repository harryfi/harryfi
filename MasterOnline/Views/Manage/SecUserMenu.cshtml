                                        <td style="padding-top: 4px; padding-bottom: 4px;"><span style="font-weight: bold; ">@form.NamaForm</span></td>
                                        <td class="text-center" style="padding-top: 4px; padding-bottom: 4px;">
                                            <div class="btn-group has-child" data-toggle="buttons" data-form-id="@form.ScrId">
                                                @{
                                                    var checkInSec = Model.ListSec.FirstOrDefault(s => s.FormId == form.ScrId);

                                                    if (checkInSec == null)
                                                    {
                                                        <label class="btn btn-success">
                                                            <input id="@form.ScrId" data-parent-id="@form.ParentId" type="checkbox" autocomplete="off">
                                                            <span class="glyphicon glyphicon-ok"></span>
                                                        </label>
                                                    }
                                                    else
                                                    {
                                                        <label class="btn btn-success active">
                                                            <input id="@form.ScrId" data-parent-id="@form.ParentId" type="checkbox" autocomplete="off" checked>
                                                            <span class="glyphicon glyphicon-ok"></span>
                                                        </label>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>

                                    foreach (var formChild in Model.ListForms)
                                    {
                                        if (formChild.ParentId == form.ScrId)
                                        {
                                            <tr>
                                                <td style="padding-top: 4px; padding-bottom: 4px;"><span style="margin-left: 30px; ">@formChild.NamaForm</span></td>
                                                <td class="text-center" style="padding-top: 4px; padding-bottom: 4px;">
                                                    <div class="btn-group has-parent" data-toggle="buttons" data-form-id="@formChild.ScrId" data-form-parent-id="@formChild.ParentId">
                                                        @{
                                                            var childCheckInSec = Model.ListSec.FirstOrDefault(s => s.FormId == formChild.ScrId);

                                                            if (childCheckInSec == null)
                                                            {
                                                                <label class="btn btn-success">
                                                                    <input id="@formChild.ScrId" data-parent-id="@formChild.ParentId" type="checkbox" autocomplete="off">
                                                                    <span class="glyphicon glyphicon-ok"></span>
                                                                </label>
                                                            }
                                                            else
                                                            {
                                                                <label class="btn btn-success active">
                                                                    <input id="@formChild.ScrId" data-parent-id="@formChild.ParentId" type="checkbox" autocomplete="off" checked>
                                                                    <span class="glyphicon glyphicon-ok"></span>
                                                                </label>
                                                            }
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else if (!form.HaveChild && form.ParentId == 0)
                                {
                                    <tr>
                                        <td style="padding-top: 4px; padding-bottom: 4px;"><span style="font-weight: bold; ">@form.NamaForm</span></td>
                                        <td class="text-center" style="padding-top: 4px; padding-bottom: 4px;">
                                            <div class="btn-group has-child" data-toggle="buttons" data-form-id="@form.ScrId">
                                                @{
                                                    var checkInSec = Model.ListSec.FirstOrDefault(s => s.FormId == form.ScrId);

                                                    if (checkInSec == null)
                                                    {
