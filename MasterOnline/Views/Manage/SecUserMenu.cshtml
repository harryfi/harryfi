@if (Model.User != null)
{
    <br /><br />
    <div style="background-color: #fff; padding: 20px;">
        <button class="btn btn-primary btn-lg pull-right" type="button" id="submit-sec">Simpan</button>

        @using (Html.BeginForm("SaveSecUser", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-security-user" }))
        {
            <div class="row">
                <div class="col-lg-3">
                    <label class="control-label">Username</label>
                    <input class="form-control" type="text" disabled="disabled" value="@Model.User.Username" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Email</label>
                    <input class="form-control" type="text" disabled="disabled" value="@Model.User.Email" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped table-responsive" id="table-security">
                        <thead>
                            <tr>
                                <th>Form</th>
                                <th style="width: 75px; max-width: 75px;">Access</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding-top: 4px; padding-bottom: 4px;"><span style="font-weight: bold; ">Dashboard</span></td>
                                <td class="text-center" style="padding-top: 4px; padding-bottom: 4px;">
                                    <div class="btn-group has-child" data-toggle="buttons" data-form-id="2065">
                                        @{
                                            var checkInSecDash = Model.ListSec.FirstOrDefault(s => s.FormId == 2065);

                                            if (checkInSecDash == null)
                                            {
                                                <label class="btn btn-success">
                                                    <input id="2065" data-parent-id="0" type="checkbox" autocomplete="off">
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="btn btn-success active">
                                                    <input id="2065" data-parent-id="0" type="checkbox" autocomplete="off" checked>
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                </label>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                            @foreach (var form in Model.ListForms)
                            {
                                if (form.HaveChild)
                                {
