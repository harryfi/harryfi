                                                    }
                                                    else
                                                    {
                                                        <label class="btn btn-success active">
                                                            <input id="@form.ScrId" data-parent-id="@form.ParentId" type="checkbox" autocomplete="off" checked>
                                                            <span class="glyphicon glyphicon-ok"></span>
                                                        </label>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $('.has-child').click(function() {
                var formIdAsParent = $(this).attr('data-form-id');
                var activated = $(this).find('label').hasClass('active');

                if (!activated) {
                    $('.has-parent').each(function() {
                        var formParentId = $(this).attr('data-form-parent-id');

                        if (formParentId === formIdAsParent) {
                            $(this).find('label').addClass('active');
                            $(this).find('input').attr('checked', true);
                        }
                    });
                } else {
                    $('.has-parent').each(function () {
                        var formParentId = $(this).attr('data-form-parent-id');

                        if (formParentId === formIdAsParent) {
                            $(this).find('label').removeClass('active');
                            $(this).find('input').attr('checked', false);
                        }
                    });
                }
            });

            $('.has-parent').click(function() {
                var formParentId = $(this).attr('data-form-parent-id');
                $('.has-child[data-form-id="' + formParentId + '"]').find('label').addClass('active');
                $('.has-child[data-form-id="' + formParentId + '"]').find('input').attr('checked', true);
            });

            $("#submit-sec").click(function () {
                var formSecArray = [];
                var parentSecArray = [];
                var counter = 0;

                $("#table-security tr td label.active").each(function () {
                    formSecArray[counter] = $(this).find("input").attr("id");
                    parentSecArray[counter] = $(this).find("input").attr("data-parent-id");
                    counter++;
                });

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SaveSecUser", "Manage")',
                    data: JSON.stringify({
                        FormArray: formSecArray,
                        ParentArray: parentSecArray
                    }),
                    contentType: 'application/json; charset=UTF-8',
                    cache: false,
                    success: function () {
                        alert('Data security user berhasil disimpan!');
                    },
                    error: function (xhr) {
                        console.log(xhr);
                    }
                });
            });
        });
    </script>
}