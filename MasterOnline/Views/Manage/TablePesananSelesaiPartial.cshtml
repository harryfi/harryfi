@using System.Globalization
@*@model MasterOnline.ViewModels.PesananViewModel*@
@using PagedList.Mvc
@model PagedList.IPagedList<mdlPesanan>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<style>
    #loading_pesanan_selesai_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_pesanan_selesai_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_pesanan_selesai_tab">
    <div id="loading_pesanan_selesai_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page_5" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive">
    <table class="table table-striped table-bordered table-hover">
        @*<table id="datatable_selesai" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">No. Pesanan</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">No. Referensi</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">No. Faktur</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 130px;">Tgl. Pesanan</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 127px;">Marketplace</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 120px;">Pembeli</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100px;">Kurir</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 100px;">Undo Status</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 90px;">Lihat Detail</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var pesanan in Model.ListPesanan)*@
            @foreach (var pesanan in Model)
            {
                //var buyer = Model.ListPembeli.SingleOrDefault(m => m.BUYER_CODE == pesanan.PEMESAN);
                //var pelanggan = Model.ListPelanggan.FirstOrDefault(m => m.CUST == pesanan.CUST);
                //var idMarket = 0;
                //if (pelanggan != null)
                //{
                //    idMarket = Convert.ToInt32(pelanggan.NAMA);
                //}
                //var market = Model.ListMarketplace.FirstOrDefault(m => m.IdMarket == idMarket);
                //var NamaMarket = "";
                //if (market != null)
                //{
                //    NamaMarket = market.NamaMarket;
                //}
                //var faktur = Model.ListFaktur.SingleOrDefault(f => f.NO_SO == pesanan.NO_BUKTI);
                <tr>
                    <td>@pesanan.NOSO</td>
                    <td>@pesanan.REFERENSI</td>
                    <td>@(pesanan.NO_FAKTUR != null ? pesanan.NO_FAKTUR : "-")</td>
                    <td>@(pesanan.TGL?.ToString("dd/MM/yyyy HH:mm"))</td>
                    @*<td>@NamaMarket</td> 'change by nurul 14/2/2019*@
                    <td>
                        @if (pesanan.PERSO != "")
                        {
                            @(pesanan.MARKET + " (" + pesanan.PERSO + ")")
                        }
                        else
                        {
                            @pesanan.MARKET
                        }
                    </td>
                    <td>
                        @*remark by nurul 24/9/2018 @(buyer.NAMA + " (" + buyer.PERSO + ")")*@
                        @*@(buyer == null ? "" : buyer.NAMA + " (" + pelanggan?.PERSO + ")")*@
                        @*@(buyer == null ? "" : buyer.NAMA)*@
                        @pesanan.PEMBELI
                    </td>
                    <td>@pesanan.SHIPMENT</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", pesanan.TOTAL)</td>
                    <td class="edit-hapus-col">
                        @if (pesanan.MARKET != "")
                        {
                            <button class="btn btn-warning" data-toggle="modal" data-target="#konfUndoStatusSelesai" onclick="passRecStatus(@pesanan.RECNUM, '03-undo', '@pesanan.NOSO')">
                                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                            </button>
                        }
                        else
                        {
                            <button style="background-color:darkgray; cursor:not-allowed">
                                <span class="glyphicon glyphicon-arrow-left" aria-hidden="false"></span>
                            </button>
                        }
                    </td>
                    <td class="edit-hapus-col">
                        <button class="btn btn-primary" onclick="lihatPesanan(@(pesanan.RECNUM))">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @* add by nurul 7/5/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelpesananselesaipartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTablePesananSelesai", new
            {
                page,
                search = ViewData["searchParam"]
            }),
             new PagedListRenderOptions
             {
                 LinkToFirstPageFormat = "<<",
                 LinkToPreviousPageFormat = "prev",
                 LinkToNextPageFormat = "next",
                 LinkToLastPageFormat = ">>",
                 DisplayEllipsesWhenNotShowingAllPageNumbers = false
             })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#tabelpesananselesaipartialpager').on('click', 'a', function () {
            if (this.href != "") {
                //add by nurul 4/12/2019
                var filterby = get_pesanan_selesai_filterby();
                var filtervalue = get_pesanan_selesai_filtervalue(filterby);
                var link = this.href;
                link += "&filter=replaceFilter&filtervalue=replaceValueFilter";
                link = link.replace("replaceFilter", encodeURIComponent(filterby));
                link = link.replace("replaceValueFilter", encodeURIComponent(filtervalue));
                //end add by nurul 4/12/2019

                $.ajax({
                    //url: this.href,
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_pesanan_selesai_tab').show();
                    },
                    success: function (response) {
                        $('#table-pesanan-selesai-partial').html(response);
                        $('#loading_pesanan_selesai_tab').hide();
                    }
                });
            }
            return false;
        });
    });
</script>
@* end add by nurul 30/4/2019, paging *@
