                    }
                    //end change
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }


        function validateInput(obj,option) {
            var x = obj;
            setTimeout(function () {
                ValidateFullNamePaste2(x, option);
            }, 2);
        }

        function ValidateFullNamePaste2(obj, option) {
            var x = obj;
            var strValidChars = "";
            var totalCharacterCount = x.val();  //window.clipboardData.getData('Text');

            if (option == 'HURUF')
                strValidChars = "1234567890~!#$%^&*()_+|}{':;?/>.<,\"[]\\=";
            if (option == 'HURUFANGKA')
                strValidChars = "~!#$%^&*()_+|}{':;?/>.<,\"[]\\=";
            if (option == 'ANGKA')
                strValidChars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz~!#$%^&*()_+|}{':;?/><,\"[]\\=";

            var strChar;
            var FilteredChars = "";
            for (i = 0; i < totalCharacterCount.length; i++) {
                strChar = totalCharacterCount.charAt(i);
                if (strValidChars.indexOf(strChar) == -1) {
                    FilteredChars = FilteredChars + strChar;
                }
            }
            obj.val(FilteredChars);
            return false;
        }

        //add by nurul 7/5/2019
        function refreshTableGudang() {
            //var link = '@Url.Action("RefreshTableGudang", "Manage")';
            var $link = '@Html.Raw(Url.Action("RefreshTableGudang", "Manage", new { page = "replaceLastPage", search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_gudang').val());
            $link = $link.replace("replaceLastPage", $('#txt_last_page').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#table-gudang-partial').hide();
                    $('#loading_gudang_tab').show();
                },
                success: function (response) {
                    $('#table-gudang-partial').html(response);
                    $('#loading_gudang_tab').hide();
                    $('#table-gudang-partial').show();
                    $(".checkbox_linkMP").attr('disabled', 'disabled');
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
        function searchTableGudang(){
            var $link = '@Html.Raw(Url.Action("RefreshTableGudang", "Manage", new { search = "replaceSearch" }))';
            $link = $link.replace("replaceSearch", $('#search_gudang').val());

            $.ajax({
                type: "GET",
                url: $link,
                beforeSend: function () {
                    $('#search_gudang_click')[0].disabled = true;
                    $('#loading_gudang_tab').show();
                },
                success: function (response) {
                    $('#search_gudang_click')[0].disabled = false;
                    $('#table-gudang-partial').html(response);
                    $('#loading_gudang_tab').hide();
                    $(".checkbox_linkMP").attr('disabled', 'disabled');
                },
                error: function (xhr, status, error) {
                    $('#search_gudang_click')[0].disabled = false;
                    console.log(error);
                }
            });
        }
        //end add by nurul 7/5/2019
    </script>
}
