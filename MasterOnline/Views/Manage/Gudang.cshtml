                                        {
                                            @Html.HiddenFor(m => m.Gudang.ID)
                                            @Html.HiddenFor(m => m.Gudang.QOH_SALES, new { Value = false })
                                            @Html.HiddenFor(m => m.Gudang.AL1, new { Value = " " })
                                            @Html.HiddenFor(m => m.Gudang.AL2, new { Value = " " })
                                            @Html.HiddenFor(m => m.Gudang.AL3, new { Value = " " })
                                            @Html.HiddenFor(m => m.Gudang.GD_KONSINYASI, new { Value = false })
                                            @Html.HiddenFor(m => m.Gudang.CUSTOMER, new { Value = " " })
                                            @Html.HiddenFor(m => m.Gudang.DISCOUNT, new { Value = false })
