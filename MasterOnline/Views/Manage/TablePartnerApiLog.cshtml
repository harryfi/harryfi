@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels

@model PagedList.IPagedList<PARTNER_API_LOG_ERROR_VIEW>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}

<style>
    @@media screen and (max-width: 445px) {
        .mrktlog {
            width: 66%;
        }
    }
</style>

<script type="text/javascript">
    function retryInvoice(nobukti, fs_id) {
        //var retryid = $('#btnRetryJob' + nobukti);
        //retryid.attr("disabled", true);
        debugger;
        var link = '@Url.Action("RetryInvoiceApi", "Manage", new { nobukti = "replaceNoNobuk", fs_id = "replaceFsId" })';
        link = link.replace("replaceNoNobuk", encodeURIComponent(nobukti));
        link = link.replace("replaceFsId", encodeURIComponent(fs_id));
        link = link.replace("&amp;", "&");
        $.ajax({
            type: "POST",
            url: link,
            contentType: 'application/json',
            cache: false,
            beforeSend: function () {
                $('#loading_barang_tab').show();
            },
            success: function (response) {
                $('#loading_barang_tab').hide();
                refreshTableApiLog();
            },
            error: function (response) {
                //retryid.attr("disabled", false);
                if (response == "Failed") {
                    $('#loading_barang_tab').hide();
                    alert("Partner tidak ada");
                }
            }
        });
    }
    var $tempLog = "";
</script>
<div id="loading_barang_tab" class="loading_barang_tab_class">
    <div id="loading_barang_tab_image" class="loading_barang_tab_image_class">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr role="row">
            <!--<th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 40px; max-width: 40px; border-left:hidden; align-self:flex-start"><input type="checkbox" class="dt-checkboxes-select-all" id="checkbox_all_partnerapi" style="border-left:hidden;align-self:flex-start; width:30px; height:28px;" /></th>--> <!--margin-top: 20px;-->
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 100px;">No. Bukti</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Aktivitas</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 70px;">Tanggal</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 120px;">Keterangan</th>
            @*<th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 200px;">JSON String</th>*@
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 45px;">Coba Lagi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aktivitas in Model)
        {
            <tr>
                @*<td style="text-align:center"><input type="checkbox" class="dt-checkboxes center checkbox_partnerapi" id="chekbox-@(aktivitas.log_id)" data-recnum="@aktivitas.log_id" style="border-left:hidden; align-self:flex-start; width:30px; height:28px;" /></td>*@
                <td style="text-align:center">@aktivitas.No_Bukti</td>
                <td style="text-align:center">@aktivitas.Modul</td>
                <td style="text-align:center">@aktivitas.Created_Date</td>
                <td style="text-align:center">@aktivitas.Keterangan</td>
                @*<td style="text-align:center">@aktivitas.JSON_String</td>*@
                <td style="text-align:center">
                    <button class="btn btn-default retry-api" type="button" style="border:1px;padding:2px 8px 2px 8px;margin:0px" title="Coba Lagi"
                            onclick="retryInvoice('@aktivitas.No_Bukti', '@aktivitas.fs_id.ToString()')"
                            disabled="@(aktivitas.Keterangan.Contains("Batch") ||
                                        //aktivitas.Keterangan.Contains("connection was closed") ||
                                        //aktivitas.Keterangan.Contains("timed out") ||
                                        aktivitas.Modul.Contains("Webhook Update Stok")
                                                )">
                        <span class="glyphicon glyphicon-repeat"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageCount > 1)
{
    <div id="tabellogerrorpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableApiLog", new
   {
       take = ViewData["takeRecord"],
       page,
       search = ViewData["searchParam"],

        }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
}

<script type="text/javascript">
    $(function () {
        $('#tabellogerrorpager').on('click', 'a', function () {
            if (this.href != "") {
                var link = this.href;
                link += "&take=replaceTake&page=replaceLastPage";
                link = link.replace("replaceTake", encodeURIComponent($('#TakeRecordInvoicing').val()));
                link = link.replace("replaceSearch", encodeURIComponent($('#search_api_log').val()));
                $.ajax({
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        //$('#table-barang-1-partial').hide();
                        $('#loading_barang_tab').show();
                    },
                    success: function (response) {
                        $('#table-partner-api-log-error').html(response);
                        $('#loading_barang_tab').hide();
                        $page = @Model.PageNumber;
                        $GetPage = @Model.PageCount;
                    },
                    error: function (response) {
                        //retryid.attr("disabled", false);
                    }
                });
                return false;
            }
        });
    });
</script>
