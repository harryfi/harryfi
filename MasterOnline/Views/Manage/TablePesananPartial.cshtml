@using System.Globalization
@model MasterOnline.ViewModels.PesananViewModel
<table id="datatable" class="table table-striped table-bordered" width="100%" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 130px;">No. Order</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">Tanggal Pesanan</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 117px;">Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 90px;">Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total</th>
            @*add by nurul 22/1/2019*@
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 90px;">Status</th>
            @*end add by nurul 22/1/2019*@
            @* change by nurul 8/10/2018 <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 90px; text-align: center;">Sdh. Dibayar</th>*@
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 90px; text-align: center;">Ubah Status</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 50px; max-width: 50px; text-align: center;">Edit</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 50px; max-width: 50px; text-align: center;">Hapus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pesanan in Model.ListPesanan)
        {
            //var buyer = Model.ListPembeli.Single(m => m.BUYER_CODE == pesanan.PEMESAN);
            var buyer = Model.ListPembeli.SingleOrDefault(m => m.BUYER_CODE == pesanan.PEMESAN);
            var pelanggan = Model.ListPelanggan.FirstOrDefault(m => m.CUST == pesanan.CUST);
            var idMarket = 0;

            var buyerNama = "";
            var buyerPerso = "";
            if (buyer != null)
            {
                buyerNama = buyer.NAMA;
                buyerPerso = buyer.PERSO;
            }

            var perso = "";
            if (pelanggan != null)
            {
                idMarket = Convert.ToInt32(pelanggan.NAMA);
                perso = pelanggan.PERSO;
            }
            var market = Model.ListMarketplace.FirstOrDefault(m => m.IdMarket == idMarket);
            var NamaMarket = "";
            if (market != null)
            {
                NamaMarket = market.NamaMarket;
            }

            //add by nurul 22/1/2019
            var StatusTx = "";
            if (pesanan.STATUS_TRANSAKSI == "0")
            {
                StatusTx = "Pesanan Baru";
            }
            else if (pesanan.STATUS_TRANSAKSI == "01")
            {
                StatusTx = "Sudah Dibayar";
            }
            else if (pesanan.STATUS_TRANSAKSI == "02")
            {
                StatusTx = "Packing";
            }
            else if (pesanan.STATUS_TRANSAKSI == "03")
            {
                StatusTx = "Invoicing";
            }
            else if (pesanan.STATUS_TRANSAKSI == "04")
            {
                StatusTx = "Selesai";
            }
            else if (pesanan.STATUS_TRANSAKSI == "11")
            {
                StatusTx = "Batal";
            }
            //end add by nurul 22/1/2019

        <tr>
            <td>@pesanan.NO_BUKTI</td>
            <td>@(pesanan.TGL?.ToString("dd/MM/yyyy"))</td>
            @*<td>@NamaMarket</td> 'change by nurul 14/2/2019*@
            <td>
                @if (perso != "")
                {
                    @(NamaMarket + " (" + perso + ")")
                }
                else
                {
                    @NamaMarket
                }
            </td>
            <td>
                @*change by nurul 30/1/2019 -- @(buyer.NAMA + " (" + perso + ")")*@
                @*@(buyerNama + " (" + perso + ")") 'change by nurul 14/2/2019*@
                @buyerNama
            </td>
            <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", pesanan.NETTO)</td>
            @*add by nurul 22/1/2019*@
            <td>@StatusTx</td>
            @*end add by nurul 22/1/2019*@
            <td class="edit-hapus-col">
                @if (StatusTx == "Pesanan Baru")
                {
                    <button class="btn btn-success" data-toggle="modal" data-target="#konfUbahStatus" onclick="passRecStatus(@pesanan.RecNum, '01', '@pesanan.NO_BUKTI')">
                        @* change by nurul 8/10/2018 <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>*@
                        @*<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>*@
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </button>
                }
                else
                {
                    <button style="background-color:darkgray; cursor:not-allowed">
                        <span class="glyphicon glyphicon-edit" aria-hidden="false"></span>
                    </button>
                }
            </td>
            <td class="edit-hapus-col">
                @if (StatusTx == "Pesanan Baru")
                {
                    <button class="btn btn-primary" onclick="editPesanan1(@pesanan.RecNum)">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                }
                else
                {
                    <button class="btn btn-primary" onclick="LihatPesanan1(@(pesanan.RecNum))">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                }
            </td>
            <td class="edit-hapus-col">
                @if (StatusTx == "Pesanan Baru")
                {
                    <button class="btn btn-danger" data-toggle="modal" data-target="#konfHapusPesanan" onclick="pass(@pesanan.RecNum, '@pesanan.NO_BUKTI')">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                }
                else
                {
                    <button style="background-color:darkgray; cursor:not-allowed">
                        <span class="glyphicon glyphicon-trash" aria-hidden="false"></span>
                    </button>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
