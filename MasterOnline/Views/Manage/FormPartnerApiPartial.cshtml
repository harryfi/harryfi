<div class="form-group">
    @Html.LabelFor(m => m.partner_api.Status, "Webhook", new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.HiddenFor(m => m.partner_api.Status)
        <select class="form-control" id="api_status" placeholder="Harap Pilih" name="api_status" required="required">
            <option value="True">Aktif</option>
            <option value="False">Tidak Aktif</option>
        </select>
    </div>
</div>
<div class="form-group" id="status-sync">
    @Html.LabelFor(m => m.partner_api.isPaid, "Status Invoice", new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.HiddenFor(m => m.partner_api.isPaid)
        <select class="form-control" id="inv_status" placeholder="Harap Pilih" name="inv_status" required="required">
            <option value="True">Lunas</option>
            <option value="False">Belum Lunas</option>
        </select>
    </div>
</div>
<hr />

<button type="button" id="simpan_btn" class="btn btn-primary pull-right" onclick="simpanPartnerApi(this)">Simpan</button>

<script src="~/Content/build/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>
<script src="~/Content/selectize.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#api_status").change(function () {
        if ($("#api_status").val() == "True") {
            $("#partner_api_Status").val('True');
            $("#api_status option:selected").text('Aktif');
        } else if ($("#api_status").val() == "False") {
            $("#partner_api_Status").val('False');
            $("#api_status option:selected").text('Tidak Aktif');
        }
    });
    $("#inv_status").change(function () {
        if ($("#inv_status").val() == "True") {
            $("#partner_api_isPaid").val('True');
            $("#api_status option:selected").text('Aktif');
        } else if ($("#inv_status").val() == "False") {
            $("#partner_api_isPaid").val('False');
            $("#inv_status option:selected").text('Tidak Aktif');
        }
    });
</script>