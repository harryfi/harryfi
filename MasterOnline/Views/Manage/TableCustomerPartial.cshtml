<style>
    #loading_customer_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_customer_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_customer_tab">
    <div id="loading_customer_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">

    @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
    <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 115px;">Nama Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">Email</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 25px;">Sync Pesanan & Stok</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 25px;">Link Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 25px;">Tanggal Expired</th>
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Alamat</th>*@
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">No. HP</th>*@
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Edit</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Hapus</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var customer in Model.ListCustomer)*@
        @foreach (var customer in Model)
        {
            //var idMarket = Convert.ToInt32(customer.NAMA);
            //var namaMarket = context.Marketplaces.Single(m => m.IdMarket == idMarket).NamaMarket;
        <tr>
            @*<td>@namaMarket</td>*@
            <td>@customer.NAMA</td>
            <td>@customer.EMAIL</td>
            <td>
                @{
                    if (customer.TIDAK_HIT_UANG_R.Equals(true))
                    {
                        <text><center>Aktif</center></text>
                    }
                    else if (customer.TIDAK_HIT_UANG_R.Equals(false))
                    {
                        <text><center>Tidak Aktif</center></text>
                    }
                    else
                    {
                        <text><center>Tidak Aktif</center></text>
                    }
                }
            </td>
            <td>
                @{
                    if (!string.IsNullOrEmpty(customer.STATUS_API))
                    {
                        if (customer.STATUS_API.Equals("1"))
                        {
                            <text><center>Aktif</center></text>
                        }
                        else if (customer.STATUS_API.Equals("2"))
                        {
                            <text><center>Ekspired</center></text>
                        }
                        else
                        {
                            <text><center>Tidak Aktif</center></text>
                        }
                    }
                    else
                    {
                        <text><center>Tidak Aktif</center></text>
                    }
                }
            </td>
            <td>
                @{
                    if (!string.IsNullOrWhiteSpace(customer.TGL_EXPIRED.ToString()))
                    {
                        <text><center>@customer.TGL_EXPIRED.ToString().Replace("AM", "").Replace("PM", "")</center></text>
                    }
                    else
                    {
                        <text><center>~</center></text>
                    }
                }
            </td>
            @*<td>@(customer.AL.Length > 30 ? customer.AL.Substring(0, 30) + "....." : customer.AL)</td>
        <td>@customer.TLP</td>*@
            <td class="edit-hapus-col">
                <button class="btn btn-primary" onclick="editcustomer('@customer.RECNUM')">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
            </td>
            <td class="edit-hapus-col">
                <button class="btn btn-danger" data-toggle="modal" data-target="#konfHapuscustomer" onclick="pass('@customer.RECNUM', '@customer.NAMA (@customer.PERSO)')">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>

@* add by nurul 14/5/2019, paging *@
@if (Model.PageCount > 1)
{
    <div id="tabelcustomerpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableCustomer", new
   {
       page,
       search = ViewData["searchParam"]
   }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelcustomerpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_customer_tab').show();
                    },
                    success: function (response) {
                        $('#table-customer-partial').html(response);
                        $('#loading_customer_tab').hide();
                    }
                });
            }
            return false;
        });
    });
</script>
@* end add by nurul 14/4/2019, paging *@
