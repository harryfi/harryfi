@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels
@model PagedList.IPagedList<mdlDetailStok>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}

<style>
    #loading_detail_stok_barang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_detail_stok_barang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>

<div id="loading_detail_stok_barang_tab" class="text-center">
    <div id="loading_detail_stok_barang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
@if (Model.Count() > 0)
{
    <input id="txt_last_page_detail_stok" type="hidden" class="form-control" value="@ViewData["LastPage"]">
    <div>
        <table id="datatable" class="table table-striped table-bordered table-hover" role="grid" >
            <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" width="150px">Kode Gudang</th>
                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" width="250px">Nama Gudang</th>
                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1">Stok</th>
                    <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 200px; width: 200px;">Link Ke Marketplace</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gudang in Model)
                {
                    <tr>
                        <td>@gudang.Kode_Gudang</td>
                        <td>@gudang.Nama_Gudang</td>
                        <td>@gudang.JUMLAH</td>
                        <td class="text-center" style="max-width: 200px; width: 200px;">
                            @if (gudang.KD_HARGA_JUAL != "0" && gudang.KD_HARGA_JUAL != "" && gudang.KD_HARGA_JUAL != " " && gudang.KD_HARGA_JUAL != null)
                            {
                                <input type="checkbox" class="dt-checkboxes center" style="width:30px; height:28px;" disabled="disabled" />
                            }
                            else
                            {
                                <input type="checkbox" class="dt-checkboxes center" style="width:30px; height:28px;" checked="checked" disabled="disabled" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    if (Model.PageCount > 1)
    {
        <div id="tabeldetailstokpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("LihatDetailStok", new
       {
           page,
           search = ViewData["searchParam"],
           brgId = ViewData["tempBarang"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
}
else
{
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-12 col-sm-12">Tidak ada detail pesanan.</label>
        </div>
    </div>
}
<script type="text/javascript">
    @{
        var qtyGd = Model.TotalItemCount;
    }
    var qtyGd = @Html.Raw(Json.Encode(qtyGd));
    $(document).ready(function () {
        tempGd = qtyGd;
        $('#ttl-gd').text(": " + tempGd);
    });
    $(function () {
        $('#tabeldetailstokpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#list-detail-stok').hide();
                        $('#loading_detail_stok_barang_tab').show();
                    },
                    success: function (response) {
                        $('#list-detail-stok').html(response);
                        $('#loading_detail_stok_barang_tab').hide();
                        $('#list-detail-stok').show();
                    }
                });
                return false;
            }
        });
    });
</script>

