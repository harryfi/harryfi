@model MasterOnline.ViewModels.GudangViewModel
<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1">Kode</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1">Nama Gudang</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 200px; width: 200px;">Link Qty ke Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Edit</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Hapus</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var gudang in Model.ListGudang)
    {
        <tr>
            <td>@gudang.Kode_Gudang</td>
            <td>@gudang.Nama_Gudang</td>
            <td class="text-center" style="max-width: 200px; width: 200px;">
                @if (gudang.KD_HARGA_JUAL == "1")
                {
                    <input type="checkbox" class="dt-checkboxes center checkbox_linkMP" data-recnum="@gudang.ID" style="width:30px; height:28px;" checked="checked" />
                }
                else
                {
                    <input type="checkbox" class="dt-checkboxes center checkbox_linkMP" data-recnum="@gudang.ID" style="width:30px; height:28px;" />
                }
            </td>
            <td class="edit-hapus-col">
                <button class="btn btn-primary" onclick="editGudang(@gudang.ID)">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
            </td>
            <td class="edit-hapus-col">
                <button class="btn btn-danger" data-toggle="modal" data-target="#hapusGudang" onclick="pass(@gudang.ID, '@gudang.Nama_Gudang')">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>
