@using PagedList.Mvc
@*@model MasterOnline.ViewModels.GudangViewModel*@

@model PagedList.IPagedList<STF18>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<style>
    #loading_gudang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_gudang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_gudang_tab">
    <div id="loading_gudang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">
    @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
    <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1">Kode</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1">Nama Gudang</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 200px; width: 200px;">Link Qty ke Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Edit</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="max-width: 60px; width: 55px;">Hapus</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var gudang in Model.ListGudang)*@
        @foreach (var gudang in Model)
        {
            <tr>
                <td>@gudang.Kode_Gudang</td>
                <td>@gudang.Nama_Gudang</td>
                <td class="text-center" style="max-width: 200px; width: 200px;">
                    @if (gudang.KD_HARGA_JUAL != "0" && gudang.KD_HARGA_JUAL != "" && gudang.KD_HARGA_JUAL != " " && gudang.KD_HARGA_JUAL != null)
                    {
                        <input type="checkbox" class="dt-checkboxes center checkbox_linkMP" data-recnum="@gudang.ID" style="width:30px; height:28px;" disabled="disabled" />
                    }
                    else
                    {
                        <input type="checkbox" class="dt-checkboxes center checkbox_linkMP" data-recnum="@gudang.ID" style="width:30px; height:28px;" checked="checked" disabled="disabled" />
                    }
                </td>
                <td class="edit-hapus-col">
                    <button class="btn btn-primary" onclick="editGudang(@gudang.ID)">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>
                <td class="edit-hapus-col">
                    <button class="btn btn-danger" data-toggle="modal" data-target="#hapusGudang" onclick="pass(@gudang.ID, '@gudang.Nama_Gudang')">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageCount > 1)
{
 @* add by nurul 7/5/2019, paging *@
   <div id="tabelgudangpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableGudang", new
   {
       page,
       search = ViewData["searchParam"]
   }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelgudangpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_gudang_tab').show();
                    },
                    success: function (response) {
                        $('#table-gudang-partial').html(response);
                        $('#loading_gudang_tab').hide();
                    }
                });
            }
            return false;
        });
    });
</script>
@* end add by nurul 30/4/2019, paging *@
