            function refreshTableBundling() {
                var $link = '@Html.Raw(Url.Action("RefreshTableBundling", "Manage", new { page = "replaceLastPage", search = "replaceSearch" }))';
                $link = $link.replace("replaceSearch", encodeURIComponent($('#search_Bundling').val()));
                $link = $link.replace("replaceLastPage", encodeURIComponent($('#txt_last_page').val()));

                $.ajax({
                    type: "GET",
                    url: $link,
                    beforeSend: function () {
                        $('#table-Bundling-partial').hide();
                        $('#loading_Bundling_tab').show();
                    },
                    success: function (response) {
                        $('#table-Bundling-partial').html(response);
                        $('#loading_Bundling_tab').hide();
                        $('#table-Bundling-partial').show();
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
