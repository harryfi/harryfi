        function convertToAngka(rupiah) {

            if (rupiah == '') {
                rupiah = '0';
            }
            if (rupiah.includes(",")) {
                return parseFloat(rupiah.replaceAll('.', '').replaceAll(',', '.'));
            }
            else {
                //jika bisa desimal
                return parseFloat(rupiah.replaceAll(',', '.'));
            }
        }
