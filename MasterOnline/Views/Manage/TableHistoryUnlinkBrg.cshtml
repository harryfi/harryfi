
@using PagedList.Mvc
@using MasterOnline.ViewModels

@model PagedList.IPagedList<DataHistoryUnlinkBarang>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}

<div id="loading_history_barang_tab" class="loading_barang_tab_class">
    <div id="loading_history_barang_tab_image" class="loading_barang_tab_image_class">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll mrktlog">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr role="row">
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Kode Barang</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 100px;">Nama Barang</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 70px;">Tanggal</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Username</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 120px;">Akun Marketplace</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aktivitas in Model)
            {
                <tr>
                    <td style="text-align:center">@aktivitas.BRG</td>
                    <td style="text-align:center">@aktivitas.NAMABRG</td>
                    <td style="text-align:center">@aktivitas.TGL.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td style="text-align:center">@aktivitas.USERNAME</td>
                    <td style="text-align:center">@(aktivitas.NAMAMARKET + " (" + aktivitas.PERSO + ')')</td>                    
                </tr>
            }
        </tbody>
    </table>
    @* add by calvin 22 april 2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelhistorybarangpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableHistoryUnlink", new
       {
           page,
           search = ViewData["searchParam"],
           take = ViewData["takeRecord"],
       }),
                 new PagedListRenderOptions
                 {
                     LinkToFirstPageFormat = "<<",
                     LinkToPreviousPageFormat = "prev",
                     LinkToNextPageFormat = "next",
                     LinkToLastPageFormat = ">>",
                     DisplayEllipsesWhenNotShowingAllPageNumbers = false
                 })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#tabelhistorybarangpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        //$('#table-barang-1-partial').hide();
                        $('#loading_history_barang_tab').show();
                    },
                    success: function (response) {
                        $('#table-history-unlink-barang-partial').html(response);
                        $('#loading_history_barang_tab').hide();
                        $page = @Model.PageNumber;
                        $GetPage = @Model.PageCount;
                    }
                });
                return false;
            }
        });
    });
</script>
