@section scripts{
    <script src="~/Content/selectize.js" type="text/javascript"></script>
    <script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var table = $('#datatable').DataTable();
        $('#search_barang').keyup(function () {
            table.search($(this).val()).draw();
        });

        $(document).ready(function () {
            $('#promptHiddenField').val('');
            $('#txtCustomer').val('');

            $('#close-editor-1').off('click').on('click', function () {
                $('#close-editor-1')[0].disabled = true;
                $('.barang_table_section').show();
                $('.barang_editor_section').hide();
                refreshTableBarangUpload();
            });

            refreshTableBarangUpload();
        });

        function refreshTableBarangUpload() {
            var link = '@Url.Action("RefreshTableUploadBarang", "Manage", new { cust = "replaceCust" })';
            link = link.replace("replaceCust", $('#promptHiddenField').val());

            $.ajax({
                type: "GET",
                url: link,
                beforeSend: function () {
                    $('#datatable').hide();
                    $('#loading_barang_tab').show();
                },
                success: function (response) {
                    $('#table-upload-barang-partial').html(response);
                    var table = $('#datatable').DataTable();
                    $('#search_barang').keyup(function () {
                        table.search($(this).val()).draw();
                    });
                    $('#loading_barang_tab').hide();
                    $('#datatable').show();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function refreshFormBarang() {
            var link = '@Url.Action("RefreshFormUploadBarang", "Manage")';

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    $('#form-partial').html(response);
                    Initialize();
                    initRequired();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function PromptCustomer() {
            showPromptCustomerTextBoxWindow();
        }

        function showPromptCustomerTextBoxWindow() {
            var $link = '@Url.Action("PromptCustomer", "Manage")';
            window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
        }
        function afterPromptDelTempCust(val, val2) {
            $('#promptHiddenField').val(val);
            $('#txtCustomer').val(val2);
            refreshTableBarangUpload();
        }

        function GetDataBrg() {
            if ($('#promptHiddenField').val() == null || $('#promptHiddenField').val() == "" ) {
                alert('Anda belum memilih Toko');
            } else {
                var link = '@Url.Action("ImportDataMP", "Manage", new { cust = "replaceCust"})';
                link = link.replace("replaceCust", $('#promptHiddenField').val());

                $.ajax({
                    type: "GET",
                    url: link,
                    beforeSend: function () {
                        $('#datatable').hide();
                        $('#loading_barang_tab').show();
                    },
                    success: function (response) {
                        $('#table-upload-barang-partial').html(response);
                        var table = $('#datatable').DataTable();
                        $('#search_barang').keyup(function () {
                            table.search($(this).val()).draw();
                        });
                        $('#loading_barang_tab').hide();
                        $('#datatable').show();
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            }
        }
        function UploadAllBrg() {
            if ($('#promptHiddenField').val() == null || $('#promptHiddenField').val() == "" ) {
                alert('Anda belum memilih Toko');
            } else {
                var link = '@Url.Action("UploadItemByCust", "Manage", new { cust = "replaceCust"})';
                link = link.replace("replaceCust", $('#promptHiddenField').val());

                $.ajax({
                    type: "GET",
                    url: link,
                    beforeSend: function () {
                        $('#datatable').hide();
                        $('#loading_barang_tab').show();
                    },
                    success: function (response) {
                        if (response.Errors == null) {
                            $('#table-upload-barang-partial').html(response);
                            var table = $('#datatable').DataTable();
                            $('#search_barang').keyup(function () {
                                table.search($(this).val()).draw();
                            });
                        } else {
                            if (response.Errors.length > 0) {
                                response.Errors.forEach(ErrorMessageDialog);
                                alert(listErrorMessage);
                            } else {
                                var error = response.Errors[0].split(';');
                                if (error.length > 1) {
                                    alert('\nKode Barang :' + error[0] + '\nError message :' + error[1]);
                                } else {
                                    alert(error);
                                }
                            }
                        }
                        
                        $('#loading_barang_tab').hide();
                        $('#datatable').show();
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            }
        }
        var listErrorMessage = "";
        function ErrorMessageDialog(item, index) {
            var error = item.split(';');
            if (error.length > 1) {
                listErrorMessage += '\nKode Barang :' + error[0] + '\nError message :' + error[1] + '\n';
            } else {
                listErrorMessage += error;
            }
        }
        function editBarang(idBarang) {
            var link = '@Url.Action("EditBarangUpload", "Manage", new { brg_mp = "replaceId" })';
            link = link.replace("replaceId", idBarang);

            $.ajax({
                type: "GET",
                url: link,
                beforeSend: function () {
                    $('#loading_spinner').show();
                },
                success: function (response) {
                    $('#datatable').hide();
                    $('.barang_table_section').hide();
                    $('.barang_editor_section').show();
                    $('#form-partial').html(response);
                    $('#txtBrg').val($('#TempBrg_BRG_MP').val()).change();
                    //$('#Stf02_BRG').attr('disabled', 'disabled');
                    Initialize();
                    initRequired();
                    //$('#tambah_barang').click();
                    $('#close-editor-1')[0].disabled = false;
                    $('#loading_spinner').hide();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function Initialize() {
            $('input[name="select_all"]').off('click').on('click',
                function () {
                    var attr = $(this).attr('checked');

                    if (typeof attr !== typeof undefined && attr !== false) {
                        $('input[name="data-1"]').removeAttr('checked');
                        $('input[name="data-2"]').removeAttr('checked');
                    } else {
                        $('input[name="data-1"]').attr('checked', 'checked');
                        $('input[name="data-2"]').attr('checked', 'checked');
                    }
                });

            getKategori();
            getMerk();

            $("#Stf02_HJUAL").off('focus').focus(function () {
                $(this).val(convertToAngka($(this).val()));
            });

            $("#Stf02_HJUAL").off('keydown').on('keydown',
                function (e) {
                    if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                        // Allow: Ctrl+A, Command+A
                        (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                        // Allow: home, end, left, right, down, up
                        (e.keyCode >= 35 && e.keyCode <= 40)) {
                        // let it happen, don't do anything
                        return;
                    }
                    // Ensure that it is a number and stop the keypress
                    if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                        e.preventDefault();
                    }
                });

            $("#Stf02_HJUAL").off('change').on('change', function () {
                if ($(this).val() == '') {
                    $(this).val(0);
                }
                $(this).val(convertToAngka($(this).val()));

                var $input = $(this).val();
                var $rupiah = convertToRupiah($input);
                $(this).val($rupiah);

                //applyHargaPerMarket($rupiah);
            });

        }

        function ConvertToAngkaRupiah(source) {
            if (source.value == '') {
                source.value = 0;
            }
            source.value = (convertToAngka(source.value));
            source.value = (convertToRupiah(source.value));
        }

        function convertToRupiah(angka) {
            //change by calvin 26 september 2018
            //var rupiah = '';
            //var angkarev = angka.toString().split('').reverse().join('');
            //for (var i = 0; i < angkarev.length; i++) if (i % 3 === 0) rupiah += angkarev.substr(i, 3) + '.';
            //return rupiah.split('', rupiah.length - 1).reverse().join('') + ',00';
            return $.number(angka, 2, ',', '.');
            //end change by calvin 26 september 2018
        }

        function convertToAngka(rupiah) {

            //change by calvin 26 september 2018
            //return parseInt(rupiah.replace(/,.*|[^0-9]/g, ''), 10);
            return parseFloat(rupiah.replaceAll('.', '').replaceAll(',', '.'));
            //end change by calvin 26 september 2018
        }

        function uploadBarang(btnClicked) {

            var input = $("#Stf02_HJUAL").val();
            var angka = convertToAngka(input);
            $("#Stf02_HJUAL").val(angka);
            $('#Stf02_STN').val($('#Stf02_STN2').val());

            var $form = $(btnClicked).parents('form');
            var $formData = new FormData($('form').get(0));

            $.ajax({
                type: "POST",
                url: $form.attr('action'),
                data: $formData,
                processData: false,  // tell jQuery not to process the data
                contentType: false,  // tell jQuery not to set contentType
                beforeSend: function () {
                    $('#loading_spinner').show();
                },
                success: function (response) {
                    if (response.Errors == null) {
                        //refreshTableBarang();
                        $('#close-editor-1')[0].click();
                    } else {
                        alert(response.Errors[0]);
                    }
                    $('#loading_spinner').hide();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                    var errorData = $.parseJSON(xhr.responseText);
                    if(errorData != null)
                        alert(errorData);
                    $('#loading_spinner').hide();
                }
            });
        }
        function getKategori() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetKategoriBarang", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listKategori = [];

                    $.each(data,
                        function (i, item) {
                            listKategori[i] = {
                                id: item.KODE,
                                text: item.KET
                            };
                        });

                    var kategoriSelect = $('#KATEGORI').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: listKategori,
                        onChange: function (value) {
                            $('#Stf02_Sort1').val(value);
                            $('#Stf02_KET_SORT1').val($("#KATEGORI option:selected").text());
                        }
                    });

                    kategoriSelect[0].selectize.setValue($('#Stf02_Sort1').val());
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }

        function getMerk() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetMerkBarang", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listMerk = [];

                    $.each(data,
                        function (i, item) {
                            listMerk[i] = {
                                id: item.KODE,
                                text: item.KET
                            };
                        });

                    var merkSelect = $('#MERK').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: listMerk,
                        onChange: function (value) {
                            $('#Stf02_Sort2').val(value);
                            $('#Stf02_KET_SORT2').val($("#MERK option:selected").text());
                        }
                    });

                    merkSelect[0].selectize.setValue($('#Stf02_Sort2').val());
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }
        function PromptBarang() {
            showPromptBarangTextBoxWindow();
        }

        function showPromptBarangTextBoxWindow() {
            var $link = '@Url.Action("PromptBarang", "Manage", new { cust = "replaceCust"})';
            $link = $link.replace("replaceCust", $('#promptHiddenField').val());

            window.open($link, "popupWindow", "width=700, height=500, scrollbars=yes");
        }
        function afterPromptDelTempBrg(val) {
            $('#txtBrg').val(val).change();
            //$('#txtCustomer').val(val2);
            //AutoCompleteBrg();
        }

        function AutoCompleteBrg() {
            var link = '@Url.Action("AutoCompleteBrg", "Manage"@*, new { brg = "replaceId", brg_mp = "replaceBrgMp" }*@)';
            //link = link.replace("replaceId", $('#txtBrg').val());
            //link = link.replace("replaceBrgMp", $('#TempBrg_BRG_MP').val());
            link += '?brg=' + $('#txtBrg').val() + '&brg_mp=' + $('#TempBrg_BRG_MP').val();
            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    if (response != null) {
                        setFormBrg(response);
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function setFormBrg(data) {
            if (data != null) {
                $('#Stf02_NAMA').val(data.NAMA);
                $('#Stf02_NAMA2').val(data.NAMA2);
                $('#Stf02_STN2').val(data.STN2);
                $('#Stf02_MINI').val(data.MINI);
                $('#Stf02_MAXI').val(data.MAXI);
                $('#Stf02_Deskripsi').val(data.Deskripsi);
                $('#Stf02_BERAT').val(data.BERAT);
                $('#Stf02_PANJANG').val(data.PANJANG);
                $('#Stf02_LEBAR').val(data.LEBAR);
                $('#Stf02_TINGGI').val(data.TINGGI);
                $('#Stf02_HJUAL').val(data.HJUAL);
                $('#Stf02_BRG').val(data.BRG);
            }
        }
    </script>
}
