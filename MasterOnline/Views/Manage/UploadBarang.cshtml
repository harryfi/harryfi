@section scripts{
    <script src="~/Content/selectize.js" type="text/javascript"></script>
    <script src="~/Content/build/js/selectivity-jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var table = $('#datatable').DataTable();
        $('#search_barang').keyup(function () {
            table.search($(this).val()).draw();
        });

        $(document).ready(function () {
            $('#promptHiddenField').val('');
            $('#txtCustomer').val('');

            $('#close-editor-1').off('click').on('click', function () {
                $('#close-editor-1')[0].disabled = true;
                $('.barang_table_section').show();
                $('.barang_editor_section').hide();
                refreshTableBarang();
            });

            //refreshTableBarang();
        });

        function refreshTableBarang() {
            var link = '@Url.Action("RefreshTableUploadBarang", "Manage", new { cust = "replaceCust" })';
            link = link.replace("replaceCust", $('#promptHiddenField').val());

            $.ajax({
                type: "GET",
                url: link,
                beforeSend: function () {
                    $('#datatable').hide();
                    $('#loading_barang_tab').show();
                },
                success: function (response) {
                    $('#table-upload-barang-partial').html(response);
                    var table = $('#datatable').DataTable();
                    $('#search_barang').keyup(function () {
                        table.search($(this).val()).draw();
                    });
                    $('#loading_barang_tab').hide();
                    $('#datatable').show();
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function PromptCustomer() {
            showPromptCustomerTextBoxWindow();
        }

        function showPromptCustomerTextBoxWindow() {
            var $link = '@Url.Action("PromptCustomer", "Manage")';
            window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
        }
        function afterPromptDelTempCust(val, val2) {
            $('#promptHiddenField').val(val);
            $('#txtCustomer').val(val2);
            refreshTableBarang();
        }

