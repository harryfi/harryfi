<div class="table-responsive" id="divTable">
<table class="table table-striped table-bordered table-hover table-fixed-column">
    <thead>
        <tr role="row">
            <th class="sorting text-center fixed-header-0" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; align-self: flex-start; ">
                <div style="width: 29px">
                    <input type="checkbox" class="cbunlink" id="checkbox_all_brg" style="align-self:flex-start; width:30px; height:28px;" />
                </div>
            </th>
            <th class="sorting_asc fixed-header-1" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 90px;">
                
                <div style="width: 104px">
                    Kode
                </div>
            </th>
            <th class="sorting fixed-header-2" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px">
                
                <div style="width: 150px">
                    Nama
                </div>
            </th>
            @foreach (var listCust in Model.akun)
            {
                var idMarket = Convert.ToInt32(listCust.NAMA);
                var namaMP = listMarket.Where(m => m.IdMarket == idMarket).SingleOrDefault().NamaMarket;
                var namaAkun = namaMP + " (" + listCust.PERSO + ")";

                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">@namaAkun</th>
            }
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 40px; max-width: 45px;">Edit</th>*@
        </tr>
    </thead>
    <tbody>
        @{
            var currentBrg = "";
        }
        @foreach (var barang in Model.barang)
        {
            if (barang.BRG != currentBrg)
            {
                currentBrg = barang.BRG;
                <tr>
                    <td class=" fixed-column-0"><input type="checkbox" class="cbunlink" id="cbb_@barang.RECNUM" style="margin-top: 20px; align-self:flex-start; width:30px; height:28px;" onclick="checkAll('@barang.RECNUM')" /></td>
                    <td class=" fixed-column-1">@barang.BRG</td>
                    <td class=" fixed-column-2">@barang.NAMABRG</td>
                    @foreach (var listCust in Model.akun)
                    {
                        var cBrg = Model.barang.Where(m => m.BRG == currentBrg && m.IDMARKET == listCust.RecNum).FirstOrDefault();
                        var brgMP = "";
                        var link = "";
                        if (cBrg != null)
                        {
                            link = cBrg.LINK;
                            brgMP = cBrg.BRG_MP;
                        };
                        <td>
                            @if (brgMP != "")
                            {
                                <input id="cb_@cBrg.RECNUM" type="checkbox" class="cb_@barang.RECNUM cbunlink cbunlink-detail" data-brg="@cBrg.RECNUM" style="float: left; width: 27px; height: 24px;" />
                                <div style="margin-left: 35px;">
                                    @brgMP
                                    @if (link != "")
                                    {
                                        <br />
                                        <a href="@link" target="_blank" rel="noopener noreferrer"> @(link.Length > 30 ? link.Substring(0,27) + "..." : link)</a>
                                    }
                                </div>
                                @*<label for="cb_@cBrg.RECNUM">@brgMP</label>*@
                            }

                        </td>

                    }
                </tr>
            }
        }
    </tbody>
</table>
