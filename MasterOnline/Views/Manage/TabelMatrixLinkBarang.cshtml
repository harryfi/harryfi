<div class="modal fade" id="ModalListBrgUnlink" tabindex="-1" role="dialog" aria-labelledby="labelModalListBrgUnlink">
    <div class="modal-dialog" role="document" style="width:60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="labelModalListBrgUnlink">Unlink Barang</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>
                            Apakah Anda yakin akan melakukan unlink untuk barang berikut:
                        </label>
                    </div>
                    <div class="col-md-12">
                        <div id="ModalListBrgUnlinkdiv">
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="closeListUnlinkBrg()">Tidak</button>
                <button type="button" class="btn btn-success" onclick="ProcessUnlinkBrg()">Ya</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="konfUnlinkBrg" tabindex="-1" role="dialog" aria-labelledby="konfUnlinkBrgLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="konfUnlinkLabel">Konfirmasi</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>
                            Untuk Konfirmasi Unlink Barang, Silahkan ketik "UNLINK" pada teks box berikut :
                        </label>
                    </div>
                    <div class="col-md-12">
                        <input id="txtConfirmUnlink" class="form-control" autofocus/>
                    </div>
                </div>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Tidak</button>
                    <button type="button" class="btn btn-success" onclick="CekTextConfirm()">Ya</button>
                </div>
            </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#checkbox_all_brg").click(function () {
            $(".cbunlink").prop('checked',
                $(this).prop('checked'));
        });
        //alert('test');
        //var $table = $('.table');
        //var $fixedColumn = $table.clone().insertBefore($table).addClass('fixed-column');

        //$fixedColumn.find('th:not(:first-child),td:not(:first-child)').remove();

        //$fixedColumn.find('tr').each(function (i, elem) {
        //    $(this).height($table.find('tr:eq(' + i + ')').height());
        //});
        $(function () {
            $('#konfUnlinkBrg').on('shown.bs.modal', function () {
                $('#txtConfirmUnlink').focus()
            });
        });
    });
    function closeListUnlinkBrg() {
        $('#ModalListBrgUnlink').modal('hide');
    }
    function checkAll(brg) {
        $(".cb_" + brg).prop('checked', $("#cbb_" + brg).prop('checked'));
    }
    function UnlinkSelectedBrg() {
        if (CheckBrgToUnlink()) {
            //alert('start unlink : ' + rows_selected);
            ConfirmUnlinkBrg(rows_selected);
        }
        else {
            alert('Anda belum memilih barang yang akan diunlink.');
        }
    }
    var rows_selected = [];
    function CheckBrgToUnlink() {
        rows_selected = [];
        $(".cbunlink-detail").each(function (i, item) {
            if ($(item).is(":checked")) {
                /*return true;*/
                rows_selected.push($(item).attr("data-brg"));
            }
        });
        if (rows_selected.length > 0) {
            return true;
        }
        return false;
    }
    function ConfirmUnlinkBrg(listBrg) {
        $('#ModalListBrgUnlink').modal('show');

        var link = '@Url.Action("ListBrgToUnlink", "Manage")';
        link += '?listbrg=' + encodeURIComponent(listBrg);
        $.ajax({
            cache: false,
            url: link,
            success: function (response) {
                $('#ModalListBrgUnlinkdiv').html(response);
            }
        });
    }
    function ProcessUnlinkBrg() {
        /* alert('start unlink : ' + rows_selected);*/
        $('#konfUnlinkBrg').modal('show');
        document.getElementById("txtConfirmUnlink").focus();
    }
    function CekTextConfirm() {
        var text = $('#txtConfirmUnlink').val();
        if (text != undefined) {
            text = text.replace('"', '').toUpperCase();
            if (text == "UNLINK") {
                var link = '@Url.Action("ProcessUnlinkByUser", "Manage")';
                link += '?listbrg=' + encodeURIComponent(rows_selected);
                $.ajax({
                    cache: false,
                    url: link,
                    success: function (response) {
                        $('#konfUnlinkBrg').modal('hide');
                        $('#ModalListBrgUnlink').modal('hide');
                        SelectProduct();
                    },
                    error: function (xhr, status, error) {
                        debugger;
                        console.log(error);
                    }
                });
            }
            else {
                alert('Untuk Konfirmasi Unlink Barang, Silahkan ketik "UNLINK" pada teks box.');
            }
        }
        else {
            alert('Untuk Konfirmasi Unlink Barang, Silahkan ketik "UNLINK" pada teks box.');
        }
    }
</script>