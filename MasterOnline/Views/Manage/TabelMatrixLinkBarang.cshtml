@using System.Globalization
@using MasterOnline.Models
@using MasterOnline.ViewModels
@model BindingMatrixBarang
@{
    //ViewBag.Title = "Matrix Barang";
    //Layout = "~/Views/Shared/_LayoutManage.cshtml";
    var context = new MoDbContext();
    var listMarket = context.Marketplaces.ToList();
}
<style>
    #loading_barang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_barang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_barang_tab">
    <div id="loading_barang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 90px;">Kode</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">Nama</th>
            @foreach (var listCust in Model.akun)
            {
                var idMarket = Convert.ToInt32( listCust.NAMA);
                var namaMP = listMarket.Where(m => m.IdMarket == idMarket).SingleOrDefault().NamaMarket;
                var namaAkun = namaMP + " (" + listCust.PERSO + ")";

                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">@namaAkun</th>
            }
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 40px; max-width: 45px;">Edit</th>*@
        </tr>
    </thead>
    <tbody>
        @{
            var currentBrg = "";
        }
        @foreach (var barang in Model.barang)
        {
            if (barang.BRG != currentBrg)
            {
                currentBrg = barang.BRG;
                <tr>
                    <td>@barang.BRG</td>
                    <td>@barang.NAMABRG</td>
                    @foreach (var listCust in Model.akun)
                    {
                            var cBrg = Model.barang.Where(m => m.BRG == currentBrg && m.IDMARKET == listCust.RecNum).FirstOrDefault();
                            var brgMP = "";
                            var link = "";
                            if (cBrg != null)
                            {
                                link = cBrg.LINK;
                                brgMP = cBrg.BRG_MP;
                            };
                        <td>@brgMP</td>

                    }
                </tr>
            }
        }
    </tbody>
</table>