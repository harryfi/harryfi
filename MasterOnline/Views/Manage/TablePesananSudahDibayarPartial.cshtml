@using System.Globalization
@model MasterOnline.ViewModels.PesananViewModel
<table id="datatable_nunggu" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 130px;">No. Order</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">Tanggal Pesanan</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 117px;">Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 90px;">Pembeli</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 80px; max-width: 50px;">Siap Kirim</th>
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 80px; max-width: 50px;">Lihat Detail</th>
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 50px; max-width: 50px;">Edit</th>*@
            @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 50px; max-width: 50px;">Hapus</th>*@
            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 50px; max-width: 50px;">Batal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pesanan in Model.ListPesanan)
        {
            //change by Tri, buyer_code = pemesan
            //var buyer = Model.ListPembeli.Single(m => m.BUYER_CODE == pesanan.NAMAPEMESAN);
            var buyer = Model.ListPembeli.FirstOrDefault(m => m.BUYER_CODE == pesanan.PEMESAN);
            //end change by Tri, buyer_code = pemesan

            var buyerNama = "";
            var buyerPerso = "";
            if (buyer != null)
            {
                buyerNama = buyer.NAMA;
                buyerPerso = buyer.PERSO;
            }

            var pelanggan = Model.ListPelanggan.FirstOrDefault(m => m.CUST == pesanan.CUST);
            var idMarket = 0;
            if (pelanggan != null)
            {
                idMarket = Convert.ToInt32(pelanggan.NAMA);
            }
            var market = Model.ListMarketplace.FirstOrDefault(m => m.IdMarket == idMarket);
            var NamaMarket = "";
            if (market != null)
            {
                NamaMarket = market.NamaMarket;
            }
            <tr>
                <td>@pesanan.NO_BUKTI</td>
                <td>@(pesanan.TGL?.ToString("dd/MM/yyyy"))</td>
                <td>@NamaMarket</td>
                <td>
                    @*@(buyer.NAMA + " (" + buyer.PERSO + ")")*@
                    @(buyerNama + " (" + buyerPerso + ")")
                </td>
                <td>@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", pesanan.NETTO)</td>
                <td class="edit-hapus-col">
                    <button class="btn btn-success" data-toggle="modal" data-target="#konfUbahStatus" onclick="passRecStatus(@pesanan.RecNum, '02', '@pesanan.NO_BUKTI')">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    </button>
                </td>
                @*<td class="edit-hapus-col">
                        <button class="btn btn-primary" onclick="editPesanan(@pesanan.RecNum)">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </td>*@
                <td class="edit-hapus-col">
                    <button class="btn btn-primary" onclick="lihatPesananSudahDibayar(@(pesanan.RecNum))">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </td>
                <td class="edit-hapus-col">
                    <button class="btn btn-warning" data-toggle="modal" data-target="#konfBatalPesanan" onclick="passRecStatus(@pesanan.RecNum, '11', '@pesanan.NO_BUKTI')">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>