@using System.Globalization
@*@model MasterOnline.ViewModels.JurnalViewModel*@
@using PagedList.Mvc
@model PagedList.IPagedList<mdlJurnal>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<style>
    #loading_jurnal_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_jurnal_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }

    @@media screen and (max-width: 445px) {
        .tbljurnal {
            width: 66%;
        }
    }

    @@media screen and (max-width: 375px) {
        .tbljurnal {
            width: 56%;
        }
    }

    @@media screen and (max-width: 325px) {
        .tbljurnal {
            width: 46%;
        }
    }

</style>
<div id="loading_jurnal_tab">
    <div id="loading_jurnal_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive tbljurnal">
    <table class="table table-striped table-bordered table-hover">
        @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 130px;">No. Bukti</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">Tanggal Jurnal</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total Debet</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total Kredit</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 60px;">Posting</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 50px; max-width: 50px;">Edit</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 50px; max-width: 50px;">Hapus</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var jurnal in Model.ListJurnal)*@
            @foreach (var jurnal in Model)
            {
                //var bukti = jurnal.BUKTI;
                //var lks = jurnal.LKS;
                //var totalDebet = 0d;
                //var totalKredit = 0d;

                //totalDebet = 0d;
                //totalKredit = 0d;

                ////foreach (var rekening in Model.ListJurnalDetail.Where(a => a.bukti.Equals(bukti) && a.lks.Equals(lks)))
                //foreach (var rekening in Model.Where(a => a.BUKTI.Equals(bukti) && a.LKS.Equals(lks)))
                //{
                //    if (rekening.DK == "D")
                //    {
                //        totalDebet += rekening.NILAI;
                //    }
                //    else
                //    {
                //        totalKredit += rekening.NILAI;
                //    }
                //}

                <tr>
                    <td>@jurnal.BUKTI</td>
                    <td>@jurnal.TGL.ToString("dd/MM/yyyy")</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", jurnal.DEBET)</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", jurnal.KREDIT)</td>
                    @if (Convert.ToString(jurnal.POSTING) == "Y")
                    {
                        <td>
                            Sudah
                        </td>
                    }
                    else
                    {
                        <td>
                            Belum
                        </td>
                    }
                    <td class="edit-hapus-col">
                        @if (Convert.ToString(jurnal.POSTING) == "Y")
                        {
                            <button class="btn btn-primary" onclick="lihatJurnal(@jurnal.RECNUM)">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary" onclick="editJurnal1(@jurnal.RECNUM)">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                    <td class="edit-hapus-col">
                        @if (Convert.ToString(jurnal.POSTING) == "Y")
                        {
                            <button class="btn btn-danger" onclick="undeleteable()">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-danger" data-toggle="modal" data-target="#konfHapusJurnal" onclick="pass(@jurnal.RECNUM)">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* add by nurul 15/5/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabeljurnalpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableJurnal1", new
       {
           page,
           search = ViewData["searchParam"]
           //pagenumber = ViewData["lastPage"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
</div>
    <script type="text/javascript">
        $(function () {
            $('#tabeljurnalpartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            $('#loading_jurnal_tab').show();
                        },
                        success: function (response) {
                            $('#table-jurnal-partial').html(response);
                            $('#loading_jurnal_tab').hide();
                        }
                    });
                }
                return false;

            });
        });
    </script>
    @* end add by nurul 15/5/2019, paging *@
