                    if ($('#cke_' + item.id).length == 0) {
                        CKEDITOR.replace(item.id);
                    }
                });
            }

            function getValueFromCKEditor() {
                for (var i in CKEDITOR.instances) {
                    CKEDITOR.instances[i].updateElement();
                }
            }


            $(function () {
                $('#kontenArea').ckeditor();
            });

            //var table = $('#datatable').DataTable();

            $('#search_addons').keyup(function () {
                table.search($(this).val()).draw();
            });

            $('#tambah_addons').on('click', function () {
                $('.addons_table_section').toggle('display');
                $('.addons_editor_section').toggle('display');
            });

            $('button>.close-btn').on('click', function () {
                $('.addons_table_section').toggle('display');
                $('.addons_editor_section').toggle('display');
            });

            if ($('.message-error').text() !== '' || @editMode === 1) {
                $('#tambah_addons').click();
            }

            $('.close-btn').click(function() {
                location.href = '@Url.Action("Tutorial_Detail")';
            });

            getKategori();
        });

        function editAddons(addonsId) {
            $modeEdit = 1;
            var link = '@Url.Action("EditTutorDetail", "Manage", new { eksId = "replaceId" })';
            link = link.replace("replaceId", addonsId);

            location.href = link;

            $.ajax({
                async: true,
                type: "GET",
                contentType: 'application/json',
                url: link,
                success: function (response) {
                    $('.addons_table_section').hide();
                    $('.addons_editor_section').show();

                    $('#Tutorial_Detail_DetailId').val(response.Tutorial_Detail.DetailId);
                    $('#Tutorial_Detail_Judul').val(response.Tutorial_Detail.Judul);
                    CKEDITOR.instances.kontenArea.setData(response.Tutorial_Detail.Konten);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        function viewTutorial(tutorialId) {
            var link = '@Url.Action("Tutorial", "Manage", new { eksId = "replaceId" })';
            link = link.replace("replaceId", tutorialId);

            location.href = link;
        }

        function pass(addonsId) {
            this.$addonsId = addonsId;
        }

        function deleteAddons() {
            var link = '@Url.Action("DeleteTutorDetail", "Manage", new { eksId = "replaceId" })';
            link = link.replace("replaceId", this.$addonsId);

            location.href = link;
        }

        function getValueFromCKEditor() {
            for (var i in CKEDITOR.instances) {
                CKEDITOR.instances[i].updateElement();
            }
        }

        function SaveData() {
            //cek validasi
            getValueFromCKEditor();
            $.ajax({
            });
        }

        function getKategori() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCategory", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var addonsList = [];
                    $.each(data,
                        function (i, item) {
                            addonsList[i] = {
                                id: item.IdKategori,
                                text: item.Nama_Kategori,
                            };
                        });

                    var addonsSelect = $('#Kategori').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: addonsList,
                        onChange: function (value) {
                            $('#namakategori').val(value);
                            $('#Kategori').val($("#Kategori option:selected").text());
                        }
                    });

                    addonsSelect[0].selectize.setValue($('#namakategori').val());
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });


        }
    </script>
}