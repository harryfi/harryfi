    @* add by nurul 15/5/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelfakturtempopartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableFakturTempo", new
       {
           page,
           search = ViewData["searchParam"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#tabelfakturtempopartialpager').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_faktur_tempo_tab').show();
                    },
                    success: function (response) {
                        $('#table-faktur-tempo-partial').html(response);
                        $('#loading_faktur_tempo_tab').hide();
                    }
                });
            }
            return false;

        });
    });
</script>
