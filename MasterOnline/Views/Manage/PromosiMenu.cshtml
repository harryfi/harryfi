        function modeEditTd() {
            $('.harga-promosi-barang').addClass('editable');
            $('#table_tambah_promosi > tbody > tr > td.editable').prop('contentEditable', true);
            $('#table_tambah_promosi > tbody > tr > td.editable').on('click', function () {
                var $this = $(this);
                var $class = $this.attr('class');
                var $inputClass = '';
                var $angka = convertToAngka($this.text());

                if ($class == 'harga-promosi-barang editable') {
                    $inputClass = 'harga-promosi-input';
                }

                var $input = $('<input>', {
                    'class': $inputClass,
                    value: $this.val(),
                    type: 'number',
                    blur: function () {
                        if (this.value === '') {
                            if ($class === 'harga-promosi-barang editable') {
                                $this.html(convertToRupiah(0) + '<input data-val="true" data-val-number="The field HARGA_PROMOSI must be a number." data-val-required="The HARGA_PROMOSI field is required." id="PromosiDetail_HARGA_PROMOSI" name="PromosiDetail.HARGA_PROMOSI" type="hidden" value="">');
                            }
                        } else {
                            if ($class === 'harga-promosi-barang editable') {
                                $this.html(convertToRupiah(this.value) + '<input data-val="true" data-val-number="The field HARGA_PROMOSI must be a number." data-val-required="The HARGA_PROMOSI field is required." id="PromosiDetail_HARGA_PROMOSI" name="PromosiDetail.HARGA_PROMOSI" type="hidden" value="">');
                            }
                        }
                    },
                    focus: function() {
                        if ($angka == 0) {
                            this.value = '';
                        } else {
                            this.value = $angka;
                        }
                    },
                    keyup: function (e) {
                        if (e.which === 13) $input.blur();
                    },
                    keypress: function(e) {
                        if (e.which != 8 && e.which != 0 && e.which < 48 || e.which > 57) e.preventDefault();
                    },
                    change: function() {
                        if ($(this).attr('class') == 'harga-promosi-input') {
                            if ($(this).val() > 999999999999) {
                                $(this).val(999999999999);
                            }
                        }
                    }
                }).appendTo($this.empty()).focus();
            });
        }

        @{
            var markets = new Dictionary<string, string>();

            foreach (var marketplace in context.Marketplaces.ToList())
            {
                markets.Add(marketplace.IdMarket.ToString(), marketplace.NamaMarket);
            }
        }

        var $marketCollection = @Html.Raw(Json.Encode(markets));

        function getMarketplace() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetPelangganAkun", "Manage")',
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var customerList = [];

                    $.each(data,
                        function (i, item) {
                            var $namaMarket = $marketCollection[item.NAMA];

                            customerList[i] = {
                                id: item.CUST,
                                text: $namaMarket + " (" + item.PERSO + ")",
                                term: item.TOP
                            };
                        });

                    var custSelect = $('#CUSTOMER').selectize({
                        valueField: 'id',
                        searchField: 'text',
                        options: customerList,
                        onChange: function (value) {
                            if (value == null) {
                                $("#Promosi_NAMA_MARKET").val(null);
                            } else {
                                $("#Promosi_NAMA_MARKET").val(value);
                            }
                            $('#btn-simpan-perubahan-row').show();
                        },
                    });
                    //change by calvin 7 juni 2018, set silent jadi true, agar event onchange tidak jalan saat set Promosi_NAMA_MARKET saat buka form promosi
                    custSelect[0].selectize.setValue($('#Promosi_NAMA_MARKET').val(),true);
                    //end change by calvin 7 juni 2018


                    $('#btn-simpan-perubahan-row').hide();
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }

