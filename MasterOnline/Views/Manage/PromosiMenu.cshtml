<div class="row" id="promosi_section">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row promosi_table_section">
            <div class="col-lg-4 col-sm-6">
                <div class="input-group">
                    <input id="search_promosi" type="text" class="form-control" placeholder="Pencarian">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-lg-8 col-sm-6">
                <div class="pull-right">
                    <button type="button" class="btn btn-default" id="refresh_promosi" data-style="expand-right">
                        <span>Refresh</span>
                    </button>
                    <button class="btn btn-primary btn_tambah_data" id="tambah_promosi">Tambah Baru</button>
                </div>
            </div>
        </div>
        <div class="row promosi_table_section" style="margin-top: 5px;">
            <div class="col-sm-12" id="table-promosi-partial">
                @Html.Partial("TablePromosiPartial")
            </div>
        </div>
        <div class="row promosi_editor_section" style="display: none;">
            <div class="col-lg-12">
                <div class="page-editor">
                    <h2 class="editor-title">Promosi</h2>
                    <span class="title-accent"></span>
                    <button id="close-editor-1" type="button" class="pull-right page-close">
                        <span class="close-btn thick"></span>
                    </button>
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        foreach (var modelError in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                        {
                            <div class="alert alert-danger">
                                <span class="message-error">@modelError.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                    @using (Html.BeginForm("SavePromosi", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-promosi" }))
                    {
                        <div id="form-partial">
                            @Html.Partial("BarangPromosiPartial")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

