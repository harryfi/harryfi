        function getDataBarang() {
            var link = '@Url.Action("GetDataBarangPromosi", "Manage", new { promoId = "replaceId" })';
            link = link.replace("replaceId", $('#Promosi_RecNum').val());

            $.ajax({
                type: "GET",
                url: link,
                contentType: 'application/json',
                cache: false,
                success: function (data) {
                    var listKodeBarang = [];

                    $.each(data,
                        function (i, item) {
                            listKodeBarang[i] = {
                                id: item.BRG,
                                //change by nurul 27/11/2018 (tampilin nama barang 2) -- text: item.BRG + ' (' + item.NAMA + ')'
                                text: item.BRG + ' (' + item.NAMA + ' ' + item.NAMA2 + ')'
                            };
                        });

                    $('#BRG').selectivity({
                        allowClear: true,
                        items: listKodeBarang,
                        placeholder: 'Harap pilih'
                    }).change(function () {
                        var val = $(this).selectivity('value');
                        var $trId = $(this).closest('tr').attr('data-promosi-id');
                        var $trElement = 'tr[data-promosi-id="' + $trId + '"]';

                        if (val != null) {
                            $.each(data,
                                function (i, item) {
                                    if (item.BRG === val) {
                                        if (item.NAMA2 == null)
                                            $($trElement + ' .nama-barang').text(item.NAMA + " ");
                                        else
                                            $($trElement + ' .nama-barang').text(item.NAMA + " " + item.NAMA2);

                                        $($trElement + ' .harga-barang').html(convertToRupiah(item.HJUAL) + '<input data-val="true" data-val-number="The field HARGA_NORMAL must be a number." data-val-required="The HARGA_NORMAL field is required." id="PromosiDetail_HARGA_NORMAL" name="PromosiDetail.HARGA_NORMAL" type="hidden" value="">');
                                        return;
                                    }
                                });

                            $($trElement + ' .btn-primary').removeAttr('disabled');
                            offTab();
                            modeEditTd();
                        } else {
                            $($trElement + ' .nama-barang').text('-');
                            $($trElement + ' .harga-barang').html('0,00' + '<input data-val="true" data-val-number="The field HARGA_NORMAL must be a number." data-val-required="The HARGA_NORMAL field is required." id="PromosiDetail_HARGA_NORMAL" name="PromosiDetail.HARGA_NORMAL" type="hidden" value="">');
                            $($trElement + ' .harga-promosi-barang').html('0,00' + '<input data-val="true" data-val-number="The field HARGA_PROMOSI must be a number." data-val-required="The HARGA_PROMOSI field is required." id="PromosiDetail_HARGA_PROMOSI" name="PromosiDetail.HARGA_PROMOSI" type="hidden" value="">');

                            $($trElement + ' .btn-primary').attr('disabled', 'disabled');
                            onTab();
                            modeEditOff();
                        }
                    });
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        }

