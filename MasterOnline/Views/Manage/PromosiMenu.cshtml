@model MasterOnline.ViewModels.PromosiViewModel
@{
    ViewBag.Title = "Promosi Barang";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";

    var context = new MoDbContext();
}

@section styles
{
    <link href="~/Content/build/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/build/css/selectivity-jquery.min.css" rel="stylesheet" />
    <link href="~/Content/selectize.css" rel="stylesheet" />

    <style>
        .input-group {
            margin-bottom: 0;
        }

        .btn-success[disabled]:hover {
            background: #6ad6bf;
            border-color: #6ad6bf;
        }

        table#table_tambah_promosi thead tr {
            background-color: #c7f1f5;
        }

        .harga-promosi-input {
            width: 120px;
        }

        .persen-promosi-input {
            width: 50px;
        }

        .batas-pembelanjaan-input {
            width: 50px;
        }

        #GUDANG,
        #GUDANG .selectivity-single-select-input {
            width: 100px !important;
        }

        #promosi_section {
            background-color: #fff;
            padding: 20px;
            margin-top: 58px;
        }

        @@media screen and (max-width: 767px) {
            .modalphapusp {
                width: 50%;
            }

            .modalresponsive {
                width: 100%;
            }
        }
    </style>
}

<div class="row" id="promosi_section">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row promosi_table_section">
                <div class="col-lg-4 col-sm-6" style="margin-bottom:7px;">
                    <div class="input-group">
                        <input id="search_promosi" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_promosi_click" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-lg-8 col-sm-6">
                    <div class="pull-right">
                        <button class="btn btn-primary btn_tambah_data" id="tambah_promosi">Tambah Baru</button>
                    </div>
                </div>
            </div>
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#tab_content1" id="promosi-tab" role="tab" data-toggle="tab" aria-expanded="true">Promosi</a>
                </li>
                <li role="presentation" class="active">
                    <a href="#tab_content2" id="barang-tab" role="tab" data-toggle="tab" aria-expanded="true">Barang</a>
                </li>
            </ul>
        </div>
        <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="pesanan-tab">              
                <div class="row promosi_table_section" style="margin-top: 5px;">
                    <div class="col-sm-12 addpixel" id="table-promosi-partial">
                        @*@Html.Partial("TablePromosiPartial")*@
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane fade active in" id="tab_content2" aria-labelledby="barang-tab">             
                <div class="row promosi_table_section" style="margin-top: 5px;">
                    <div class="col-sm-12 addpixel" id="table-barang-promosi-partial">
                        @*@Html.Partial("TablePromosiPartial")*@
                    </div>
                </div>
            </div>
        </div>

        <div class="row promosi_editor_section" style="display: none;">
            <div class="col-lg-12 modalresponsive">
                <div class="page-editor">
                    <h2 class="editor-title">Promosi</h2>
                    <span class="title-accent"></span>
                    <button id="close-editor-1" type="button" class="pull-right page-close">
                        <span class="close-btn thick"></span>
                    </button>
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        foreach (var modelError in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                        {
                            <div class="alert alert-danger">
                                <span class="message-error">@modelError.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                    @using (Html.BeginForm("SavePromosi", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-promosi" }))
                    {
                        <div id="form-partial">
                            @*@Html.Partial("BarangPromosiPartial")*@
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

