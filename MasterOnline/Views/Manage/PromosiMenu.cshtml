                $('#Promosi_TGL_AKHIR').val() != '' &&
                $('#Promosi_NAMA_MARKET').val() != '' &&
                $('#Promosi_NAMA_PROMOSI').val() != ''
            ) {
                if (moment($('#Promosi_TGL_AKHIR').val(), 'DD-MM-YYYY') < moment($('#Promosi_TGL_MULAI').val(), 'DD-MM-YYYY')) {
                    alert('Tanggal Akhir harus lebih besar dari Tanggal Mulai');
                    return false;
                }
                if ($('#CUSTOMER').text().toUpperCase().includes('LAZADA (')) {
                    var dtMonth = new Date().getMonth() + 1;
                    var bln = getTwoDigitDateFormat(dtMonth);
                    var dtDay = new Date().getDate();
                    var day = getTwoDigitDateFormat(dtDay);
                    //var bln = "";
                    //if (dtMonth < 10) {
                    //    bln = '0' + dtMonth;
                    //} else {
                    //    bln += dtMonth;
                    //}
                    if ($('#TGL_MULAI').val() != (day + '/' + bln + '/' + new Date().getFullYear())) {
                        alert('Tanggal Mulai untuk promo marketplace Lazada harus di set hari ini.');
                        return false;
                    }
                }
            } else {
                alert('Silakan isi semua field terlebih dahulu!');
                return false;
            }
            return true;
        }

        function getTwoDigitDateFormat(monthOrDate) {
            return (monthOrDate < 10) ? '0' + monthOrDate : '' + monthOrDate;
        }

