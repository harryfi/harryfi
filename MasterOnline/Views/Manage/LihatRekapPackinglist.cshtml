<body style="width:75%;margin-left:10px;margin-top:10px;">
    <div>
        <div class="row">
            <div class="col-md-12">
                <button id="print-btn" class="btn btn-success pull-right">Cetak</button>
            </div>
        </div>
    </div>
    <div>
        <table style="font-size:14px;">
            <tr>
                <td>No. Bukti :</td>
                <td style="padding-left:10px;">@Model.packingList.NO_BUKTI</td>
            </tr>
            <tr>
                <td>Tanggal :</td>
                <td style="padding-left:10px;">@Model.packingList.TGL.Value.ToString("dd/MM/yyyy")</td>
            </tr>
        </table>
    </div>
    <br />
    <div>
        <table class="table">
            @if (Model.printMode == "1")
            {
                <tr>
                    <th style="width:100px">No. Pesanan</th>
                    <th style="width:130px">Kode Barang</th>
                    <th>Nama Barang</th>
                    <th style="width:75px;text-align:center">QTY</th>
                    <th style="width:120px">Pembeli</th>
                    <th style="width:90px">Marketplace</th>
                </tr>
                <tbody>
                    @{
                        string currentData = "";
                    }
                    @foreach (var rekap in Model.listRekapBarang)
                    {
                        <tr>
                            @if (currentData == rekap.NO_PESANAN)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>@rekap.NO_PESANAN</td>
                            }
                            <td>@rekap.BRG</td>
                            <td>@rekap.NAMA_BARANG</td>
                            <td style="text-align:center">@rekap.QTY</td>
                            @if (currentData == rekap.NO_PESANAN)
                            {
                                <td></td>
                                <td></td>
                            }
                            else
                            {
                                <td>@rekap.PEMBELI</td>
                                <td>@rekap.MARKETPLACE</td>
                            }
                            @{
                                currentData = rekap.NO_PESANAN;
                            }
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr>
                    <th style="width:130px">Kode Barang</th>
                    <th>Nama Barang</th>
                    <th style="width:75px;text-align:center">QTY</th>
                </tr>
                <tbody>
                    @foreach (var rekap in Model.listRekapBarang)
                    {
                        <tr>
                            <td>@rekap.BRG</td>
                            <td>@rekap.NAMA_BARANG</td>
                            <td style="text-align:center">@rekap.QTY</td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
    <script src="~/Content/vendors/jquery/dist/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#print-btn').click(function () {
                $(this).hide();
                window.print();
            });

            window.onafterprint = function () {
                $('#print-btn').show();
            }
            //add by nurul 29/4/2019
            function overrideKeyDown(winEvent) {
                var keyCode;

                if (!winEvent) {
                    // IE code
                    winEvent = window.event;
                    keyCode = winEvent.keyCode;
                }
                else {
                    keyCode = winEvent.which;
                }

                if (keyCode == 80 && winEvent.ctrlKey) {
                    //alert('Printer Friendly Page');
                    $('#print-btn').click();
                    return false;
                }
            }

            document.onkeydown = overrideKeyDown;

        });
    </script>
</body>
