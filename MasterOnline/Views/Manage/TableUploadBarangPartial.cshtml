@if (Model.PageCount > 1)
{
    <div id="tabeluploadbarangpartialpager" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableUploadBarang", new
   {
       page,
       search = ViewData["searchParam"]
   }),
        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabeluploadbarangpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                var link = this.href;
                link += "&cust=replaceCust";
                link = link.replace("replaceCust", $('#promptHiddenField').val());

                $.ajax({
                    //url: this.href,
                    url: link, 
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_uploadbarang_tab').show();
                    },
                    success: function (response) {
                        $('#table-upload-barang-partial').html(response);
                        $('#loading_uploadbarang_tab').hide();
                    }
                });
            }
            return false;

        });
    });
</script>
