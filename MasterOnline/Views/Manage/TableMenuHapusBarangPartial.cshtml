@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels
@model PagedList.IPagedList<STF02>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}
<style>
    #loading_hapus_barang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_hapus_barang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }

    @@media screen and (max-width: 445px) {
        .brgtblbrg {
            width: 53%;
        }
    }

    @@media screen and (max-width: 375px) {
        .brgtblbrg {
            width: 45%;
        }
    }

    @@media screen and (max-width: 325px) {
        .brgtblbrg {
            width: 38%;
        }
    }

</style>
<div id="loading_hapus_barang_tab" class="text-center">
    <div id="loading_hapus_barang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page_1" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive brgtblbrg">
    <label id="text-check-barang" class="pull-left" @*style="margin-left:10px;"*@></label>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr role="row">
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 40px; max-width: 40px; align-self:flex-start"><input type="checkbox" class="dt-checkboxes-select-all" id="all_checkbox_delete" style="margin-top: 20px; align-self:flex-start; width:30px; height:28px;" /></th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 50px;">Gambar</th>
                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 90px;">Kode</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">Nama</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 117px;">Kategori</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 85px;">Merk</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 110px;">Harga Jual</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 80px;">Terakhir Edit</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 40px; max-width: 45px;">Hapus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var barang in Model)
            {
                var namaBarang = barang.NAMA + ' ' + barang.NAMA2;
                <tr>
                    <td style="text-align:center;">
                        <input type="checkbox" class="dt-checkboxes center checkbox_delete" id="chekbox-@(barang.ID)" data-recnum="@barang.ID" data-kode="@barang.BRG" style="align-self:flex-start; width:30px; height:28px;" />
                    </td>
                    <td class="text-center"><img width="50" height="50" src="@barang.LINK_GAMBAR_1" /></td>
                    <td>@barang.BRG</td>
                    <td>@barang.NAMA @barang.NAMA2</td>
                    <td>@barang.KET_SORT1</td>
                    <td>@barang.KET_SORT2</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", barang.HJUAL)</td>
                    <td>@(barang.Tgl_Input?.ToString("dd/MM/yyyy"))</td>
                    <td class="edit-hapus-col">
                        <button class="btn btn-danger hapus-detail" onclick="openModalKonfirmDeleteSatuan('@barang.ID')">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @* add by calvin 24 mei 2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelhapusbarangpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableMenuHapusBarang", new
       {
           page,
           search = ViewData["searchParam"],
           take = ViewData["takeRecord"],
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
</div>
    <script type="text/javascript">
        $(function () {
            $('#tabelhapusbarangpartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    var link = this.href;

                    $.ajax({
                        //url: this.href,
                        url: link,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            $('#table-hapus-partial').hide();
                            $('#loading_hapus_barang_tab').show();
                        },
                        success: function (response) {
                            $('#table-hapus-partial').html(response);
                            $('#loading_hapus_barang_tab').hide();
                            $('#table-hapus-partial').show();
                        }
                    });
                    return false;
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#all_checkbox_delete").click(function () {
                $(".checkbox_delete").prop('checked',
                    $(this).prop('checked'));
                var countCheck = $(".checkbox_delete").length;
                if ($("#all_checkbox_delete").prop('checked') == true) {
                    $(".hapus-detail").attr('disabled', 'disabled');
                    $('#text-check-barang').text(countCheck + ' Barang Terpilih');
                } else {
                    $(".hapus-detail").removeAttr('disabled');
                    $('#text-check-barang').text('');
                }
            });
            $(".checkbox_delete").each(function (i, item) {
                $(item).off('click').on('click', function () {
                    var countCheckDetail = 0;
                    if ($(item).prop('checked') == true) {
                        $(".hapus-detail").attr('disabled', 'disabled');

                        var cekTrue = [];
                        $(".checkbox_delete").each(function (z, chk) {
                            if ($(chk).prop('checked') == true) {
                                cekTrue.push($(chk).attr("data-recnum"));
                            }
                        });
                        if (cekTrue.length == 0) {
                            $('#text-check-barang').text('');
                        } else {
                            countCheckDetail = cekTrue.length;
                            $('#text-check-barang').text(countCheckDetail + ' Barang Terpilih');
                        }
                    } else {
                        var cekTrue = [];
                        $(".checkbox_delete").each(function (z, chk) {
                            if ($(chk).prop('checked') == true) {
                                cekTrue.push($(chk).attr("data-recnum"));
                            }
                        });
                        if (cekTrue.length == 0) {
                            $(".hapus-detail").removeAttr('disabled');
                            $('#text-check-barang').text('');
                        } else {
                            countCheckDetail = cekTrue.length;
                            $('#text-check-barang').text(countCheckDetail + ' Barang Terpilih');
                        }
                    }
                });
            });
        });
    </script>
    @* end add by calvin 24 mei 2019, paging *@
