@model MasterOnline.ViewModels.TutorialDetailViewModel
@{
    ViewBag.Title = "Tutorial_List";
    //Layout = "~/Views/Shared/_LayoutAdminCS.cshtml";
}

<style>
    .reports-tile {
        padding-top: 10px;
        height: auto;
        position: relative;
        display: block;
        margin-bottom: 10px;
        border: 1px solid #E4E4E4;
        overflow: hidden;
        border-radius: 5px;
        background: #FFF;
        transition: all .3s ease-in-out;
    }

        .reports-tile .title {
            position: relative;
            margin: 0;
            margin-left: 10px;
            z-index: 5;
            padding: 0
        }

        .reports-tile hr {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .reports-tile .items {
            position: relative;
            margin: 0;
            margin-left: 15px;
            margin-right: 15px;
            z-index: 5;
            padding: 0
        }

            .reports-tile .items .col-md-12 {
                margin-bottom: 10px;
            }

                .reports-tile .items .col-md-12 h4 {
                    font-weight: bold;
                }
</style>

<div class="col-lg-4 col-sm-6">
    <div class="input-group">
        <input id="search_tutor" type="text" class="form-control" placeholder="Pencarian">
        <span class="input-group-btn">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
    <br />
    <h2>Panduan Pemakaian Master Online</h2>
    <br />
</div>
@{
    foreach (var b in Model.selectTutorialHeaders.ToList())
    {
<div class="row">
    <div class="animated flipInY col-lg-12 col-md-12 col-sm-6 col-xs-12">
        <div class="reports-tile">
            <div class="title" id="panelId">
                <h2>@b.NamaKategori</h2>
            </div>
            <hr />
            @foreach (var list in Model.selectTutorialDetails.ToList().Where(a => a.CategoryId == b.IdKategori)) //
            {
            <div class="items">
                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <a href="@Url.Action(" Tutorial", "Manage" , new { eksId=list.DetailId })">
                                <h4 id="judul">
                                    @list.Judul
                                </h4>
                                <h5>Terakhir Edit : @list.CreatedDate.ToString("dd/MM/yyyy")</h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
    }
}

@section scripts
{
<script>
    $(document).ready(function () {
        $("#search_tutor").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $('h2, h4').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

