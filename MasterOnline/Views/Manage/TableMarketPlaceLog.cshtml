@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels

@model PagedList.IPagedList<API_LOG_MARKETPLACE_HANGFIRE>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}

<style>
    @@media screen and (max-width: 445px) {
        .mrktlog {
            width: 66%;
        }
    }

    @@media screen and (max-width: 375px) {
        .mrktlog {
            width: 58%;
        }
    }

    @@media screen and (max-width: 325px) {
        .mrktlog {
            width: 50%;
        }
    }
</style>

<script type="text/javascript">

    function failedJobRetry(jobid) {
        var retryid = $('#btnRetryJob' + jobid);
        retryid.attr("disabled", true);

        var link = '@Url.Action("RequeueFailedJobLog", "Manage", new { nourut = "replaceNoUrut" })';
        link = link.replace("replaceNoUrut", jobid);

        $.ajax({
            type: "POST",
            url: link,
            contentType: 'application/json',
            cache: false,
            beforeSend: function () {
                $('#loading_barang_tab').show();
            },
            success: function (response) {
                refreshTableLog();
            },
            error: function (response) {
                retryid.attr("disabled", false);
            }
        });

    }
</script>
<div id="loading_barang_tab" class="loading_barang_tab_class">
    <div id="loading_barang_tab_image" class="loading_barang_tab_image_class">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive mrktlog">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr role="row">
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Marketplace</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 100px;">Akun Marketplace</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 70px;">Kategori</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Aktivitas</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 120px;">Tanggal</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 200px;">Pesan Error</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 45px;">Coba Lagi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aktivitas in Model)
            {
                <tr>
                    <td style="text-align:center">@aktivitas.Marketplace</td>
                    <td style="text-align:center">@aktivitas.AkunMarketplace</td>
                    <td style="text-align:center">@aktivitas.REQUEST_CATEGORY</td>
                    <td style="text-align:center">@aktivitas.REQUEST_ACTION</td>
                    <td style="text-align:center">@aktivitas.REQUEST_DATETIME</td>
                    <td style="text-align:center">@aktivitas.REQUEST_RESULT</td>
                    <td style="text-align:center">
                        <button class="btn btn-default" type="button" style="border:1px;padding:2px 8px 2px 8px;margin:0px" title="Coba Lagi"
                                onclick="failedJobRetry(@aktivitas.REQUEST_ID)">
                            <span class="glyphicon glyphicon-repeat"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @* add by calvin 22 april 2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelbarang1partialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableLog", new
       {
           page,
           search = ViewData["searchParam"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
</div>
    <script type="text/javascript">
        $(function () {
            $('#tabelbarang1partialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            //$('#table-barang-1-partial').hide();
                            $('#loading_barang_tab').show();
                        },
                        success: function (response) {
                            $('#table-market-log-partial-div').html(response);
                            $('#loading_barang_tab').hide();
                        }
                    });
                    return false;
                }
            });
        });
    </script>
    @* end add by calvin 22 april 2019, paging *@


