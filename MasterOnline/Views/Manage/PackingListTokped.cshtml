@using System.Globalization
@*@using MasterOnline.ViewModels*@
@using PagedList.Mvc
@model PagedList.IPagedList<PackingPerMP>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<script type="text/javascript">
    $(document).ready(function () {
        if ($('#PackingListTokpedFound')) {
            if (parseInt($('#PackingListTokpedFound').val()) > 0) {
                $('#li_pesanan_tokped_tab_focus').show().on('click', function () {
                    $('#tokped_packing_cust_tabs li:first').find('a').click();
                });
            }
        }
    });
    function RequestPickupPackingTokped(cust) {
        $('#btnProsesTokped_' + cust).attr("disabled", true);
        var $link = '@Html.Raw(Url.Action("RequestPickupTokpedPerPacking", "Manage", new { cust = "replaceCust", bukti = "replaceBuktiPacking" }))';
        $link = $link.replace("replaceCust", encodeURIComponent(cust));
        $link = $link.replace("replaceBuktiPacking", encodeURIComponent($('#packingList_NO_BUKTI').val()));

        $.ajax({
            url: $link,
            type: 'GET',
            beforeSend: function () {
                //$('#loading_barang_tab').show();
            },
            success: function (response) {
                //$('#loading_barang_tab').hide();
            },
            complete: function () {
                $('#btnProsesTokped_' + cust).attr("disabled", false);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }
</script>
@{
    var distinctCust = Model.Select(p => new { p.CUST, p.NAMA_CUST }).Distinct().ToList();
}
<div class="row">
    <div class="col-12">
        <ul id="tokped_packing_cust_tabs" class="nav nav-tabs">
            @foreach (var item in distinctCust)
            {
                <li><a data-toggle="tab" href="#tokped_tab_content__@(item.CUST)">@(item.NAMA_CUST)</a></li>
            }
        </ul>
        <div class="tab-content">
    @{
        var PackingListTokpedFound = distinctCust.Count();
    }
    @Html.TextBox("PackingListTokpedFound", PackingListTokpedFound, new { @class = "form-control", disabled = "disabled", @style = "display:none;" })
    @foreach (var item in distinctCust)
    {
        <div id="tokped_tab_content__@(item.CUST)" class="tab-pane fade in">
            <input id="txt_last_page__@(item.CUST)" type="hidden" class="form-control" value="@ViewData["LastPage"]">
            <div class="modal fade" id="modalPrintTokped__@(item.CUST)" tabindex="-1" role="dialog" aria-labelledby="modalPrintLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="modalPrintLabel">Print Pesanan Tokped</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row text-center">
                                <input type="radio" name="printType" value="0" checked />Rekap per Barang<br />
                                <input type="radio" name="printType" value="1" />Detail per Pesanan<br />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                            @*<button type="button" class="btn btn-success" onclick="printRekap();">Print</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <input id="search_table_packing_pesanan_tokped__@(item.CUST)" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_table_packing_pesanan_tokped_button__@(item.CUST)" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-8" style="text-align:right">
                    <button id="btnProsesTokped_@(item.CUST)" type="button" class="btn btn-primary" onclick="RequestPickupPackingTokped('@(item.CUST)')">Request Pickup</button>
                    @*<button id="btnProsesTokped__@(item.CUST)" type="button" class="btn btn-primary" onclick="RequestPickupPackingTokped('@(item.CUST)')">Request Pickup</button>
                        <button id="btnPrintTokped__@(item.CUST)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPrintTokped">Print</button>*@
                </div>
            </div>
            <div class="hscroll table-responsive tbljurnal">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20%;">No. Pesanan</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 20%;">No Referensi</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 35%;">Nama Pemesan</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 15%;">Kurir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Where(p => p.CUST == item.CUST).ToList())
                        {
                            <tr>
                                <td>@order.no_bukti</td>
                                <td>@order.no_referensi</td>
                                <td>@order.nama_pemesan</td>
                                <td>@order.kurir</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
    </div>
</div>