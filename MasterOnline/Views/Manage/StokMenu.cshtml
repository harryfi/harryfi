                    } else {
                        $total.closest('div').append('<span class="text-danger">total tidak boleh 0!</span>');
                    }
                    $isValid = false;
                }
            }
            //end add by nurul 19/9/2019
            else {
                if ($Gd.closest('div').find('.text-danger').length) {
                    $Gd.closest('div').find('.text-danger').remove();
