                            $('#pBar_uploadFile').html(response.percent + '% Complete');

                            if (response.progress <= response.countAll) {
                                uploadFileExcelStockAwal(response.countAll, String(response.percent) + ";" + String(response.progress + 1), String(response.statusLoop) + ";" + String(response.statusSuccess));
                            }

