<style>
    #loading_pembeli_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_pembeli_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_pembeli_tab">
    <div id="loading_pembeli_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">

    @*<table id="datatable_buyer" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
        <thead>
            <tr role="row">
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Kode Pembeli</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 115px;">Nama Pembeli</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">Email</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Alamat</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">No. HP</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Edit</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Pilih</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var pembeli in Model.ListPembeli)*@
            @foreach (var pembeli in Model)
            {
                <tr>
                    <td>@pembeli.BUYER_CODE</td>
                    <td>@pembeli.NAMA</td>
                    <td>@pembeli.EMAIL</td>
                    <td>@pembeli.AL</td>
                    <td>@pembeli.TLP</td>
                    <td class="edit-hapus-col">
                        <button class="btn btn-primary" onclick="editPembeli(@pembeli.RecNum)">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </td>
                    @*<td class="edit-hapus-col">
                    <button class="btn btn-danger" data-toggle="modal" data-target="#konfHapusPembeli" onclick="pass(@pembeli.RecNum, '@pembeli.NAMA (@pembeli.BUYER_CODE)')">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>*@
                    <td class="edit-hapus-col">
                        <button class="btn btn-primary" onclick="pilihPrompt('@pembeli.BUYER_CODE')">
                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* add by nurul 30/4/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelpembelipartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTableBuyerPopUp", new
       {
           page,
           search = ViewData["searchParam"]
       }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = "<<",
                LinkToPreviousPageFormat = "prev",
                LinkToNextPageFormat = "next",
                LinkToLastPageFormat = ">>",
                DisplayEllipsesWhenNotShowingAllPageNumbers = false
            })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
    <script type="text/javascript">
        $(function () {
            $('#tabelpembelipartialpager').on('click', 'a', function () {
                if (this.href != "") {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        beforeSend: function () {
                            //$('#table-barang-1-partial').hide();
                            $('#loading_pembeli_tab').show();
                        },
                        success: function (response) {
                            $('#table-buyer-popup').html(response);
                            $('#loading_pembeli_tab').hide();
                            //$('#table-barang-1-partial').show();
                        }
                    });
                }
                return false;
            });
        });
    </script>
    @* end add by nurul 30/4/2019, paging *@
