@using PagedList.Mvc
@using MasterOnline.Models
@model PagedList.IPagedList<mdlPackinglist>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;
}
<style>
    #loading_rekapbarang_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_rekapbarang_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }

    @@media screen and (max-width: 445px) {
        .brgtblpromo {
            width: 66%;
        }
    }

    @@media screen and (max-width: 375px) {
        .brgtblpromo {
            width: 55%;
        }
    }

    @@media screen and (max-width: 325px) {
        .brgtblpromo {
            width: 47%;
        }
    }
</style>
<div id="loading_rekapbarang_tab">
    <div id="loading_rekapbarang_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page_2" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<div class="hscroll table-responsive brgtblpromo">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr role="row">
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 100px;">Kode Barang</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 90px;">Nama Barang</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 60px;">Lokasi Rak</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 50px;">Qty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var packingList in Model)
            {
                <tr>
                    <td>@packingList.BRG</td>
                    <td>@packingList.NAMA_BARANG</td>
                    <td>@packingList.RAK</td>
                    <td>@packingList.QTY</td>
                </tr>
            }
        </tbody>
    </table>

    @* add by nurul 13/6/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelpackinglistrekapbarangpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("refreshTablePackinglistRekapBrg", new
       {
           page,
           search = ViewData["searchParam"],
           take = ViewData["takeRecord"],
       }),
                      new PagedListRenderOptions
                      {
                          LinkToFirstPageFormat = "<<",
                          LinkToPreviousPageFormat = "prev",
                          LinkToNextPageFormat = "next",
                          LinkToLastPageFormat = ">>",
                          DisplayEllipsesWhenNotShowingAllPageNumbers = false
                      })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        </div>
    }
</div>
<script type="text/javascript">

    $(document).ready(function () {

    });
    $(function () {
        $('#tabelpackinglistrekapbarangpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                var filterby = get_filterby();
                var filtervalue = get_filtervalue(filterby);
                var $link = this.href;
                $link += "&filter=replaceFilter&filtervalue=replaceValueFilter&drTgl=replacedrTgl&sdTgl=replacesdTgl";
                $link = $link.replace("replaceFilter", encodeURIComponent(filterby));
                $link = $link.replace("replaceValueFilter", encodeURIComponent(filtervalue));
                $link = $link.replace("replacedrTgl", encodeURIComponent($('#DrTanggalDashboard').val()));
                $link = $link.replace("replacesdTgl", encodeURIComponent($('#SdTanggalDashboard').val()));

                $.ajax({
                    url: $link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_rekapbarang_tab').show();
                        $('#table-rekapbarang-partial').html('');
                    },
                    success: function (response) {
                        $('#table-rekapbarang-partial').html(response);
                        $('#loading_rekapbarang_tab').hide();
                    }
                });
            }
            return false;

        });
    });
</script>
