@using System.Globalization
@*@using MasterOnline.ViewModels*@
@using PagedList.Mvc
@model PagedList.IPagedList<PackingPerMP>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
<script type="text/javascript">
    function PromptDeliveryProvLazada(r) {
        //PromptDeliveryProvLazadaTextBox = i;
        showPromptDeliveryProvLazadaTextBoxWindow(r);
    }
    var promptLazadaCust = "";
    function showPromptDeliveryProvLazadaTextBoxWindow(val) {
        promptLazadaCust = val;
        var $link = '@Url.Action("PromptDeliveryProviderLazada", "Manage", new { cust = "replaceCust" })';
        $link = $link.replace("replaceCust", val);
        window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
    }

    function afterPromptDelTempLzd(val) {
        $('#txtShipment__' + promptLazadaCust).val(val);
    }

    function cekValidasi(cust) {
        var ret = true;
        if (document.getElementById("txtShipment") != null) {
            if ($("#txtShipment__" + cust).val() == undefined || $("#txtShipment__" + cust).val() == '') {
                alert("Shipment Provider harus diisi.");
                ret = false;
                $("#btnShipment__" + cust).focus();
            }
        }
        return ret;
    }
</script>
@{
    var distinctCust = Model.Select(p => new { p.CUST, p.NAMA_CUST }).Distinct();
}

<table style="width:100%">
    <tr>
        <td style="width:100%">
            <ul id="lazada-cust-tab" class="nav nav-tabs">
                @foreach (var item in distinctCust)
                {
                    <li><a data-toggle="tab" href="#lazada_tab_content__@(item.CUST)">@(item.NAMA_CUST)</a></li>
                }
            </ul>
        </td>
    </tr>
</table>
<div class="tab-content">
    @foreach (var item in distinctCust)
    {
        <div id="lazada_tab_content__@(item.CUST)" class="tab-pane fade in">
            <input id="txt_last_page__@(item.CUST)" type="hidden" class="form-control" value="@ViewData["LastPage"]">
            <div class="modal fade" id="modalPrintLazada__@(item.CUST)" tabindex="-1" role="dialog" aria-labelledby="modalPrintLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="modalPrintLabel">Print Pesanan Lazada</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row text-center">
                                <input type="radio" name="printType" value="0" checked />Rekap per Barang<br />
                                <input type="radio" name="printType" value="1" />Detail per Pesanan<br />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                            @*<button type="button" class="btn btn-success" onclick="printRekap();">Print</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <input id="search_table_packing_pesanan_lazada__@(item.CUST)" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_table_packing_pesanan_lazada_button__@(item.CUST)" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-8" style="text-align:right">
                    <input id="txtShipment__@(item.CUST)" disabled="disabled" required="required" class="form-control" maxlength="30" data_val_length_max="30">
                    <button id="btnShipment__@(item.CUST)" class="btn btn-default" type="button" style="height: 34px;" onclick="PromptDeliveryProvLazada('@(item.CUST)')">
                        <span class="glyphicon glyphicon-option-horizontal"></span>
                    </button>
                    @*<button id="btnProsesLazada__@(item.CUST)" type="button" class="btn btn-primary" onclick="RequestPickupPackingLazada('@(item.CUST)')">Request Pickup</button>
                    <button id="btnPrintLazada__@(item.CUST)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPrintLazada">Print</button>*@
                </div>
            </div>
            <div class="hscroll table-responsive tbljurnal">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20%;">No. Pesanan</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 20%;">No Referensi</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 35%;">Nama Pemesan</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 15%;">Kurir</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 10%;">Jumlah</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.no_bukti</td>
                                <td>@order.no_referensi</td>
                                <td>@order.nama_pemesan</td>
                                <td>@order.kurir</td>
                                <td>@order.jumlah_item</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.PageCount > 1)
                {
                    <div id="tabelPackingPesananLazadaPager" class="pager">
                        @Html.PagedListPager(Model, page => Url.Action("RefreshTablePackingPesananMP", new
                           {
                               nama_cust = "7",
                               bukti = ViewData["tableBukti"],
                               page,
                               search = ViewData["searchParam"]
                               //pagenumber = ViewData["lastPage"]
                           }),
                            new PagedListRenderOptions
                            {
                                LinkToFirstPageFormat = "<<",
                                LinkToPreviousPageFormat = "prev",
                                LinkToNextPageFormat = "next",
                                LinkToLastPageFormat = ">>",
                                DisplayEllipsesWhenNotShowingAllPageNumbers = false
                            })
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    </div>
                }
            </div>
            <script type="text/javascript">
                $('#search_table_packing_pesanan_lazada').keypress(function (e) {
                    var key = e.which;
                    if (key == 13)// the enter key code
                    {
                        RefreshPackingPesananLazada();
                        return false;
                    }
                });
                $('#search_table_packing_pesanan_lazada_button').click(function () {
                    RefreshPackingPesananLazada();
                });

                $(function () {
                    $('#tabelPackingPesananLazadaPager').on('click', 'a', function () {
                        if (this.href != "") {
                            $.ajax({
                                url: this.href,
                                type: 'GET',
                                cache: false,
                                beforeSend: function () {
                                },
                                success: function (response) {
                                    $('#packing_pesanan_lazada_content').html(response);
                                }
                            });
                        }
                        return false;

                    });
                });
            </script>
        </div>
    }
</div>
    
