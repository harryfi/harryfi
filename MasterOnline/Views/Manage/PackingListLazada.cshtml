@using System.Globalization
@*@using MasterOnline.ViewModels*@
@using PagedList.Mvc
@model PagedList.IPagedList<PackingPerMP>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

}
@Html.AntiForgeryToken()
<script type="text/javascript">
    $(document).ready(function () {
        if ($('#PackingListLazadaFound')) {
            if (parseInt($('#PackingListLazadaFound').val()) > 0) {
                $('#li_pesanan_lazada_tab_focus').show().on('click', function () {
                    $('#lazada-cust-tab li:first').find('a').click();
                });
            }
        }
    });
    function RequestPickupPackingLazada(cust) {

        $('#btnProsesLazada__' + cust).attr("disabled", true);
        var $link = '@Html.Raw(Url.Action("RequestPickupLazadaPerPacking", "Manage", new { cust = "replaceCust", bukti = "replaceBuktiPacking", DeliveryProvider = "replaceDeliveryProvider" }))';
        $link = $link.replace("replaceCust", encodeURIComponent(cust));
        $link = $link.replace("replaceBuktiPacking", encodeURIComponent($('#packingList_NO_BUKTI').val()));
        $link = $link.replace("replaceDeliveryProvider", encodeURIComponent($('#txtShipment__' + cust).val()));

        $.ajax({
            url: $link,
            type: 'GET',
            beforeSend: function () {
                //$('#loading_barang_tab').show();
            },
            success: function (response) {
                //$('#loading_barang_tab').hide();

                if (response.mo_error != undefined) {
                    alert(response.mo_error);
                }
                else {
                    var textareaValue = "";

                    var adaSuccess = false;
                    var successValue = "";
                    response.listSuccess.forEach(function (item) {
                        adaSuccess = true;
                        if (successValue != "") {
                            successValue += ", ";
                        }
                        successValue += item.no_referensi;
                    });
                    if (adaSuccess) {
                        textareaValue += "Pesanan berhasil update status :</br>";
                        textareaValue += successValue + ". </br>";
                    }

                    var adaError = false;
                    var errorValue = "";
                    response.listErrors.forEach(function (item) {
                        adaError = true;
                        errorValue += item.keyname + " : " + item.errorMessage + ". </br>";
                    });
                    if (adaError) {
                        textareaValue += "</br>";
                        textareaValue += "Error Orders :</br>";
                        textareaValue += errorValue;
                    }
                    $('#modalPrintLazada__textarea__' + cust).html(textareaValue);
                    $('#modalPrintLazada__' + cust).modal('show');
                }
            },
            complete: function () {
                $('#btnProsesLazada__' + cust).attr("disabled", false);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }
    function LazadaGetLabelPerPacking(cust) {
        var $link = '@Html.Raw(Url.Action("LazadaLabelPerPacking", "Manage", new { cust = "replaceCust", bukti = "replaceBuktiPacking" }))';
        $link = $link.replace("replaceCust", encodeURIComponent(cust));
        $link = $link.replace("replaceBuktiPacking", encodeURIComponent($('#packingList_NO_BUKTI').val()));

        $.ajax({
            type: "GET",
            url: $link,
            success: function (response) {
                if (response != null) {
                    if (response.Errors == null) {
                        //$('#labelContainer').html(response);

                        //window.open(response, "_self");
                        var w = window.open('about:blank');
                        w.document.open();
                        w.document.write(response);
                        w.document.close();
                    } else {
                        alert(response.Errors[0]);
                    }
                }
                //window.open(response, "_self");
                //window.location.href(response);

            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }


    function PromptDeliveryProvLazada(r) {
        //PromptDeliveryProvLazadaTextBox = i;
        showPromptDeliveryProvLazadaTextBoxWindow(r);
    }
    var promptLazadaCust = "";
    function showPromptDeliveryProvLazadaTextBoxWindow(val) {
        promptLazadaCust = val;
        var $link = '@Url.Action("PromptDeliveryProviderLazada", "Manage", new { cust = "replaceCust" })';
        $link = $link.replace("replaceCust", val);
        window.open($link, "popupWindow", "width=600, height=400, scrollbars=yes");
    }

    function afterPromptDelTempLzd(val) {
        $('#txtShipment__' + promptLazadaCust).val(val);
    }

    function cekValidasi(cust) {
        if ($("#txtShipment__" + cust).val()) {
            RequestPickupPackingLazada(cust);
        }
        else {
            alert("Delivery Provider harus dipilih terlebih dahulu.");
        }
    }
</script>
@{
    var distinctCust = Model.Select(p => new { p.CUST, p.NAMA_CUST }).Distinct().ToList();
}
<table style="width:100%">
    <tr>
        <td style="width:100%">
            <ul id="lazada-cust-tab" class="nav nav-tabs">
                @foreach (var item in distinctCust)
                {
                    <li><a data-toggle="tab" href="#lazada_tab_content__@(item.CUST)">@(item.NAMA_CUST)</a></li>
                }
            </ul>
        </td>
    </tr>
</table>
<div class="tab-content">
    @{ 
        var PackingListLazadaFound = distinctCust.Count();
    }
    @Html.TextBox("PackingListLazadaFound", PackingListLazadaFound, new { @class = "form-control", disabled = "disabled", @style = "display:none;" })
    @foreach (var item in distinctCust)
    {
        <div id="lazada_tab_content__@(item.CUST)" class="tab-pane fade in">
            <input id="txt_last_page__@(item.CUST)" type="hidden" class="form-control" value="@ViewData["LastPage"]">
            <div class="modal fade" id="modalPrintLazada__@(item.CUST)" tabindex="-1" role="dialog" aria-labelledby="modalPrintLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="modalPrintLabel">Print Pesanan Lazada</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12" id="modalPrintLazada__textarea__@(item.CUST)">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                            @*<button type="button" class="btn btn-success" onclick="printRekap();">Print</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <input id="search_table_packing_pesanan_lazada__@(item.CUST)" type="text" class="form-control" placeholder="Pencarian">
                        <span class="input-group-btn">
                            <button type="button" id="search_table_packing_pesanan_lazada_button__@(item.CUST)" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-1" style="text-align:right">
                </div>
                <div class="col-md-4" style="text-align:right">
                    <div class="input-group">
                        <input id="txtShipment__@(item.CUST)" disabled="disabled" placeholder="Delivery Provider" required="required" class="form-control" maxlength="30" data_val_length_max="30">
                        <span class="input-group-btn">
                            <button id="btnShipment__@(item.CUST)" class="btn btn-default" type="button" style="height: 34px;" onclick="PromptDeliveryProvLazada('@(item.CUST)')">
                                <span class="glyphicon glyphicon-option-horizontal"></span>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2" style="text-align:right">
                    <button id="btnProsesLazada__@(item.CUST)" type="button" class="btn btn-primary" onclick="cekValidasi('@(item.CUST)')">Ready To Ship</button>
                </div>
                <div class="col-md-1" style="text-align:right">
                    @*<button id="btnPrintLazada__@(item.CUST)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPrintLazada__@(item.CUST)">Print</button>*@
                    <button id="btnPrintLazada__@(item.CUST)" type="button" class="btn btn-primary" onclick="LazadaGetLabelPerPacking('@(item.CUST)')">Print</button>
                </div>
            </div>
            <div class="hscroll table-responsive tbljurnal">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20%;">No. Pesanan</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 20%;">No Referensi</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 35%;">Nama Pemesan</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Picture: activate to sort column descending" style="width: 15%;">Kurir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Where(p => p.CUST == item.CUST).ToList())
                        {
                            <tr>
                                <td>@order.no_bukti</td>
                                <td>@order.no_referensi</td>
                                <td>@order.nama_pemesan</td>
                                <td>@order.kurir</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>