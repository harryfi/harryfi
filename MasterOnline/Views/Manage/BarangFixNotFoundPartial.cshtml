@model MasterOnline.ViewModels.PesananViewModel
@{
    var listBarang = Model.ListBarang.ToList();
    var listBarangMarket = Model.ListBarangMarket.ToList();
    var PesananDetail = Model.PesananDetail;
}
<script type="text/javascript">
</script>
@if (PesananDetail != null)
{
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-3 col-sm-3">No. Pesanan</label>
            <div class="col-md-9 col-sm-9">
                @Html.TextBox("not_found_no_bukti", PesananDetail?.NO_BUKTI, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group" style="margin-top: 5px;">
            <label class="control-label col-md-3 col-sm-3">Nama Barang</label>
            <div class="col-md-9 col-sm-9">
                @{
                    var namaDiCatatan = PesananDetail.CATATAN.Substring(PesananDetail.CATATAN.IndexOf("[") + 1);
                    namaDiCatatan = namaDiCatatan.Substring(0, namaDiCatatan.Length - 1);
                }
                @Html.TextBox("not_found_nama_barang", namaDiCatatan, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
    </div>
    <br />
    <hr style="margin-top:5px;margin-bottom:5px" />
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <i>Kode Barang</i>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            <i>Nama Barang</i>
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1">
            <i>Pilih</i>
        </div>
    </div>
    <hr style="margin-top:5px;margin-bottom:5px" />
    <div id="scrollable_div" style="height:350px">
        @foreach (var barang in Model.ListBarangMarket)
        {
            <div class="row">
                @{
                    var stf02 = listBarang.SingleOrDefault(p => p.BRG == barang.BRG);
                    var namaBarang = stf02 == null ? "" : stf02.NAMA + " " + stf02.NAMA2;
                }
                @*<div class="form-group">*@
                @Html.Label(barang.BRG, new { @class = "col-md-3 col-sm-3 col-xs-3 control-label", style = "padding-top: 11px;margin-bottom:0px;padding-bottom:5px;border-right:1px solid #e0dddd;border-bottom:1px solid #e0dddd;" })
                @Html.Label(namaBarang, new { @class = "col-md-8 col-sm-8 col-xs-8 control-label", style = "padding-top: 11px;margin-bottom:0px;padding-bottom:5px;border-right:1px solid #e0dddd;border-bottom:1px solid #e0dddd" })
                <div class="col-md-1 col-sm-1 col-xs-1" style="border-bottom:1px solid #e0dddd">
                    <button class="btn btn-primary" style="margin-bottom:1px" onclick="updateNotFound(@PesananDetail.NO_URUT,'@barang.RecNum','@barang.BRG');">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </div>
                @*</div>*@
            </div>
                    }
    </div>
                    }