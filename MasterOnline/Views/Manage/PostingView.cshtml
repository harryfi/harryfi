@using System.Globalization
@using PagedList.Mvc
@using MasterOnline.ViewModels
@model MasterOnline.LOG_IMPORT_FAKTUR

@if (Model != null)
{
<div class="row">
    <div class="col-md-12">
        <table id="table_history_posting" class="table table-bordered" role="grid">
            <thead>
                <tr role="row">
                    <th width="100">Akun</th>
                    <th width="100">Tanggal Posting</th>
                    <th width="45">Log Error</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    <tr data-log-recnum="log-@Model.RECNUM">
                        <td class="log-pengupload">
                            @Model.UPLOADER
                        </td>
                        <td class="log-tanggal">
                            @(Model.UPLOAD_DATETIME.ToString("dd/MM/yyyy HH:mm"))
                        </td>
                        <td class="log-history" style="text-align:center">
                            <button type="button" class="btn btn-primary" onclick="downloadLogPosting('@Model.LOG_FILE')">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}
else
{
    <h4>Tidak ada log posting.</h4>
}