                        }
                    },
                    focus: function () {
                        if ($angka == 0) {
                            this.value = '';
                        } else {
                            this.value = $angka;
                        }
                    },
                    keyup: function (e) {
                        if (e.which === 13) $input.blur();
                    },
                    keypress: function(e) {
                        if (e.which != 8 && e.which != 0 && e.which < 48 || e.which > 57) e.preventDefault();
                        if ($(this).attr('class') == 'qty-input') {
                            if ($(this).val() > 99) {
                                $(this).val(99);
                            }
                        }
                    }
                }).appendTo($this.empty()).focus();
            });
