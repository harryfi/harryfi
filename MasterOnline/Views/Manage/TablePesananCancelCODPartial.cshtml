                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 130px;">Tanggal Pesanan</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 70px;">No. Faktur</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 70px;">No. Retur</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 127px;">Marketplace</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 120px;">Pembeli</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 50px;">Tipe Pesanan</th>
                @*add by nurul 23/11/2021*@
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100px;">Gudang</th>
                @*end add by nurul 23/11/2021*@
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100px;">Kurir</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 115px;">Total</th>
                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Reason: activate to sort column ascending" style="width: 150px;">Alasan Batal</th>
                <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 80px;">Konfirmasi Batal</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var pesanan in Model.ListPesanan)*@
            @foreach (var pesanan in Model)
            {
                //var buyer = Model.ListPembeli.Single(m => m.BUYER_CODE == pesanan.PEMESAN);
                //var pelanggan = Model.ListPelanggan.FirstOrDefault(m => m.CUST == pesanan.CUST);
                //var idMarket = 0;
                //if (pelanggan != null)
                //{
                //    idMarket = Convert.ToInt32(pelanggan.NAMA);
                //}
                //var market = Model.ListMarketplace.FirstOrDefault(m => m.IdMarket == idMarket);
                //var NamaMarket = "";
                //if (market != null)
                //{
                //    NamaMarket = market.NamaMarket;
                //}
                var req_ex = "";
                if (!string.IsNullOrEmpty(pesanan.CancelReason))
                {
                    if (pesanan.CancelReason.Length < 100)
                    {
                        req_ex = pesanan.CancelReason;
                    }
                    else
                    {
                        req_ex = pesanan.CancelReason.Substring(0, 100) + "...";
                    }
                }
                //add by Tri 17 feb 2021
                var tipe_pesanan = "";
                if (pesanan.TIPE_KIRIM.Value == 1)
                {
                    tipe_pesanan = "COD";
                }
                else if (pesanan.TIPE_KIRIM.Value == 2)
                {
                    tipe_pesanan = "Preorder";
                }
                if (pesanan.N_UCAPAN != "" && pesanan.N_UCAPAN != "-" && pesanan.N_UCAPAN != " ")
                {
                    if (tipe_pesanan != "")
                    {
                        tipe_pesanan += " " + pesanan.N_UCAPAN;
                    }
                    else
                    {
                        tipe_pesanan = pesanan.N_UCAPAN;
                    }
                }
                //end add by Tri 17 feb 2021

                //add by nurul 25/8/2021
                var pembeli = "";
                var tlp = "";
                if (string.IsNullOrEmpty(pesanan.PEMBELI))
                {
                    pembeli = "";
                }
                else if (pesanan.PEMBELI.Contains("*") && !string.IsNullOrEmpty(pesanan.PEMBELI_TEMP))
                {
                    pembeli = pesanan.PEMBELI_TEMP;
                }
                else
                {
                    pembeli = pesanan.PEMBELI;
                }
                if (string.IsNullOrEmpty(pesanan.TLP))
                {
                    tlp = "";
                }
                else if (pesanan.TLP.Contains("*") && !string.IsNullOrEmpty(pesanan.TLP_TEMP))
                {
                    tlp = pesanan.TLP_TEMP;
                }
                else
                {
                    tlp = pesanan.TLP;
                }
                //end by nurul 25/8/2021
                <tr>
                    <td>@pesanan.NOSO</td>
                    <td>@pesanan.REFERENSI</td>
                    <td>@(pesanan.TGL?.ToString("dd/MM/yyyy HH:mm"))</td>
                    <td>@pesanan.NO_FAKTUR</td>
                    <td>@pesanan.NO_FAKTUR_RETUR</td>
                    @*<td>@NamaMarket</td> 'change by nurul 14/2/2019*@
                    <td>
                        @if (pesanan?.PERSO != "")
                        {
                            @(pesanan.MARKET + " (" + pesanan.PERSO + ")")
                        }
                        else
                        {
                            @pesanan.MARKET
                        }
                    </td>
                    <td>
                        @*remark by nurul 24/9/2018 @(buyer.NAMA + " (" + buyer.PERSO + ")")*@
                        @*@(buyer.NAMA + " (" + pelanggan.PERSO + ")")*@
                        @*@(buyer == null ? "" : buyer.NAMA)*@
                        @*//change by nurul 17/6/2021*@
                        @*@pesanan.PEMBELI*@

                        @*//change by nurul 25/8/2021*@
                        @*@if (!string.IsNullOrEmpty(pesanan.TLP))
                            {
                                @(pesanan.PEMBELI + " (" + pesanan.TLP + ")")
                            }
                            else
                            {
                                @pesanan.PEMBELI
                            }*@
                        @if (!string.IsNullOrEmpty(tlp))
                        {
                            @(pembeli + " (" + tlp + ")")
                        }
                        else
                        {
                            @pembeli
                        }
                        @*//end change by nurul 25/8/2021*@
                        @*//end change by nurul 17/6/2021*@
                    </td>
                    <td>@tipe_pesanan</td>
                    @*add by nurul 23/11/2021*@
                    <td>@pesanan.WAREHOUSE_ID</td>
                    @*end add by nurul 23/11/2021*@
                    <td>@pesanan.SHIPMENT</td>
                    <td style="text-align:right">@String.Format(CultureInfo.CreateSpecificCulture("id-id"), "{0:N}", pesanan.TOTAL)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(pesanan.CancelReason))
                        {
                            @*if (pesanan.CancelReason.Length < 100)
                                {
                                    @pesanan.CancelReason
                                }
                                else
                                {
                                    @(pesanan.CancelReason.Substring(0, 97) + "...")
                                    <button onclick="alert('Alasan batal :' + '@pesanan.CancelReason')"><span class="glyphicon glyphicon-option-horizontal"></span></button>
                                }*@
                            <div data-tip="'@req_ex' + ' KLIK UNTUK LIHAT DETAIL'">
                                <a class="user-link" href="#" data-toggle="modal" data-target="#modalError" onclick="LihatException('@pesanan.NOSO')">@req_ex</a>
                            </div>
                        }
                    </td>
                    <td class="edit-hapus-col">
                        @if (pesanan.NO_FAKTUR != "")
                        {
                            if (!pesanan.NO_FAKTUR_RETUR.Contains("-"))
                            {
                                <button class="btn btn-warning btnReturCOD" disabled>
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-warning btnReturCOD" onclick="passNoFaktur('@pesanan.NO_FAKTUR');">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                </button>
                            }
                        }
                        else
                        {
                            @*<button class="btn btn-warning" onclick="alert('Pesanan ini belum dibuat Faktur. Silahkan buat transaksi masuk barang.')">*@
                            <button class="btn btn-warning" onclick="ConfirmBatal('@pesanan.NOSO')">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @* add by nurul 7/5/2019, paging *@
    @if (Model.PageCount > 1)
    {
        <div id="tabelpesanancancelcodpartialpager" class="pager">
            @Html.PagedListPager(Model, page => Url.Action("RefreshTablePesananCancelCOD", new
            {
                page,
                search = ViewData["searchParam"]
            }),
             new PagedListRenderOptions
             {
                 LinkToFirstPageFormat = "<<",
                 LinkToPreviousPageFormat = "prev",
                 LinkToNextPageFormat = "next",
                 LinkToLastPageFormat = ">>",
                 DisplayEllipsesWhenNotShowingAllPageNumbers = false
             })
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>
    }
</div>
<script type="text/javascript">
    var promptFaktur = "";
    function passNoFaktur(value) {
        window.$idFaktur = value;

    }
    $(function () {
        $('#tabelpesanancancelcodpartialpager').on('click', 'a', function () {
            if (this.href != "") {
                //add by nurul 4/12/2019
                var filterby = get_pesanan_cancel_cod_filterby();
                var filtervalue = get_pesanan_cancel_cod_filtervalue(filterby);
                var link = this.href;
                link += "&filter=replaceFilter&filtervalue=replaceValueFilter";
                link = link.replace("replaceFilter", encodeURIComponent(filterby));
                link = link.replace("replaceValueFilter", encodeURIComponent(filtervalue));
                //end add by nurul 4/12/2019

                $.ajax({
                    //url: this.href,
                    url: link,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_pesanan_cancel_cod_tab').show();
                    },
                    success: function (response) {
                        $('#table-pesanan-cancel-cod-partial').html(response);
                        $('#loading_pesanan_cancel_cod_tab').hide();
                    }
                });
            }
            return false;
        });
    });

    $(function () {
        $('.btnReturCOD').click(function () {
            if (window.$idFaktur != '' ) {
                //alert(window.$idFaktur);
                promptFaktur = "1";
                var link = '@Url.Action("ListBrgForReturCODPopUp", "Manage", new { noFaktur = "replaceId" })';
                link = link.replace("replaceId", window.$idFaktur);
                //window.open(link,
                //    "popupWindow",
                //    "width=850, height=400, scrollbars=yes, resizable=no");
                var returCODPopUp = window.open(link, "Konfirmasi Retur Penjualan", "width=850, height=400, scrollbars=yes, resizable=no");
                    var timer = setInterval(function () {
                        if (returCODPopUp.closed) {
                            clearInterval(timer);
                            $('#loading_spinner').hide();
                            //window.location.href = '@Url.Action("order", "Manage")';
                            refreshTableCancelCOD();
                        }
                    }, 1000);

            }
            else
            {
                alert('Pesanan ini belum dibuat Faktur. Silahkan buat transaksi masuk barang.');
            }
        });
    });

    function ConfirmBatal(value) {
        if (confirm("Apakah Anda sudah menerima kembali barang dari pesanan batal ini?"))
        {
            var link = '@Url.Action("KonfirmBatalCOD", "Manage", new { bukti = "replaceSt"})';
            link = link.replace("replaceSt", encodeURIComponent(value));

            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    if (response.Errors[0] == "") {
                        refreshTableCancelCOD();
                    } else {
                        alert(response.Errors[0]);
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });

        }
        else {

        }
    }
</script>
@* end add by nurul 30/4/2019, paging *@


