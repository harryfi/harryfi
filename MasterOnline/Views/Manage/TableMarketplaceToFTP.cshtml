@using PagedList.Mvc
@model PagedList.IPagedList<TransferMarketplace>
@{
    string currentFilter = ViewBag.CurrentFilter;
    string currentSort = ViewBag.CurrentSort;

    var context = new MoDbContext("");


}
<style>
    #loading_marketplace_tab {
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 100;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0);
    }

    #loading_marketplace_tab_image {
        width: 20px;
        height: 20px;
        margin-top: -90px;
        margin-left: -90px;
        position: absolute;
        top: 50%;
        left: 50%;
        border-width: 30px;
        border-radius: 50%;
    }
</style>
<div id="loading_marketplace_tab">
    <div id="loading_marketplace_tab_image">
        <img src="~/Content/Images/spinner.gif" />
    </div>
</div>
<input id="txt_last_page" type="hidden" class="form-control" value="@ViewData["LastPage"]">
<table class="table table-striped table-bordered table-hover">

    @*<table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">*@
    <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 115px;">Nama Marketplace</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">Email</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 130px;">Kode SAP</th>
            <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 40px; max-width: 40px;">Edit</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var customer in Model.ListCustomer)*@
        @foreach (var rec in Model)
        {
            <tr data-barang-id="@rec.KODE">
                <td>@rec.NAMA (@rec.PERSO)</td>
                <td>@rec.EMAIL</td>
                <td>
                    <input type="text" class="kodesap-input-box" style="display: none; width: 150px;" />
                    <span class="kodesap-initial">@rec.KODE_SAP</span>
                </td>
                <td class="edit-hapus-col">
                    <button type="button" data-tip="Edit Resi" class="btn btn-primary" onclick="editKodeSap('@rec.KODE')">
                        <span class="icon-btn-edit glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@* add by nurul 14/5/2019, paging *@
@if (Model.PageCount > 1)
{
    <div id="tabelMarketplaceToSap" class="pager">
        @Html.PagedListPager(Model, page => Url.Action("RefreshTableTransferMarketplace", new
   {
       page,
       search = ViewData["searchParam"]
   }),
             new PagedListRenderOptions
             {
                 LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "prev",
            LinkToNextPageFormat = "next",
            LinkToLastPageFormat = ">>",
            DisplayEllipsesWhenNotShowingAllPageNumbers = false
        })
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    </div>
}
<script type="text/javascript">
    $(function () {
        $('#tabelMarketplaceToSap').on('click', 'a', function () {
            if (this.href != "") {
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    beforeSend: function () {
                        $('#loading_marketplace_tab').show();
                    },
                    success: function (response) {
                        $('#table-marketplace-partial').html(response);
                        $('#loading_marketplace_tab').hide();
                    }
                });
            }
            return false;
        });
    });
</script>