@using System.Globalization
@using MasterOnline.Models
@using MasterOnline.ViewModels
@model BarangViewModel
@{
    ViewBag.Title = "Aktivitas Marketplace";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}
@{
    var context = new MoDbContext();
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row" style="margin-top: 5px;">
            <div class="col-sm-12">
                <table id="datatable" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="datatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Marketplace</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 120px;">Akun Marketplace</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 90px;">Aktivitas</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Tanggal</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Status</th>
                            <th class="sorting text-center" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 85px;">Barang</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var aktivitas in Model.StatusLog)
                        {
                            var market = Model.ListMarket.FirstOrDefault(m => m.RecNum == aktivitas.IDMARKET);
                            var namaMarket = context.Marketplaces.FirstOrDefault(m => m.IdMarket.Value.ToString() == market.NAMA)?.NamaMarket;
                            var namaDepanBarang = Model?.ListStf02S?.FirstOrDefault(b => b.BRG == aktivitas.REQUEST_ATTRIBUTE_1)?.NAMA;
                            var namaBelakangBarang = Model?.ListStf02S?.FirstOrDefault(b => b.BRG == aktivitas.REQUEST_ATTRIBUTE_1)?.NAMA2;
                            <tr>
                                <td style="text-align:center">@namaMarket</td>
                                <td style="text-align:center">@market.PERSO</td>
                                <td>@aktivitas.REQUEST_ACTION</td>
                                <td>@aktivitas.REQUEST_DATETIME</td>
                                <td style="text-align:center">@aktivitas.REQUEST_STATUS</td>
                                <td>
                                    @namaDepanBarang @namaBelakangBarang
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
